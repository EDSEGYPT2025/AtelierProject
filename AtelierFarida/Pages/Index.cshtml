@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>أتيليه فريدة | أرقى فساتين الزفاف والسواريه | Atelier Farida</title>
    <meta name="description" content="أتيليه فريدة (Atelier Farida) متخصص في تصميم وتفصيل أرقى فساتين الزفاف والخطوبة والسواريه. زوري فروعنا في الخصوص، عين شمس، ومصطفى حافظ." />
    <meta name="keywords" content="أتيليه, اتيليه فريدة, فساتين زفاف الخصوص, فساتين سواريه عين شمس, تفصيل فساتين, فساتين خطوبة, Atelier Farida, أتيليهات القاهرة" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://www.atelierfarida.com" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="أتيليه فريدة | أناقة تُفصَّل خصيصًا لكِ" />
    <meta property="og:description" content="أرقى فساتين الزفاف والسواريه في القاهرة. اكتشفي فروعنا وتواصلي معنا الآن." />
    <meta property="og:image" content="https://www.atelierfarida.com/og-image.jpg" />
    <meta property="og:url" content="https://www.atelierfarida.com" />

    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "ClothingStore",
          "name": "Atelier Farida - أتيليه فريدة",
          "url": "https://www.atelierfarida.com",
          "telephone": "+201144642661",
          "address": {
            "@@type": "PostalAddress",
            "streetAddress": "عين شمس والخصوص",
            "addressLocality": "القاهرة",
            "addressCountry": "EG"
          },
          "description": "تصميم وتفصيل أزياء وفساتين زفاف راقية"
        }
    </script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;700&family=Playfair+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        :root {
            --luxury-gold: #D4AF37;
            --dark-gold: #B8860B;
            --luxury-black: #0A0A0A;
            --soft-white: #F8F9FA;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: var(--luxury-black);
            color: var(--soft-white);
            overflow-x: hidden;
        }

        .playfair {
            font-family: 'Playfair Display', serif;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1539109132304-3915502adcc1?q=80&w=1920') center/cover no-repeat;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            border-bottom: 3px solid var(--luxury-gold);
        }

        .brand-name {
            font-size: clamp(3rem, 8vw, 6rem);
            color: var(--luxury-gold);
            letter-spacing: 4px;
            margin-bottom: 1rem;
        }

        /* Buttons */
        .btn-gold {
            background-color: var(--luxury-gold);
            color: var(--luxury-black);
            padding: 12px 35px;
            font-weight: bold;
            border-radius: 0;
            transition: 0.3s;
            border: 2px solid var(--luxury-gold);
        }

            .btn-gold:hover {
                background: transparent;
                color: var(--luxury-gold);
            }

        /* Typography */
        .section-title {
            position: relative;
            padding-bottom: 15px;
            margin-bottom: 50px;
            font-weight: 700;
            color: var(--luxury-gold);
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                right: 50%;
                transform: translateX(50%);
                width: 80px;
                height: 2px;
                background: var(--luxury-gold);
            }

        .about-section {
            padding: 100px 0;
            background-color: #111;
        }

        /* Cards */
        .branch-card {
            background: #1a1a1a;
            border: 1px solid #333;
            padding: 30px;
            transition: 0.4s;
            height: 100%;
        }

            .branch-card:hover {
                transform: translateY(-10px);
                border-color: var(--luxury-gold);
            }

        .branch-icon-box {
            font-size: 1.5rem;
            color: var(--luxury-gold);
            margin-bottom: 15px;
        }

        .contact-link {
            text-decoration: none;
            color: var(--soft-white);
            display: block;
            margin-bottom: 10px;
            transition: 0.3s;
        }

            .contact-link:hover {
                color: var(--luxury-gold);
            }

        /* Social Icons */
        .social-btn {
            width: 50px;
            height: 50px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--luxury-gold);
            color: var(--luxury-gold);
            margin: 0 10px;
            border-radius: 50%;
            transition: 0.3s;
        }

            .social-btn:hover {
                background: var(--luxury-gold);
                color: var(--luxury-black);
            }

        footer {
            padding: 50px 0;
            border-top: 1px solid #222;
        }

        /* تخصيص لون التلميح ليكون ذهبي */
        .tooltip-inner {
            background-color: var(--luxury-gold) !important;
            color: var(--luxury-black) !important;
            font-weight: bold;
            font-family: 'Cairo', sans-serif;
        }

        .bs-tooltip-top .tooltip-arrow::before {
            border-top-color: var(--luxury-gold) !important;
        }

    </style>
</head>
<body>

    <header class="hero-section">
        <div class="container text-center">
            <h1 class="brand-name playfair">Atelier Farida</h1>
            <p class="lead mb-4 fs-3 fw-light">أناقة تُفصَّل خصيصًا لكِ</p>
            <a href="#branches" class="btn btn-gold btn-lg">تواصل معنا الآن</a>
        </div>
    </header>

    <section class="about-section text-center">
        <div class="container">
            <h2 class="section-title">فلسفة الأناقة في أتيليه فريدة</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <p class="fs-5 lh-lg text-secondary">
                        في <span class="text-white fw-bold">Atelier Farida</span>، نؤمن أن كل قطعة هي لوحة فنية تعبر عنكِ.
                        نحن فخورون بتقديم أفضل خدمات تصميم وتفصيل فساتين الزفاف والهوت كوتور في مصر، مع الاهتمام بأدق التفاصيل لضمان إطلالة ملكية في ليلتك المنتظرة.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 text-center bg-black">
        <div class="container">
            <h4 class="mb-4 fw-light text-uppercase" style="letter-spacing: 2px;">تابعينا على منصاتنا</h4>

            <a href="https://www.facebook.com/people/%D8%A7%D8%AA%D9%8A%D9%84%D9%8A%D8%A9-%D9%81%D8%B1%D9%8A%D8%AF%D8%A9-%D9%84%D9%81%D8%B3%D8%A7%D8%AA%D9%8A%D9%86-%D8%A7%D9%84%D8%B2%D9%81%D8%A7%D9%81-%D9%88%D8%A7%D9%84%D2%AE%D8%B7%D9%88%D8%A8%D8%A9-%D9%88%D8%A7%D9%84%D8%B3%D9%88%D8%A7%D8%B1%D9%8A%D8%A9-%D9%88%D8%A7%D9%84%D2%B5%D9%8A%D9%83%D8%A8-%D8%A7%D8%B1%D8%AA%D8%B3%D9%8A%D8%AA/100063923470805"
               target="_blank" class="social-btn">
                <i class="fab fa-facebook-f"></i>
            </a>

            <a href="https://www.tiktok.com/@@.fareda.mens.suit"
               target="_blank"
               class="social-btn"
               data-bs-toggle="tooltip"
               data-bs-placement="top"
               title="البدل الرجالى">
                <i class="fab fa-tiktok"></i>
            </a>
            <a href="https://www.tiktok.com/@@anahabibitmahmoue?_r=1&_t=ZS-92sBt9XLMoK"
               target="_blank"
               class="social-btn"
               data-bs-toggle="tooltip"
               data-bs-placement="top"
               title="">
                <i class="fab fa-tiktok"></i>
            </a>
        </div>
    </section>

    <section id="branches" class="py-5 about-section">
        <div class="container">
            <h2 class="section-title text-center">فروعنا</h2>
            <div class="row g-4">
                @if (Model.Branches != null)
                {
                    @foreach (var branch in Model.Branches)
                    {
                        <div class="col-lg-4 col-md-6">
                            <article class="branch-card text-center">
                                <h3 class="h4 mb-4 text-white">@branch.Name</h3>
                                <div class="branch-icon-box">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <p class="text-secondary mb-4">@branch.Address</p>
                                <hr class="border-secondary opacity-25">
                                <div class="mt-4">
                                    <a href="tel:@branch.Phone" class="contact-link">
                                        <i class="fas fa-phone-alt me-2 text-gold"></i> @branch.Phone
                                    </a>
                                    <a href="https://wa.me/@branch.WhatsApp" target="_blank" class="contact-link">
                                        <i class="fab fa-whatsapp me-2 text-success"></i> واتساب (الإدارة)
                                    </a>
                                    <a href="sms:@branch.Phone" class="contact-link">
                                        <i class="fas fa-comment-dots me-2 text-info"></i> رسائل نصية
                                    </a>
                                    <a href="@branch.LocationUrl" target="_blank" class="btn btn-outline-warning btn-sm mt-3 w-100">عرض الموقع على الخريطة</a>
                                </div>
                            </article>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <section class="py-5 text-center" style="background: linear-gradient(45deg, #000, #111);">
        <div class="container">
            <h2 class="mb-4">هل أنتِ مستعدة لتكوني أيقونة الجمال القادمة؟</h2>
            <p class="mb-5 text-secondary">احجزي موعدك الآن للاستشارة وتصميم فستان أحلامك</p>
            <a href="https://wa.me/201144642661" class="btn btn-gold btn-lg">
                <i class="fab fa-whatsapp me-2"></i> تواصل فوري عبر واتساب
            </a>
        </div>
    </section>

    <footer class="text-center bg-black">
        <div class="container">
            <h2 class="playfair text-gold mb-3">Atelier Farida</h2>
            <p class="text-secondary small mb-1">© @DateTime.Now.Year جميع الحقوق محفوظة لـ أتيليه فريدة.</p>
            <p class="text-muted small">نحن نصنع الأناقة بلمسات فنية راقية.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // تفعيل خاصية الـ Tooltip من بوتستراب
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>

</body>
</html>