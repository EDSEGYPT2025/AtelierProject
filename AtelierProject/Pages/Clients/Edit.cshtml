@page "{id:int}"
@model AtelierProject.Pages.Clients.EditModel
@{
    ViewData["Title"] = "تعديل بيانات العميل";
}

<style>
    /* --- نفس تنسيقات الصفحة الملكية (تم نسخها لضمان التطابق) --- */
    .royal-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        overflow: hidden;
        background: #fff;
    }

    .card-header-luxury {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        padding: 25px;
        color: #fff;
        border-bottom: 4px solid #c5a059;
        text-align: center;
    }

    .form-label {
        font-weight: 700;
        color: #334155;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        border: 1px solid #e2e8f0;
        background-color: #f8fafc;
        transition: all 0.3s;
    }

        .form-control:focus {
            background-color: #fff;
            border-color: #c5a059;
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
        }

    .input-group-text {
        background-color: #f1f5f9;
        border: 1px solid #e2e8f0;
        color: #64748b;
        border-radius: 0 10px 10px 0; /* RTL */
    }

    /* زر التعديل (لون برتقالي/ذهبي لتمييزه عن الإضافة) */
    .btn-edit-royal {
        background: linear-gradient(135deg, #d97706, #b45309);
        color: #fff;
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: bold;
        transition: transform 0.2s;
        box-shadow: 0 4px 15px rgba(217, 119, 6, 0.3);
    }

        .btn-edit-royal:hover {
            transform: translateY(-2px);
            color: #fff;
            background: linear-gradient(135deg, #b45309, #92400e);
        }

    .btn-cancel {
        background: #fff;
        border: 1px solid #e2e8f0;
        color: #64748b;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-cancel:hover {
            background: #f1f5f9;
            color: #334155;
        }

    /* مفتاح الحظر */
    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .blacklist-wrapper {
        background-color: #fff5f5;
        border: 1px dashed #fecaca;
        border-radius: 12px;
        padding: 15px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card royal-card">

                <div class="card-header-luxury">
                    <h4 class="mb-0 fw-bold" style="font-family: 'Playfair Display', serif;">
                        <i class="fa-solid fa-user-pen text-warning me-2"></i> تعديل بيانات العميل
                    </h4>
                    <p class="text-white-50 mb-0 small mt-1">تحديث المعلومات الشخصية وسجل الاتصال</p>
                </div>

                <div class="card-body p-5">
                    <form method="post">
                        <input type="hidden" asp-for="Client.Id" />
                        <input type="hidden" asp-for="Client.RegistrationDate" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0 rounded-3 mb-4"></div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Client.Name" class="form-label">الاسم الرباعي <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-regular fa-user"></i></span>
                                    <input asp-for="Client.Name" class="form-control" placeholder="الاسم كما يظهر في الهوية" />
                                </div>
                                <span asp-validation-for="Client.Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Client.Phone" class="form-label">رقم الهاتف <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-mobile-screen"></i></span>
                                    <input asp-for="Client.Phone" class="form-control" placeholder="01xxxxxxxxx" />
                                </div>
                                <span asp-validation-for="Client.Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Client.NationalId" class="form-label">الرقم القومي</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-regular fa-id-card"></i></span>
                                    <input asp-for="Client.NationalId" class="form-control" placeholder="14 رقم (اختياري)" />
                                </div>
                                <span asp-validation-for="Client.NationalId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Client.Address" class="form-label">العنوان</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-location-dot"></i></span>
                                    <input asp-for="Client.Address" class="form-control" placeholder="المنطقة - الشارع - رقم العقار" />
                                </div>
                                <span asp-validation-for="Client.Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Client.Notes" class="form-label">ملاحظات إضافية</label>
                            <textarea asp-for="Client.Notes" class="form-control" rows="3" placeholder="أي تفاصيل أخرى تود تسجيلها عن العميل..."></textarea>
                            <span asp-validation-for="Client.Notes" class="text-danger small"></span>
                        </div>

                        <div class="blacklist-wrapper mb-4">
                            <div class="form-check form-switch d-flex align-items-center gap-3">
                                <input class="form-check-input fs-4 m-0" type="checkbox" asp-for="Client.IsBlacklisted" id="blacklistSwitch" style="cursor: pointer;">
                                <div>
                                    <label class="form-check-label fw-bold text-danger d-block" for="blacklistSwitch" style="cursor: pointer;">
                                        <i class="fa-solid fa-ban me-1"></i> حظر التعامل (Blacklist)
                                    </label>
                                    <small class="text-muted">عند التفعيل، سيظهر تنبيه للموظفين عند محاولة الحجز لهذا العميل.</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-page="./Index" class="btn btn-cancel">
                                <i class="fa-solid fa-arrow-right me-2"></i> إلغاء وعودة
                            </a>
                            <button type="submit" class="btn btn-edit-royal">
                                <i class="fa-solid fa-check-double me-2"></i> حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}