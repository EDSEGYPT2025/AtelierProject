@page "{id:int}"
@model AtelierProject.Pages.Clients.DetailsModel
@{
    ViewData["Title"] = "ملف العميل";
}

<style>
    /* --- التنسيقات الملكية --- */

    /* بطاقة العميل الرئيسية */
    .profile-card {
        border: none;
        border-radius: 20px;
        background: #fff;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .profile-header-bg {
        height: 120px;
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }

    .profile-avatar-large {
        width: 100px;
        height: 100px;
        background: #fff;
        border: 4px solid #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 800;
        color: #c5a059;
        margin-top: -50px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    /* بطاقات الماليات */
    .stat-card {
        border: none;
        border-radius: 15px;
        padding: 20px;
        color: #fff;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .bg-debt {
        background: linear-gradient(135deg, #ef4444, #b91c1c);
    }

    .bg-paid {
        background: linear-gradient(135deg, #10b981, #047857);
    }

    .bg-clean {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    }

    .stat-icon {
        position: absolute;
        right: -10px;
        bottom: -10px;
        font-size: 5rem;
        opacity: 0.2;
        transform: rotate(-15deg);
    }

    /* التبويبات */
    .nav-tabs .nav-link {
        border: none;
        color: #64748b;
        font-weight: 600;
        padding: 15px 25px;
        border-radius: 10px 10px 0 0;
    }

        .nav-tabs .nav-link.active {
            color: #c5a059;
            background: #fff;
            border-bottom: 3px solid #c5a059;
        }

    /* الجداول */
    .table th {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #94a3b8;
        border-bottom-width: 1px;
    }

    /* شارة الحالة */
    .status-badge {
        padding: 5px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 700;
    }

    .badge-banned {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .badge-active {
        background: #dcfce7;
        color: #16a34a;
        border: 1px solid #bbf7d0;
    }
</style>

<div class="container-fluid py-4">

    <div class="row g-4 mb-4">

        <div class="col-lg-8">
            <div class="profile-card h-100">
                <div class="profile-header-bg"></div>
                <div class="px-4 pb-4">
                    <div class="d-flex justify-content-between align-items-end mb-3">
                        <div class="profile-avatar-large">
                            @Model.Client.Name.Substring(0, 1)
                        </div>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.Client.Id" class="btn btn-outline-warning fw-bold rounded-pill px-4">
                                <i class="fa-solid fa-pen me-2"></i> تعديل
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-7">
                            <h2 class="fw-bold text-dark mb-1">@Model.Client.Name</h2>
                            <p class="text-muted d-flex align-items-center gap-3 mb-3">
                                <span><i class="fa-solid fa-phone me-1 text-primary"></i> @Model.Client.Phone</span>
                                @if (!string.IsNullOrEmpty(Model.Client.NationalId))
                                {
                                    <span><i class="fa-regular fa-id-card me-1 text-primary"></i> @Model.Client.NationalId</span>
                                }
                            </p>

                            @if (Model.Client.IsBlacklisted)
                            {
                                <div class="status-badge badge-banned d-inline-block mb-3">
                                    <i class="fa-solid fa-ban me-1"></i> محظور من التعامل (Blacklisted)
                                </div>
                            }
                            else
                            {
                                <div class="status-badge badge-active d-inline-block mb-3">
                                    <i class="fa-solid fa-check-circle me-1"></i> حساب نشط
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Client.Address))
                            {
                                <p class="text-secondary small mb-2"><i class="fa-solid fa-location-dot me-2 text-danger"></i> @Model.Client.Address</p>
                            }
                        </div>

                        <div class="col-md-5 border-start">
                            <h6 class="fw-bold text-muted mb-2">ملاحظات</h6>
                            <div class="bg-light p-3 rounded small text-secondary" style="min-height: 80px;">
                                @(!string.IsNullOrEmpty(Model.Client.Notes) ? Model.Client.Notes : "لا توجد ملاحظات مسجلة.")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="d-flex flex-column gap-3 h-100">

                @if (Model.TotalDebt > 0)
                {
                    <div class="stat-card bg-debt flex-grow-1">
                        <i class="fa-solid fa-hand-holding-dollar stat-icon"></i>
                        <h6 class="text-white-50 mb-1">إجمالي المديونية (عليه)</h6>
                        <h2 class="fw-bold mb-0">@Model.TotalDebt.ToString("N0") ج.م</h2>
                        <small class="text-white-50">مبلغ مستحق الدفع</small>
                    </div>
                }
                else
                {
                    <div class="stat-card bg-clean flex-grow-1">
                        <i class="fa-solid fa-thumbs-up stat-icon"></i>
                        <h6 class="text-white-50 mb-1">الحالة المالية</h6>
                        <h2 class="fw-bold mb-0">خالص تماماً</h2>
                        <small class="text-white-50">لا توجد مديونيات</small>
                    </div>
                }

                <div class="stat-card bg-paid flex-grow-1">
                    <i class="fa-solid fa-coins stat-icon"></i>
                    <h6 class="text-white-50 mb-1">إجمالي المدفوعات</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalPaid.ToString("N0") ج.م</h2>
                    <small class="text-white-50">تاريخياً</small>
                </div>

            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-bottom-0 p-0 px-4 pt-3">
            <ul class="nav nav-tabs" id="clientTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="atelier-tab" data-bs-toggle="tab" data-bs-target="#atelier" type="button">
                        <i class="fa-solid fa-shirt me-2"></i> الأتيليه <span class="badge bg-light text-dark ms-2 rounded-pill">@Model.ClientBookings.Count</span>
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="salon-tab" data-bs-toggle="tab" data-bs-target="#salon" type="button">
                        <i class="fa-solid fa-spa me-2"></i> الصالون <span class="badge bg-light text-dark ms-2 rounded-pill">@Model.ClientAppointments.Count</span>
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-0">
            <div class="tab-content" id="clientTabsContent">

                <div class="tab-pane fade show active" id="atelier" role="tabpanel">
                    @if (Model.ClientBookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">رقم الحجز</th>
                                        <th>تاريخ الاستلام</th>
                                        <th>الأصناف</th>
                                        <th>الحالة</th>
                                        <th>الإجمالي</th>
                                        <th>المتبقي</th>
                                        <th class="text-center">إجراء</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ClientBookings)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-muted">#@item.Id</td>
                                            <td>@item.PickupDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                @foreach (var prod in item.BookingItems)
                                                {
                                                    <span class="badge bg-light text-dark border me-1">@prod.ProductItem?.ProductDefinition?.Name</span>
                                                }
                                            </td>
                                            <td><span class="badge bg-secondary">@item.Status</span></td>
                                            <td class="fw-bold">@item.TotalAmount.ToString("N0")</td>
                                            <td>
                                                @if (item.RemainingRentalAmount > 0)
                                                {
                                                    <span class="text-danger fw-bold">@item.RemainingRentalAmount.ToString("N0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success"><i class="fa-solid fa-check"></i></span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-page="/Bookings/Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border shadow-sm rounded-circle">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fa-solid fa-box-open fa-3x text-light mb-3"></i>
                            <p class="text-muted">لا توجد حجوزات ملابس سابقة.</p>
                        </div>
                    }
                </div>

                <div class="tab-pane fade" id="salon" role="tabpanel">
                    @if (Model.ClientAppointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">الموعد</th>
                                        <th>الخدمات</th>
                                        <th>الحالة</th>
                                        <th>الإجمالي</th>
                                        <th>المتبقي</th>
                                        <th class="text-center">إجراء</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ClientAppointments)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-bold">@item.AppointmentDate.ToString("yyyy-MM-dd")</div>
                                                <small class="text-muted">@item.AppointmentDate.ToString("hh:mm tt")</small>
                                            </td>
                                            <td>
                                                @foreach (var srv in item.Items)
                                                {
                                                    <span class="badge bg-light text-dark border me-1">@srv.SalonService?.Name</span>
                                                }
                                            </td>
                                            <td><span class="badge bg-info text-dark">@item.Status</span></td>
                                            <td class="fw-bold">@item.TotalAmount.ToString("N0")</td>
                                            <td>
                                                @if (item.RemainingAmount > 0)
                                                {
                                                    <span class="text-danger fw-bold">@item.RemainingAmount.ToString("N0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success"><i class="fa-solid fa-check"></i></span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-page="/Salon/Appointments/Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border shadow-sm rounded-circle">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fa-solid fa-scissors fa-3x text-light mb-3"></i>
                            <p class="text-muted">لا توجد زيارات سابقة للصالون.</p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="./Index" class="btn btn-link text-muted text-decoration-none">
            <i class="fa-solid fa-arrow-right me-2"></i> عودة لقائمة العملاء
        </a>
    </div>

</div>