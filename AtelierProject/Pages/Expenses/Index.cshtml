@page
@model AtelierProject.Pages.Expenses.IndexModel
@{
    ViewData["Title"] = "سجل المصروفات";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark"><i class="fa-solid fa-file-invoice-dollar text-danger"></i> سجل المصروفات</h3>
            <p class="text-muted small mb-0">متابعة المصروفات اليومية للفرع</p>
        </div>
        <a asp-page="Create" class="btn btn-danger shadow-sm px-4">
            <i class="fa fa-plus"></i> تسجيل مصروف
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body p-3">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">من تاريخ</label>
                    <input asp-for="FromDate" type="date" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">إلى تاريخ</label>
                    <input asp-for="ToDate" type="date" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">البند</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- كل البنود --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa fa-filter"></i> عرض النتائج
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-warning border-0 d-flex justify-content-between align-items-center shadow-sm">
        <span class="h6 mb-0 text-dark"><i class="fa-solid fa-calculator me-2"></i> إجمالي المصاريف للفترة المحددة:</span>
        <span class="h4 mb-0 fw-bold text-danger">@Model.TotalAmount.ToString("N0") ج.م</span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">التاريخ</th>
                        <th>البند</th>
                        <th>الوصف</th>
                        <th>المبلغ</th>
                        <th>بواسطة</th>
                        <th class="text-end pe-4">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Expenses.Any())
                    {
                        @foreach (var item in Model.Expenses)
                        {
                            <tr>
                                <td class="ps-4 text-nowrap">@item.ExpenseDate.ToString("yyyy-MM-dd")</td>
                                <td><span class="badge bg-secondary">@item.ExpenseCategory?.Name</span></td>
                                <td class="text-muted small">@item.Description</td>
                                <td class="fw-bold text-danger">@item.Amount.ToString("N0")</td>
                                <td class="small text-muted">
                                    <i class="fa-solid fa-user-clock me-1"></i> @(item.CreatedByUser?.FullName ?? "مستخدم")
                                </td>
                                <td class="text-end pe-4">
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                          onsubmit="return confirm('تأكيد حذف هذا المصروف؟');">
                                        <button class="btn btn-sm btn-outline-danger border-0"><i class="fa fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                لا توجد مصروفات مسجلة في هذه الفترة.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>