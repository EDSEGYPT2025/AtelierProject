@page
@model AtelierProject.Pages.Expenses.Categories.CreateModel
@{
    ViewData["Title"] = "إضافة بند مصروف";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">إضافة نوع مصروف جديد</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ExpenseCategory.Name" class="form-label fw-bold">اسم البند</label>
                            <input asp-for="ExpenseCategory.Name" class="form-control form-control-lg" placeholder="مثال: إيجار، كهرباء، بوفيه..." autofocus />
                            <span asp-validation-for="ExpenseCategory.Name" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">حفظ البند</button>
                            <a asp-page="Index" class="btn btn-light">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}