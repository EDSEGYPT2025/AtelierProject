@page "{id:int}"
@model AtelierProject.Pages.Salon.Appointments.EditModel

@{
    ViewData["Title"] = "تعديل حجز صالون";
}

<h1>تعديل حجز صالون</h1>
<hr />

<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Appointment.ClientId" class="control-label fw-bold">العميل</label>
                        <select asp-for="Appointment.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                        <span asp-validation-for="Appointment.ClientId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Appointment.AppointmentDate" class="control-label fw-bold">تاريخ وموعد الحجز</label>
                        <input asp-for="Appointment.AppointmentDate" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3 border-secondary">
                <div class="card-header bg-light fw-bold">
                    الخدمات المطلوبة
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var service in Model.AvailableServices)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedServiceIds"
                                           value="@service.Id"
                                           id="service_@service.Id"
                                           @(Model.SelectedServiceIds.Contains(service.Id) ? "checked" : "") />

                                    <label class="form-check-label" for="service_@service.Id">
                                        @service.Name <span class="badge bg-secondary">@service.Price ج.م</span>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                    {
                        <div class="text-danger mt-2">
                            @Html.ValidationSummary(true)
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Appointment.PaidAmount" class="control-label fw-bold">المبلغ المدفوع</label>
                        <input asp-for="Appointment.PaidAmount" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Appointment.PaidAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Appointment.Status" class="control-label fw-bold">الحالة</label>
                        <input asp-for="Appointment.Status" class="form-control" />
                        <span asp-validation-for="Appointment.Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Appointment.Notes" class="control-label fw-bold">ملاحظات</label>
                <textarea asp-for="Appointment.Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Appointment.Notes" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="حفظ التعديلات" class="btn btn-primary px-4" />
                <a asp-page="./Index" class="btn btn-secondary px-4">عودة للقائمة</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}