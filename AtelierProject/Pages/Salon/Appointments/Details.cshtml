@page "{id:int}"
@model AtelierProject.Pages.Salon.Appointments.DetailsModel
@using AtelierProject.Models

@{
    Layout = null;
    ViewData["Title"] = $"فاتورة كوافير #{Model.Appointment.Id}";

    // ============================================================
    // 📱 1. تجهيز بيانات الواتساب
    // ============================================================
    string clientName = Model.Appointment.Client?.Name ?? "عميلتنا العزيزة";
    string phone = Model.Appointment.Client?.Phone ?? "";

    // تنظيف رقم الهاتف (إزالة المسافات، التأكد من كود الدولة 20 لمصر)
    string cleanPhone = new string(phone.Where(char.IsDigit).ToArray());
    if (cleanPhone.StartsWith("0")) cleanPhone = "20" + cleanPhone.Substring(1);

    // بناء نص الرسالة
    var sb = new System.Text.StringBuilder();
    sb.AppendLine($"أهلاً بك يا *{clientName}* 🌸");
    sb.AppendLine("نورتينا في *أتيليه فريدة* ✨");
    sb.AppendLine();
    sb.AppendLine($"📝 *تفاصيل الحجز رقم:* #{Model.Appointment.Id}");
    sb.AppendLine($"📅 *الموعد:* {Model.Appointment.AppointmentDate:yyyy-MM-dd} الساعة {Model.Appointment.AppointmentDate:hh:mm tt}");
    sb.AppendLine("------------------");
    sb.AppendLine("*الخدمات المختارة:* 💅");

    foreach (var item in Model.Appointment.Items)
    {
        // عرض العدد في الرسالة إذا كان أكبر من 1
        string qtyText = item.Quantity > 1 ? $" (عدد {item.Quantity})" : "";
        sb.AppendLine($"- {item.SalonService?.Name}{qtyText} : {item.Price * item.Quantity:N0}");
    }

    sb.AppendLine("------------------");
    sb.AppendLine($"💰 *الإجمالي:* {Model.Appointment.TotalAmount:N0} ج.م");
    sb.AppendLine($"✅ *المدفوع:* {Model.Appointment.PaidAmount:N0} ج.م");

    if (Model.Appointment.RemainingAmount > 0)
    {
        sb.AppendLine($"⭕ *المبلغ المتبقي:* {Model.Appointment.RemainingAmount:N0} ج.م");
    }
    else
    {
        sb.AppendLine("🎉 *الحساب خالص*");
    }

    if (!string.IsNullOrEmpty(Model.Appointment.Notes))
    {
        sb.AppendLine();
        sb.AppendLine($"📌 *ملاحظات:* {Model.Appointment.Notes}");
    }

    sb.AppendLine();
    sb.AppendLine("في انتظارك! 💖");

    // تشفير الرسالة لتناسب الرابط
    string msgContent = Uri.EscapeDataString(sb.ToString());
    string waLink = string.IsNullOrEmpty(cleanPhone) ? "#" : $"https://wa.me/{cleanPhone}?text={msgContent}";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #555;
            padding: 20px;
        }

        .invoice-page {
            background: white;
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 15mm;
            display: flex;
            flex-direction: column;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
        }

        .header-top {
            text-align: center;
            border-bottom: 2px solid #111;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .brand-name {
            font-family: 'Playfair Display', serif;
            font-size: 40px;
            font-weight: 700;
            color: #111;
            margin: 0;
            line-height: 1;
        }

        .brand-sub {
            font-size: 11px;
            letter-spacing: 4px;
            color: #d4af37;
            text-transform: uppercase;
            margin-top: 5px;
        }

        .table-clean {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .table-clean th {
                text-align: right;
                padding: 10px;
                border-bottom: 1px solid #000;
                font-size: 12px;
                color: #777;
            }

            .table-clean td {
                padding: 15px 10px;
                border-bottom: 1px solid #eee;
            }

        .total-box {
            width: 250px;
            margin-right: auto;
            background: #f9f9f9;
            padding: 15px;
            border: 1px solid #eee;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
            font-size: 14px;
        }

        .total-final {
            border-top: 2px solid #d4af37;
            padding-top: 10px;
            margin-top: 10px;
            font-weight: 700;
            font-size: 18px;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                background: white;
                margin: 0;
                padding: 0;
            }

            .invoice-page {
                width: 100%;
                margin: 0;
                border: none;
                box-shadow: none;
            }

            * {
                -webkit-print-color-adjust: exact !important;
                print-color-adjust: exact !important;
            }
        }
    </style>
</head>
<body>

    <div class="no-print container mb-4">
        <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center flex-wrap gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary btn-sm"><i class="fa fa-arrow-right"></i> عودة</a>

            <div class="d-flex gap-2 flex-wrap">
                @if (Model.Appointment.Status != SalonAppointmentStatus.Cancelled)
                {
                    @if (Model.Appointment.RemainingAmount > 0)
                    {
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#payModal">
                            <i class="fa fa-money-bill"></i> دفع المتبقي
                        </button>
                    }
                    else
                    {
                        <span class="btn btn-success btn-sm disabled"><i class="fa fa-check"></i> مدفوع بالكامل</span>
                    }

                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#cancelModal">
                        <i class="fa fa-times"></i> إلغاء
                    </button>
                }
                else
                {
                    <span class="badge bg-danger p-2">تم إلغاء هذا الحجز</span>
                }

                @* ✅ 2. زر الواتساب الجديد ✅ *@
                @if (!string.IsNullOrEmpty(phone))
                {
                    <a href="@waLink" target="_blank" class="btn btn-success btn-sm text-white">
                        <i class="fa-brands fa-whatsapp"></i> إرسال واتساب
                    </a>
                }

                <button onclick="window.print()" class="btn btn-dark btn-sm"><i class="fa fa-print"></i> طباعة</button>
            </div>
        </div>
    </div>

    <div class="invoice-page">
        <div class="header-top">
            <h1 class="brand-name">ATELIER</h1>
            <div class="brand-sub">BEAUTY SALON & SPA</div>
        </div>

        <div style="display:flex; justify-content:space-between; margin-bottom:40px;">
            <div>
                <strong style="display:block; font-size:12px; color:#999; margin-bottom:5px;">بيانات العميلة</strong>
                <div style="font-size:18px; font-weight:700;">@Model.Appointment.Client.Name</div>
                <div>@Model.Appointment.Client.Phone</div>
            </div>
            <div style="text-align:left;">
                <strong style="display:block; font-size:12px; color:#999; margin-bottom:5px;">تفاصيل الموعد</strong>
                <div><strong>رقم الفاتورة:</strong> #@Model.Appointment.Id</div>
                <div><strong>التاريخ:</strong> @Model.Appointment.AppointmentDate.ToString("yyyy-MM-dd")</div>
                <div><strong>الساعة:</strong> @Model.Appointment.AppointmentDate.ToString("hh:mm tt")</div>

                <div style="margin-top:5px;">
                    @if (Model.Appointment.Status == SalonAppointmentStatus.Cancelled)
                    {
                        <span class="badge bg-danger text-white">ملغي (Cancelled)</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-dark border">@Model.Appointment.Status</span>
                    }
                </div>
            </div>
        </div>

        <table class="table-clean">
            <thead>
                <tr>
                    <th width="50%">الخدمة</th>
                    <th width="15%">السعر</th>
                    <th width="15%">العدد</th>
                    <th width="20%">الإجمالي</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Appointment.Items)
                {
                    <tr>
                        <td>
                            <strong>@item.SalonService?.Name</strong>
                            @if (!string.IsNullOrEmpty(item.SalonService?.Description))
                            {
                                <br><small style="color:#888;">@item.SalonService?.Description</small>
                            }
                        </td>
                        <td>@item.Price.ToString("N0")</td>

                        @* عرض الكمية *@
                        <td style="text-align: center;">x @item.Quantity</td>

                        @* حساب إجمالي السطر *@
                        <td>@((item.Price * item.Quantity).ToString("N0"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-box">
            <div class="total-row">
                <span>الإجمالي</span>
                <span>@Model.Appointment.TotalAmount.ToString("N0") ج.م</span>
            </div>

            @if (Model.Appointment.Status == SalonAppointmentStatus.Cancelled)
            {
                <div class="total-row text-secondary">
                    <span>المدفوع (بعد التسوية)</span>
                    <span>- @Model.Appointment.PaidAmount.ToString("N0") ج.م</span>
                </div>
                <div class="total-row total-final">
                    <span>الحالة</span>
                    <span style="color:#d9534f; font-size:14px;">تم الإلغاء والتسوية</span>
                </div>
            }
            else
            {
                <div class="total-row text-success">
                    <span>المدفوع</span>
                    <span>- @Model.Appointment.PaidAmount.ToString("N0") ج.م</span>
                </div>
                <div class="total-row total-final">
                    <span>المطلوب سداده</span>
                    <span style="color:#d9534f;">@Model.Appointment.RemainingAmount.ToString("N0") ج.م</span>
                </div>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.Appointment.Notes))
        {
            <div style="margin: 20px 0; padding: 15px; background: #fffcf0; border: 1px dashed #d4af37; border-radius: 4px;">
                <strong style="display: block; font-size: 12px; color: #999; margin-bottom: 5px;">ملاحظات إضافية:</strong>
                <div style="color: #333; font-weight: 600;">@Model.Appointment.Notes</div>
            </div>
        }

        <div style="margin-top:auto; padding-top:20px; border-top:1px solid #eee; font-size:12px; color:#777; text-align:center;">
            شكراً لزيارتكم صالون أتيليه.
        </div>
    </div>

    <div class="modal fade" id="payModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form method="post" asp-page-handler="PayRemaining">
                    <input type="hidden" name="id" value="@Model.Appointment.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title">سداد تكلفة الخدمة</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label>المبلغ المتبقي:</label>
                            <input type="text" class="form-control" value="@Model.Appointment.RemainingAmount" disabled />
                        </div>
                        <div class="mb-3">
                            <label>المبلغ المدفوع الآن:</label>
                            <input type="number" name="amount" class="form-control"
                                   value="@Model.Appointment.RemainingAmount"
                                   max="@Model.Appointment.RemainingAmount" min="1" step="0.01" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">حفظ وتسديد</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="cancelModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Cancel">
                    <input type="hidden" name="id" value="@Model.Appointment.Id" />
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">إلغاء الموعد وتسوية العربون</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <i class="fa fa-exclamation-triangle"></i> سيتم إلغاء الموعد نهائياً.
                        </div>

                        <div class="mb-3 text-center border p-2 bg-light rounded">
                            قيمة العربون المحتفظ به حالياً:<br>
                            <strong class="fs-4 text-success">@Model.Appointment.PaidAmount.ToString("N0") ج.م</strong>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">كم سترد للعميلة؟ (الاسترداد)</label>
                            <div class="input-group">
                                <input type="number" name="refundAmount" class="form-control" value="0" max="@Model.Appointment.PaidAmount" min="0" required />
                                <span class="input-group-text">ج.م</span>
                            </div>
                            <div class="form-text small">
                                - اكتب 0 إذا كنت ستخصم العربون بالكامل (لا رد).<br>
                                - اكتب المبلغ إذا كنت سترد جزءاً منه.
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">تراجع</button>
                        <button type="submit" class="btn btn-danger">تأكيد الإلغاء</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>