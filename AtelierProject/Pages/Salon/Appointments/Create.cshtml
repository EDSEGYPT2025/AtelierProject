@page
@model AtelierProject.Pages.Salon.Appointments.CreateModel
@{
    ViewData["Title"] = "حجز موعد كوافير";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white p-3">
                    <h4 class="mb-0"><i class="fa fa-calendar-check"></i> حجز موعد كوافير</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Appointment.ClientId" class="form-label fw-bold">العميلة (ابحث بالاسم أو الرقم)</label>
                                <select asp-for="Appointment.ClientId" id="clientSelect" class="form-select" asp-items="ViewBag.ClientId" required>
                                    <option value="">-- اختر العميلة --</option>
                                </select>
                                <span asp-validation-for="Appointment.ClientId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Appointment.AppointmentDate" class="form-label fw-bold">تاريخ ووقت الموعد</label>
                                <input asp-for="Appointment.AppointmentDate"
                                       class="form-control"
                                       type="datetime-local"
                                       asp-format="{0:yyyy-MM-ddTHH:mm}"
                                       required />
                                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                                <label class="form-label fw-bold mb-0">الخدمات المطلوبة</label>
                                <input type="text" id="serviceSearchInput" class="form-control form-control-sm w-50" placeholder="🔍 ابحث عن اسم الخدمة..." autocomplete="off">
                            </div>

                            <div class="row g-3" id="servicesListContainer">
                                @foreach (var service in Model.AvailableServices)
                                {
                                    /* 2. أضفنا كلاس service-item للبحث */
                                    <div class="col-md-6 service-item">
                                        <div class="form-check p-3 border rounded bg-light">
                                            <input class="form-check-input service-check" type="checkbox"
                                                   name="SelectedServiceIds"
                                                   value="@service.Id"
                                                   id="srv_@service.Id"
                                                   data-price="@service.Price">
                                            <label class="form-check-label w-100 d-flex justify-content-between" for="srv_@service.Id">
                                                <span class="service-name-text">@service.Name</span>
                                                <span class="fw-bold text-success">@service.Price.ToString("N0") ج.م</span>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div id="noServicesFound" class="alert alert-warning text-center mt-2" style="display: none;">
                                لا توجد خدمة بهذا الاسم
                            </div>
                        </div>

                        <div class="alert alert-info d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">إجمالي التكلفة المتوقعة:</span>
                            <span class="h4 mb-0 fw-bold" id="totalPriceDisplay">0 ج.م</span>
                        </div>

                        <div class="row mt-4 p-3 bg-light rounded border">
                            <div class="col-md-6">
                                <div class="alert alert-info d-flex justify-content-between align-items-center mb-0">
                                    <span>إجمالي الخدمات:</span>
                                    <span class="h5 mb-0 fw-bold" id="totalPriceDisplayBottom">0 ج.م</span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Appointment.PaidAmount" class="form-label fw-bold text-success">العربون المدفوع (إن وجد)</label>
                                <div class="input-group">
                                    <input asp-for="Appointment.PaidAmount" class="form-control fw-bold" placeholder="0" value="0" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                                <div class="form-text">اتركه 0 إذا لم يدفع العميل شيئاً الآن.</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Appointment.Notes" class="form-label">ملاحظات إضافية</label>
                            <textarea asp-for="Appointment.Notes" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">تأكيد الحجز</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // تفعيل Select2 للعملاء
            $('#clientSelect').select2({
                theme: 'bootstrap-5',
                placeholder: '-- ابحث عن العميلة --',
                width: '100%',
                language: { noResults: function () { return "لا توجد نتائج"; } }
            });
        });

        // ============================
        // 1. كود فلترة الخدمات (بحث)
        // ============================
        document.getElementById('serviceSearchInput').addEventListener('keyup', function () {
            let filter = this.value.toLowerCase(); // النص المكتوب
            let items = document.querySelectorAll('.service-item'); // كل كروت الخدمات
            let hasVisibleItems = false;

            items.forEach(function (item) {
                // البحث داخل اسم الخدمة فقط
                let serviceName = item.querySelector('.service-name-text').textContent.toLowerCase();

                if (serviceName.includes(filter)) {
                    item.style.display = ''; // إظهار
                    hasVisibleItems = true;
                } else {
                    item.style.display = 'none'; // إخفاء
                }
            });

            // إظهار رسالة "لا توجد نتائج" إذا اختفى كل شيء
            let noResultMsg = document.getElementById('noServicesFound');
            if (!hasVisibleItems) {
                noResultMsg.style.display = 'block';
            } else {
                noResultMsg.style.display = 'none';
            }
        });

        // ============================
        // 2. كود حساب الأسعار (كما هو)
        // ============================
        const checkboxes = document.querySelectorAll('.service-check');
        const totalDisplayTop = document.getElementById('totalPriceDisplay');
        const totalDisplayBottom = document.getElementById('totalPriceDisplayBottom');

        function updateTotal() {
            let total = 0;
            checkboxes.forEach(chk => {
                if (chk.checked) {
                    total += parseFloat(chk.getAttribute('data-price')) || 0;
                }
            });
            const formattedTotal = total.toLocaleString() + ' ج.م';
            if (totalDisplayTop) totalDisplayTop.textContent = formattedTotal;
            if (totalDisplayBottom) totalDisplayBottom.textContent = formattedTotal;
        }

        checkboxes.forEach(chk => chk.addEventListener('change', updateTotal));
        updateTotal(); // للحساب عند التحميل
    </script>
}