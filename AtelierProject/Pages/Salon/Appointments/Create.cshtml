@page
@model AtelierProject.Pages.Salon.Appointments.CreateModel
@{
    ViewData["Title"] = "حجز موعد كوافير";
}

<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

<style>
    /* --- المتغيرات الملكية --- */
    :root {
        --royal-gold: #c5a059;
        --royal-gold-dark: #b08d4b;
        --royal-black: #1a1a1a;
        --bg-cream: #fffcf5;
    }

    body {
        background-color: #f8fafc;
        font-family: 'Cairo', sans-serif;
    }

    /* الكارت الأساسي */
    .royal-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        background: #fff;
    }

    .royal-header {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        padding: 25px;
        text-align: center;
        border-bottom: 4px solid var(--royal-gold);
    }

        .royal-header h4 {
            color: #fff;
            font-family: 'Playfair Display', serif;
            margin: 0;
            letter-spacing: 1px;
        }

    /* العناوين */
    .section-label {
        font-weight: 800;
        color: #334155;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .section-label::after {
            content: '';
            flex-grow: 1;
            height: 2px;
            background: #f1f5f9;
            margin-right: 15px;
        }

    /* حقول الإدخال */
    .form-control, .form-select {
        border-radius: 12px;
        padding: 12px 15px;
        border: 1px solid #e2e8f0;
        background-color: #fdfdfd;
        transition: 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--royal-gold);
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
            background-color: #fff;
        }

    /* حاوية الخدمات */
    .services-scroll-container {
        max-height: 450px;
        overflow-y: auto;
        padding: 15px;
        border: 1px solid #f1f5f9;
        border-radius: 15px;
        background-color: #f8fafc;
        margin-bottom: 20px;
    }

    /* كارت الخدمة */
    .service-card {
        background: #fff;
        border: 2px solid transparent;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        position: relative;
        height: 100%;
    }

        .service-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.05);
        }

    /* تأثير الاختيار (Selected State) */
    .service-check:checked ~ label .service-card-inner {
        /* لا شيء هنا، سنغير الكارت الأب */
    }

    /* نقوم بتلوين الكارت عند اختيار الشيك بوكس بداخله باستخدام JS أو CSS has selector */
    .service-card.selected {
        border-color: var(--royal-gold);
        background-color: #fffbf2; /* كريمي فاتح جداً */
        box-shadow: 0 8px 20px rgba(197, 160, 89, 0.15);
    }

    .service-name {
        font-weight: 700;
        color: #334155;
    }

    .service-price {
        color: var(--royal-gold-dark);
        font-weight: bold;
        font-size: 0.9rem;
    }

    /* مربع الإجمالي الفاخر */
    .price-summary-box {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        color: #fff;
        border-radius: 15px;
        padding: 20px 30px;
        box-shadow: 0 10px 30px rgba(30, 41, 59, 0.2);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

        .price-summary-box::before {
            content: '\f51e'; /* أيقونة Coins */
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            position: absolute;
            left: -20px;
            bottom: -20px;
            font-size: 8rem;
            opacity: 0.05;
            transform: rotate(20deg);
        }

    /* الأزرار */
    .btn-royal-save {
        background: linear-gradient(135deg, var(--royal-gold), var(--royal-gold-dark));
        color: #fff;
        border: none;
        padding: 12px 40px;
        font-weight: bold;
        border-radius: 10px;
        transition: 0.3s;
        box-shadow: 0 5px 15px rgba(197, 160, 89, 0.3);
    }

        .btn-royal-save:hover {
            transform: translateY(-2px);
            color: #fff;
            box-shadow: 0 8px 20px rgba(197, 160, 89, 0.5);
        }

    .btn-royal-cancel {
        background: #fff;
        border: 1px solid #e2e8f0;
        color: #64748b;
        padding: 12px 30px;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-royal-cancel:hover {
            background: #f1f5f9;
            color: #334155;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card royal-card">

                <div class="card-header royal-header">
                    <h4><i class="fa-solid fa-spa ms-2 text-warning"></i> حجز موعد صالون</h4>
                </div>

                <div class="card-body p-5">
                    <form method="post">

                        <label class="section-label"><i class="fa-regular fa-id-card ms-2 text-warning"></i> البيانات الأساسية</label>
                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <label asp-for="Appointment.ClientId" class="form-label fw-bold small text-muted">العميلة</label>
                                <select asp-for="Appointment.ClientId" id="clientSelect" class="form-select" asp-items="ViewBag.ClientId" required>
                                    <option value="">-- ابحثي عن العميلة --</option>
                                </select>
                                <span asp-validation-for="Appointment.ClientId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Appointment.AppointmentDate" class="form-label fw-bold small text-muted">تاريخ ووقت الزيارة</label>
                                <input asp-for="Appointment.AppointmentDate"
                                       class="form-control"
                                       type="datetime-local"
                                       asp-format="{0:yyyy-MM-ddTHH:mm}"
                                       required />
                                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-end mb-3">
                            <label class="section-label mb-0 border-0"><i class="fa-solid fa-wand-magic-sparkles ms-2 text-warning"></i> الخدمات المطلوبة</label>
                            <div class="input-group w-50 shadow-sm" style="border-radius:10px; overflow:hidden;">
                                <span class="input-group-text bg-white border-0"><i class="fa fa-search text-muted"></i></span>
                                <input type="text" id="serviceSearchInput" class="form-control border-0" placeholder="بحث سريع عن خدمة..." autocomplete="off">
                            </div>
                        </div>

                        <div class="services-scroll-container">
                            <div class="row g-3" id="servicesListContainer">
                                @foreach (var service in Model.AvailableServices)
                                {
                                    <div class="col-md-6 service-item">
                                        <div class="service-card h-100" id="card_@service.Id" onclick="triggerCheckbox(@service.Id)">
                                            <div class="row align-items-center g-2">

                                                <div class="col-8">
                                                    <div class="form-check">
                                                        <input class="form-check-input service-check" type="checkbox"
                                                               name="SelectedServiceIds"
                                                               value="@service.Id"
                                                               id="srv_@service.Id"
                                                               data-price="@service.Price"
                                                               onclick="event.stopPropagation(); toggleQuantity(this, @service.Id)"
                                                               style="transform: scale(1.2); margin-left: 10px;">

                                                        <label class="form-check-label w-100" for="srv_@service.Id">
                                                            <div class="service-name text-truncate" title="@service.Name">@service.Name</div>
                                                            <div class="service-price">@service.Price.ToString("N0") ج.م</div>
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="col-4 text-end">
                                                    <div class="quantity-wrapper" id="qty_wrapper_@service.Id" style="opacity: 0.3; pointer-events: none; transition: 0.3s;">
                                                        <div class="input-group input-group-sm">
                                                            <span class="input-group-text bg-light border small text-muted px-1">عدد</span>
                                                            <input type="number"
                                                                   name="ServiceQuantities[@service.Id]"
                                                                   id="qty_input_@service.Id"
                                                                   class="form-control text-center fw-bold"
                                                                   value="1" min="1" max="10"
                                                                   onclick="event.stopPropagation()"
                                                                   onchange="updateTotal()"
                                                                   onkeyup="updateTotal()">
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div id="noServicesFound" class="alert alert-light text-center mt-3 text-muted" style="display: none;">
                                <i class="fa-solid fa-circle-exclamation me-1"></i> لا توجد خدمة بهذا الاسم
                            </div>
                        </div>

                        <div class="price-summary-box mb-4">
                            <div>
                                <h6 class="text-white-50 mb-1 text-uppercase ls-1">الإجمالي المتوقع</h6>
                                <h1 class="fw-bold mb-0 text-white" id="totalPriceDisplay">0 ج.م</h1>
                            </div>
                            <div class="text-end">
                                <label asp-for="Appointment.PaidAmount" class="form-label text-white-50 small mb-1">العربون (إن وجد)</label>
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input asp-for="Appointment.PaidAmount" class="form-control bg-white border-0 fw-bold text-success text-center" placeholder="0" />
                                    <span class="input-group-text bg-white border-0 text-success">ج.م</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Appointment.Notes" class="form-label fw-bold text-muted small">ملاحظات إضافية</label>
                            <textarea asp-for="Appointment.Notes" class="form-control" rows="2" placeholder="اكتب أي تفاصيل إضافية هنا..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-page="./Index" class="btn btn-royal-cancel">
                                <i class="fa-solid fa-xmark me-1"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-royal-save">
                                <i class="fa-solid fa-check me-2"></i> تأكيد وحفظ الموعد
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // تفعيل Select2 مع تحسين بسيط
            $('#clientSelect').select2({
                theme: 'bootstrap-5',
                placeholder: 'اختر العميلة...',
                width: '100%',
                language: { noResults: function () { return "لا توجد نتائج"; } }
            });
        });

        // تفعيل الكارت عند الضغط عليه (UX Enhancement)
        function triggerCheckbox(id) {
            var checkbox = document.getElementById('srv_' + id);
            checkbox.checked = !checkbox.checked;
            toggleQuantity(checkbox, id);
        }

        // تفعيل/تعطيل الكمية + تغيير ستايل الكارت
        function toggleQuantity(checkbox, id) {
            var qtyWrapper = document.getElementById('qty_wrapper_' + id);
            var qtyInput = document.getElementById('qty_input_' + id);
            var card = document.getElementById('card_' + id);

            if (checkbox.checked) {
                // تفعيل
                qtyWrapper.style.opacity = '1';
                qtyWrapper.style.pointerEvents = 'auto';
                card.classList.add('selected'); // إضافة حدود ذهبية
                qtyInput.focus();
            } else {
                // تعطيل
                qtyWrapper.style.opacity = '0.3';
                qtyWrapper.style.pointerEvents = 'none';
                card.classList.remove('selected'); // إزالة الحدود
                qtyInput.value = 1;
            }
            updateTotal();
        }

        // حساب الإجمالي
        function updateTotal() {
            let total = 0;
            const checkboxes = document.querySelectorAll('.service-check');

            checkboxes.forEach(chk => {
                if (chk.checked) {
                    let price = parseFloat(chk.getAttribute('data-price')) || 0;
                    let serviceId = chk.value;
                    let qtyInput = document.getElementById('qty_input_' + serviceId);
                    let qty = qtyInput ? (parseInt(qtyInput.value) || 1) : 1;

                    total += (price * qty);
                }
            });

            document.getElementById('totalPriceDisplay').textContent = total.toLocaleString() + ' ج.م';
        }

        // البحث الفوري
        document.getElementById('serviceSearchInput').addEventListener('keyup', function () {
            let filter = this.value.toLowerCase();
            let items = document.querySelectorAll('.service-item');
            let hasVisible = false;

            items.forEach(function (item) {
                let name = item.querySelector('.service-name').textContent.toLowerCase();
                if (name.includes(filter)) {
                    item.style.display = '';
                    hasVisible = true;
                } else {
                    item.style.display = 'none';
                }
            });

            document.getElementById('noServicesFound').style.display = hasVisible ? 'none' : 'block';
        });

        updateTotal(); // تشغيل عند التحميل
    </script>
}