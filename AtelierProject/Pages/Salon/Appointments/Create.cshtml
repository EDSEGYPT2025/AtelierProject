@page
@model AtelierProject.Pages.Salon.Appointments.CreateModel
@{
    ViewData["Title"] = "حجز موعد كوافير";
}

<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

<style>
    :root {
        --royal-gold: #c5a059;
        --royal-gold-dark: #b08d4b;
        --royal-black: #1a1a1a;
        --text-dark: #333;
        --bg-cream: #fffcf5;
    }

    body {
        background-color: #f4f4f4;
        font-family: 'Cairo', sans-serif;
    }

    /* الكارت الرئيسي */
    .royal-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: #fff;
        border-top: 5px solid var(--royal-gold);
    }

    /* الهيدر */
    .royal-header {
        background-color: var(--royal-black);
        padding: 25px;
        text-align: center;
    }

        .royal-header h4 {
            color: var(--royal-gold);
            font-family: 'Playfair Display', serif;
            margin: 0;
            font-size: 1.8rem;
            letter-spacing: 1px;
        }

    /* عناوين الأقسام */
    .section-label {
        font-weight: 700;
        color: var(--royal-black);
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
        margin-bottom: 20px;
        display: block;
        position: relative;
    }

        .section-label::after {
            content: '';
            position: absolute;
            bottom: -2px;
            right: 0;
            width: 50px;
            height: 2px;
            background-color: var(--royal-gold);
        }

    /* حقول الإدخال */
    .form-control, .form-select, .input-group-text {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 12px;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--royal-gold);
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
            background-color: var(--bg-cream);
        }

    .input-group-text {
        background-color: var(--royal-black);
        color: var(--royal-gold);
        border: 1px solid var(--royal-black);
    }

    /* --- تنسيق قائمة الخدمات القابلة للتمرير --- */
    .services-scroll-container {
        max-height: 400px; /* تحديد ارتفاع ثابت */
        overflow-y: auto; /* تفعيل التمرير العمودي */
        padding: 10px;
        border: 1px solid #f0f0f0;
        border-radius: 8px;
        background-color: #fff;
        margin-bottom: 15px;
    }

        /* تنسيق شريط التمرير */
        .services-scroll-container::-webkit-scrollbar {
            width: 8px;
        }

        .services-scroll-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .services-scroll-container::-webkit-scrollbar-thumb {
            background: var(--royal-gold);
            border-radius: 4px;
        }

            .services-scroll-container::-webkit-scrollbar-thumb:hover {
                background: var(--royal-gold-dark);
            }

    /* كروت الخدمات */
    .service-card {
        border: 1px solid #eee;
        border-radius: 10px;
        padding: 10px; /* تقليل الحشو قليلاً */
        background: #fff;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        height: 100%; /* لضمان تساوي الارتفاع */
    }

        .service-card:hover {
            border-color: var(--royal-gold);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    /* عند اختيار الخدمة */
    .form-check-input:checked + label .service-name-text {
        color: var(--royal-black);
        font-weight: bold;
    }

    .form-check-input:checked ~ label .price-tag {
        color: var(--royal-gold-dark) !important;
    }

    /* شريط السعر العائم */
    .price-summary-box {
        background: linear-gradient(135deg, var(--royal-black) 0%, #2c2c2c 100%);
        color: var(--royal-gold);
        border-radius: 10px;
        padding: 15px 25px;
        margin-bottom: 20px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }

        .price-summary-box .h4 {
            color: #fff;
        }

    /* الأزرار */
    .btn-royal-save {
        background: linear-gradient(135deg, var(--royal-gold), var(--royal-gold-dark));
        color: #fff;
        border: none;
        padding: 12px 40px;
        font-weight: bold;
        border-radius: 8px;
        transition: transform 0.2s;
    }

        .btn-royal-save:hover {
            transform: translateY(-2px);
            color: #fff;
            box-shadow: 0 5px 15px rgba(197, 160, 89, 0.4);
        }

    .btn-royal-cancel {
        border: 1px solid #ccc;
        color: #666;
        padding: 12px 30px;
        border-radius: 8px;
        background: #fff;
    }

        .btn-royal-cancel:hover {
            background: #f8f8f8;
            color: #000;
        }

    /* Select2 Customization */
    .select2-container--bootstrap-5 .select2-selection {
        border-color: #e0e0e0 !important;
        border-radius: 8px !important;
        padding: 8px !important;
    }

    .select2-container--bootstrap-5.select2-container--focus .select2-selection {
        border-color: var(--royal-gold) !important;
        box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15) !important;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card royal-card">

                <div class="card-header royal-header">
                    <h4 class="mb-0"><i class="fa-solid fa-spa ms-2"></i> حجز موعد صالون</h4>
                </div>

                <div class="card-body p-5">
                    <form method="post">

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Appointment.ClientId" class="form-label fw-bold">العميلة</label>
                                <select asp-for="Appointment.ClientId" id="clientSelect" class="form-select" asp-items="ViewBag.ClientId" required>
                                    <option value="">-- اختر العميلة --</option>
                                </select>
                                <span asp-validation-for="Appointment.ClientId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Appointment.AppointmentDate" class="form-label fw-bold">تاريخ ووقت الموعد</label>
                                <input asp-for="Appointment.AppointmentDate"
                                       class="form-control"
                                       type="datetime-local"
                                       asp-format="{0:yyyy-MM-ddTHH:mm}"
                                       required />
                                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-5">
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
                                <label class="section-label mb-0 border-0 p-0">
                                    <i class="fa-solid fa-wand-magic-sparkles ms-2 text-warning"></i> الخدمات المطلوبة
                                    <small class="text-muted fw-normal ms-2" style="font-size: 0.8rem;">(قم بالتمرير لرؤية المزيد)</small>
                                </label>
                                <div class="input-group w-50">
                                    <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                                    <input type="text" id="serviceSearchInput" class="form-control border-start-0 ps-0" placeholder="ابحث عن خدمة..." autocomplete="off">
                                </div>
                            </div>

                            <div class="services-scroll-container">
                                <div class="row g-3" id="servicesListContainer">
                                    @foreach (var service in Model.AvailableServices)
                                    {
                                        <div class="col-md-6 service-item">
                                            <div class="service-card position-relative p-3 h-100">
                                                <div class="row align-items-center g-2">

                                                    @* 1. مربع الاختيار والاسم (يسار) *@
                                                    <div class="col-8 col-sm-9">
                                                        <div class="form-check m-0">
                                                            <input class="form-check-input service-check fs-5" type="checkbox"
                                                                   name="SelectedServiceIds"
                                                                   value="@service.Id"
                                                                   id="srv_@service.Id"
                                                                   data-price="@service.Price"
                                                                   onchange="toggleQuantity(this, @service.Id)"
                                                                   style="cursor: pointer;">

                                                            <label class="form-check-label w-100 ps-2" for="srv_@service.Id" style="cursor: pointer;">
                                                                <div class="service-name-text fw-bold text-truncate" title="@service.Name">@service.Name</div>
                                                                <div class="text-muted small">@service.Price.ToString("N0") ج.م</div>
                                                            </label>
                                                        </div>
                                                    </div>

                                                    @* 2. مربع الكمية (يمين) - ظاهر دائماً ولكن معطل *@
                                                    <div class="col-4 col-sm-3 text-end">
                                                        <div class="quantity-wrapper" id="qty_wrapper_@service.Id" style="opacity: 0.5; pointer-events: none;">
                                                            <div class="input-group input-group-sm">
                                                                <span class="input-group-text bg-light px-2 border-0 small text-muted">عدد</span>
                                                                <input type="number"
                                                                       name="ServiceQuantities[@service.Id]"
                                                                       id="qty_input_@service.Id"
                                                                       class="form-control text-center fw-bold px-1"
                                                                       value="1" min="1" max="50"
                                                                       onchange="updateTotal()"
                                                                       onkeyup="updateTotal()"
                                                                       style="max-width: 60px;">
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div id="noServicesFound" class="alert alert-light text-center mt-3 text-muted border border-dashed" style="display: none;">
                                    <i class="fa fa-circle-exclamation me-2"></i> لا توجد خدمة بهذا الاسم
                                </div>
                            </div>
                        </div>

                        <div class="price-summary-box d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0 text-white-50 small text-uppercase">إجمالي التكلفة المتوقعة</h5>
                                <span class="h2 fw-bold text-white mb-0" id="totalPriceDisplay">0 ج.م</span>
                            </div>
                            <div class="text-end">
                                <i class="fa-solid fa-coins fa-2x text-white-50"></i>
                            </div>
                        </div>

                        <div class="row mt-4 p-4 bg-light rounded-3 border g-4 align-items-end">
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2">
                                    <span class="text-muted">مجموع الخدمات:</span>
                                    <span class="fw-bold" id="totalPriceDisplayBottom">0 ج.م</span>
                                </div>
                                <small class="text-muted"><i class="fa fa-info-circle"></i> السعر النهائي قد يختلف بناءً على إضافات أثناء العمل.</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Appointment.PaidAmount" class="form-label fw-bold text-success">العربون المدفوع (إن وجد)</label>
                                <div class="input-group">
                                    <input asp-for="Appointment.PaidAmount" class="form-control fw-bold text-success" placeholder="0" value="0" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 mb-4">
                            <label asp-for="Appointment.Notes" class="form-label fw-bold">ملاحظات إضافية</label>
                            <textarea asp-for="Appointment.Notes" class="form-control" rows="2" placeholder="أي تفاصيل خاصة بالعميلة..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-page="./Index" class="btn btn-royal-cancel">
                                <i class="fa-solid fa-arrow-right ms-2"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-royal-save shadow-lg">
                                <i class="fa-solid fa-check ms-2"></i> تأكيد الحجز
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // تفعيل Select2 للعملاء
            $('#clientSelect').select2({
                theme: 'bootstrap-5',
                placeholder: '-- ابحث عن العميلة --',
                width: '100%',
                language: { noResults: function () { return "لا توجد نتائج"; } }
            });
        });

        // ==========================================
        // 1. دالة تفعيل/تعطيل الكمية (التصميم الجديد)
        // ==========================================
        function toggleQuantity(checkbox, id) {
            // نبحث عن الحاوية الخاصة بالكمية
            var qtyWrapper = document.getElementById('qty_wrapper_' + id);
            var qtyInput = document.getElementById('qty_input_' + id);

            if (!qtyWrapper || !qtyInput) return; // حماية

            if (checkbox.checked) {
                // تفعيل: شفافية كاملة + السماح بالكتابة
                qtyWrapper.style.opacity = '1';
                qtyWrapper.style.pointerEvents = 'auto';
                qtyInput.focus(); // نقل المؤشر للكتابة فوراً
            } else {
                // تعطيل: شفافية 50% + منع الكتابة
                qtyWrapper.style.opacity = '0.5';
                qtyWrapper.style.pointerEvents = 'none';
                qtyInput.value = 1; // إعادة العدد لـ 1
            }
            updateTotal();
        }

        // ==========================================
        // 2. دالة حساب الإجمالي
        // ==========================================
        function updateTotal() {
            let total = 0;
            const checkboxes = document.querySelectorAll('.service-check');

            checkboxes.forEach(chk => {
                if (chk.checked) {
                    let price = parseFloat(chk.getAttribute('data-price')) || 0;
                    let serviceId = chk.value;
                    let qtyInput = document.getElementById('qty_input_' + serviceId);

                    let qty = 1;
                    if (qtyInput) {
                        qty = parseInt(qtyInput.value) || 1;
                    }

                    total += (price * qty);
                }
            });

            const formattedTotal = total.toLocaleString() + ' ج.م';

            const topLabel = document.getElementById('totalPriceDisplay');
            const bottomLabel = document.getElementById('totalPriceDisplayBottom');

            if (topLabel) topLabel.textContent = formattedTotal;
            if (bottomLabel) bottomLabel.textContent = formattedTotal;
        }

        // ==========================================
        // 3. كود البحث (الفلترة)
        // ==========================================
        const searchInput = document.getElementById('serviceSearchInput');
        if (searchInput) {
            searchInput.addEventListener('keyup', function () {
                let filter = this.value.toLowerCase();
                let items = document.querySelectorAll('.service-item');
                let hasVisibleItems = false;

                items.forEach(function (item) {
                    let nameEl = item.querySelector('.service-name-text');
                    if (nameEl) {
                        let serviceName = nameEl.textContent.toLowerCase();
                        if (serviceName.includes(filter)) {
                            item.style.display = '';
                            hasVisibleItems = true;
                        } else {
                            item.style.display = 'none';
                        }
                    }
                });

                let noResultMsg = document.getElementById('noServicesFound');
                if (noResultMsg) {
                    noResultMsg.style.display = hasVisibleItems ? 'none' : 'block';
                }
            });
        }

        // تشغيل الحساب مرة واحدة عند التحميل
        updateTotal();
    </script>
}