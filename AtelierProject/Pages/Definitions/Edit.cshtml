@page
@model AtelierProject.Pages.Definitions.EditModel
@using AtelierProject.Models
@{
    ViewData["Title"] = "تعديل الموديل";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-custom">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">تعديل بيانات: @Model.ProductDefinition.Name</h5>
                    <span class="badge bg-secondary">@Model.ProductDefinition.Code</span>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="ProductDefinition.Id" />
                        <input type="hidden" asp-for="ProductDefinition.Code" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ProductDefinition.Name" class="form-label fw-bold"></label>
                                <input asp-for="ProductDefinition.Name" class="form-control" />
                                <span asp-validation-for="ProductDefinition.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ProductDefinition.Department" class="form-label fw-bold"></label>
                                <select asp-for="ProductDefinition.Department" class="form-select" asp-items="Html.GetEnumSelectList<DepartmentType>()"></select>
                                <span asp-validation-for="ProductDefinition.Department" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ProductDefinition.RentalPrice" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="ProductDefinition.RentalPrice" class="form-control" placeholder="0.00" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ProductDefinition.DepositAmount" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="ProductDefinition.DepositAmount" class="form-control" placeholder="0.00" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="ProductDefinition.Description" class="form-label fw-bold"></label>
                                <textarea asp-for="ProductDefinition.Description" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="col-12 mt-4 text-end">
                                <a asp-page="./Index" class="btn btn-secondary me-2">رجوع</a>
                                <button type="submit" class="btn btn-primary px-4">حفظ التعديلات</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }