@page "{id:int}"
@model AtelierProject.Pages.Definitions.DetailsModel
@{
    ViewData["Title"] = "تفاصيل الموديل";
}

<style>
    /* --- التنسيقات الملكية --- */

    /* بطاقة المنتج */
    .product-card {
        border: none;
        border-radius: 20px;
        background: #fff;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .product-header-bg {
        height: 100px;
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        position: relative;
    }

    .product-icon-large {
        width: 90px;
        height: 90px;
        background: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: #c5a059;
        position: absolute;
        bottom: -45px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border: 4px solid #fff;
    }

    /* تفاصيل السعر */
    .price-tag {
        font-size: 1.5rem;
        font-weight: 800;
        color: #1e293b;
    }

    .price-label {
        font-size: 0.8rem;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* الجدول */
    .luxury-table {
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .luxury-table thead th {
            border: none;
            color: #64748b;
            font-weight: 600;
            padding: 15px;
            font-size: 0.85rem;
            background-color: #f8fafc;
        }

        .luxury-table tbody tr {
            background: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
            transition: 0.2s;
        }

            .luxury-table tbody tr:hover {
                transform: scale(1.005);
                box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            }

        .luxury-table td {
            border: none;
            padding: 15px;
            vertical-align: middle;
        }

            .luxury-table td:first-child {
                border-radius: 0 10px 10px 0;
                border-right: 3px solid transparent;
            }

            .luxury-table td:last-child {
                border-radius: 10px 0 0 10px;
            }

        .luxury-table tr:hover td:first-child {
            border-right-color: #c5a059;
        }

    /* الأزرار */
    .btn-edit-royal {
        border: 2px solid #c5a059;
        color: #c5a059;
        font-weight: bold;
        border-radius: 50px;
        padding: 8px 25px;
        transition: 0.3s;
    }

        .btn-edit-royal:hover {
            background: #c5a059;
            color: #fff;
        }

    .btn-add-item {
        background: linear-gradient(135deg, #10b981, #059669);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 8px 20px;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(16, 185, 129, 0.3);
    }

        .btn-add-item:hover {
            transform: translateY(-2px);
            color: #fff;
        }
</style>

<div class="container py-4">

    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="product-card">
                <div class="product-header-bg">
                    <div class="product-icon-large">
                        @if (Model.ProductDefinition.Department == AtelierProject.Models.DepartmentType.Men)
                        {
                            <i class="fa-solid fa-user-tie"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-person-dress"></i>
                        }
                    </div>
                </div>

                <div class="card-body pt-5 text-center px-5">
                    <h2 class="fw-bold text-dark mt-3 mb-1">@Model.ProductDefinition.Name</h2>
                    <span class="badge bg-light text-dark border font-monospace mb-4">Code: @Model.ProductDefinition.Code</span>

                    <div class="row g-4 text-center border-top pt-4 mt-2">
                        <div class="col-6 border-end">
                            <div class="price-label">سعر الإيجار</div>
                            <div class="price-tag text-success">@Model.ProductDefinition.RentalPrice.ToString("N0") <small class="fs-6">ج.م</small></div>
                        </div>
                        <div class="col-6">
                            <div class="price-label">مبلغ التأمين</div>
                            <div class="price-tag text-warning">@Model.ProductDefinition.DepositAmount.ToString("N0") <small class="fs-6">ج.م</small></div>
                        </div>
                    </div>

                    <div class="text-start mt-4 bg-light p-3 rounded text-muted small">
                        <strong><i class="fa-solid fa-align-right me-2"></i> الوصف:</strong>
                        <br>
                        @(Model.ProductDefinition.Description ?? "لا يوجد وصف إضافي لهذا الموديل.")
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-page="./Index" class="text-decoration-none text-muted fw-bold">
                            <i class="fa-solid fa-arrow-right me-1"></i> عودة للقائمة
                        </a>
                        <a asp-page="./Edit" asp-route-id="@Model.ProductDefinition.Id" class="btn-edit-royal">
                            <i class="fa-solid fa-pen me-2"></i> تعديل البيانات
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-3 px-2">
                <h5 class="fw-bold text-dark mb-0">
                    <i class="fa-solid fa-boxes-stacked text-warning me-2"></i> المخزون والنسخ المتاحة
                </h5>
                <button class="btn-add-item" data-bs-toggle="modal" data-bs-target="#addItemModal">
                    <i class="fa-solid fa-plus me-1"></i> إضافة قطعة
                </button>
            </div>

            <div class="table-responsive">
                <table class="table luxury-table">
                    <thead>
                        <tr>
                            <th>الباركود</th>
                            <th>النسخة / الوصف</th>
                            <th>المقاس</th>
                            <th>الحالة</th>
                            <th class="text-center">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ProductItems.Any())
                        {
                            @foreach (var item in Model.ProductItems)
                            {
                                <tr>
                                    <td class="font-monospace text-muted">@item.Barcode</td>

                                    <td class="fw-bold text-dark">
                                        @(string.IsNullOrEmpty(item.Name) ? "نسخة قياسية" : item.Name)
                                    </td>

                                    <td><span class="badge bg-light text-dark border">@item.Size</span></td>

                                    <td>
                                        @switch (item.Status)
                                        {
                                            case AtelierProject.Models.ItemStatus.Available:
                                                <span class="badge bg-success bg-opacity-10 text-success border border-success">متاح</span>
                                                break;
                                            case AtelierProject.Models.ItemStatus.Rented:
                                                <span class="badge bg-warning bg-opacity-10 text-warning border border-warning">مؤجر</span>
                                                break;
                                            case AtelierProject.Models.ItemStatus.Maintenance:
                                                <span class="badge bg-info bg-opacity-10 text-info border border-info">صيانة</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">غير متاح</span>
                                                break;
                                        }
                                    </td>

                                    <td class="text-center">
                                        <form method="post" asp-page-handler="DeleteItem" class="d-inline">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <input type="hidden" name="definitionId" value="@Model.ProductDefinition.Id" />
                                            <button class="btn btn-sm btn-light text-danger rounded-circle shadow-sm border"
                                                    onclick="return confirm('هل أنت متأكد من حذف هذه القطعة من المخزون؟')" title="حذف">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="opacity-50">
                                        <i class="fa-solid fa-box-open fa-3x mb-3 text-muted"></i>
                                        <p class="text-muted fw-bold">المخزون فارغ. أضف أول قطعة!</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="addItemModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 20px;">
            <div class="modal-header bg-dark text-white border-0">
                <h5 class="modal-title fw-bold"><i class="fa-solid fa-plus-circle me-2 text-success"></i> إضافة قطعة للمخزون</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="AddItem">
                <div class="modal-body p-4">
                    <input type="hidden" name="definitionId" value="@Model.ProductDefinition.Id" />

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">اسم/وصف النسخة (اختياري)</label>
                        <input asp-for="NewItem.Name" class="form-control" placeholder="مثال: النسخة المعدلة" />
                        <span asp-validation-for="NewItem.Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">المقاس <span class="text-danger">*</span></label>
                        <input asp-for="NewItem.Size" class="form-control" placeholder="مثال: 42, XL" required />
                    </div>

                    <div class="mb-2">
                        <label class="form-label fw-bold small text-muted">الباركود</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-barcode"></i></span>
                            <input asp-for="NewItem.Barcode" class="form-control" placeholder="اتركه فارغاً للتوليد التلقائي" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-light fw-bold text-muted" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-success fw-bold px-4">إضافة وحفظ</button>
                </div>
            </form>
        </div>
    </div>
</div>