@page "{id:int}"
@model AtelierProject.Pages.Bookings.ContractModel
@{
    Layout = null;
    ViewData["Title"] = $"عقد إيجار #{Model.Booking.Id}";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Amiri:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #1a1a1a;
            --accent-color: #c5a059;
        }

        body {
            background-color: #eee;
            font-family: 'Amiri', serif;
            color: #000;
            margin: 0;
            padding: 20px;
        }

        /* حاوية الصفحة */
        .contract-page {
            background: white;
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 10mm; /* تقليل الهوامش الخارجية لأن الجدول سيحمل الهوامش */
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            position: relative;
        }

        /* الجدول الرئيسي الذي يتحكم في التخطيط */
        .print-layout-table {
            width: 100%;
            border-collapse: collapse;
        }

        /* تكرار الرأس والتذييل */
        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        /* الرأس */
        .contract-header {
            border-bottom: 2px double var(--primary-color);
            padding-bottom: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        .header-title h1 {
            font-weight: 700;
            font-size: 26px;
            margin-bottom: 5px;
        }

        .contract-number {
            font-family: 'Cairo', sans-serif;
            font-size: 13px;
            color: #555;
        }

        /* التذييل (التوقيعات) */
        .contract-footer {
            border-top: 1px solid #ccc;
            padding-top: 10px;
            margin-top: 20px;
        }

        .signatures {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .sign-box {
            width: 45%;
            text-align: center;
            font-weight: bold;
            font-size: 14px;
        }

        .sign-place {
            margin-top: 30px;
            border-bottom: 1px dotted #000;
            width: 80%;
            margin-right: auto;
            margin-left: auto;
        }

        /* جسم العقد */
        .contract-body {
            padding-top: 10px;
            padding-bottom: 10px;
            font-size: 15px;
            line-height: 1.6;
        }

        .party-box {
            background-color: #f9f9f9;
            padding: 10px;
            border: 1px solid #eee;
            margin-bottom: 10px;
            border-right: 4px solid var(--accent-color);
            font-size: 14px;
        }

        .items-table {
            width: 100%;
            margin: 15px 0;
            border-collapse: collapse;
            font-family: 'Cairo', sans-serif;
            font-size: 13px;
        }

            .items-table th {
                background-color: #f0f0f0;
                border: 1px solid #000;
                padding: 6px;
                font-weight: bold;
            }

            .items-table td {
                border: 1px solid #000;
                padding: 6px;
                text-align: center;
            }

        .terms-list {
            font-size: 13px;
            padding-right: 15px;
        }

            .terms-list li {
                margin-bottom: 5px;
                text-align: justify;
            }

        /* أزرار التحكم */
        .control-panel {
            position: fixed;
            top: 20px;
            left: 20px;
            display: flex;
            gap: 10px;
            z-index: 1000;
        }

        @@media print {
            body {
                background: white;
                margin: 0;
                padding: 0;
            }

            .contract-page {
                margin: 0;
                box-shadow: none;
                width: 100%;
                min-height: 100%;
                padding: 0;
            }

            .control-panel {
                display: none;
            }

            .party-box {
                background-color: white !important;
                border: 1px solid #000;
            }
            /* لإجبار المتصفح على تكرار الهيدر والفوتر */
            table {
                page-break-inside: auto;
            }

            tr {
                page-break-inside: avoid;
                page-break-after: auto;
            }

            thead {
                display: table-header-group;
            }

            tfoot {
                display: table-footer-group;
            }

            @@page {
                size: A4;
                margin: 10mm 15mm;
            }
        }
    </style>
</head>
<body>

    <div class="control-panel no-print">
        <button onclick="window.print()" class="btn btn-dark shadow"><i class="fa-solid fa-print"></i> طباعة العقد</button>
        <a href="javascript:window.close()" class="btn btn-secondary shadow"><i class="fa-solid fa-xmark"></i> إغلاق</a>
    </div>

    <div class="contract-page">
        <table class="print-layout-table">

            <thead>
                <tr>
                    <td>
                        <div class="contract-header">
                            <div class="header-title">
                                <h1>عقـــد إيجـــار واتفاق</h1>
                                <div class="contract-number">رقم العقد: #@Model.Booking.Id | التاريخ: @Model.Booking.CreatedDate.ToString("yyyy/MM/dd")</div>
                            </div>
                        </div>
                    </td>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <td>
                        <div class="contract-footer">
                            <div class="signatures">
                                <div class="sign-box">
                                    الطرف الأول (الأتيليــه)
                                    <div class="sign-place"></div>
                                </div>
                                <div class="sign-box">
                                    الطرف الثاني (المستأجــر)
                                    <div class="sign-place"></div>
                                </div>
                            </div>
                            <div style="text-align: center; font-size: 10px; color: #999; margin-top: 5px;">
                                صفحة <span class="page-number"></span>
                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>

            <tbody>
                <tr>
                    <td>
                        <div class="contract-body">

                            <div class="mb-3">
                                <p>تم الاتفاق في يوم <strong>@DateTime.Now.ToString("dddd")</strong> الموافق <strong>@DateTime.Now.ToString("yyyy/MM/dd")</strong> بين كل من:</p>
                                <div class="party-box">
                                    <strong>الطرف الأول (المؤجر):</strong> أتيليه @Model.AtelierName <br>
                                    العنوان: @Model.AtelierAddress
                                </div>
                                <div class="party-box">
                                    <strong>الطرف الثاني (المستأجر):</strong> السيد/ة @Model.Booking.Client.Name <br>
                                    رقم الهاتف: <span dir="ltr">@Model.Booking.Client.Phone</span>
                                    @if (!string.IsNullOrEmpty(Model.Booking.Client.NationalId))
                                    {<span> | رقم الهوية: @Model.Booking.Client.NationalId</span>}
                                </div>
                                <p>وقد اتفق الطرفان وهما بكامل الأهلية المعتبرة شرعاً وقانوناً على ما يلي:</p>
                            </div>

                            <div class="mb-3">
                                <h6><strong>البند الأول: وصف القطع المؤجرة</strong></h6>
                                <p>أجرالطرف الثاني من الطرف الأول القطع الموضحة أدناه بحالة جيدة وصالحة للاستعمال:</p>
                                <table class="items-table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>وصف القطعة / الموديل</th>
                                          
                                            <th>المقاس</th>
                                            <th>الكود</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Booking.BookingItems.Any())
                                        {
                                            int i = 1;
                                            foreach (var item in Model.Booking.BookingItems)
                                            {
                                                <tr>
                                                    <td>@(i++)</td>
                                                    <td>@item.ProductItem?.ProductDefinition?.Name</td>
                                                    
                                                    <td>@item.ProductItem?.Size</td>
                                                    <td>@item.ProductItem?.Barcode</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mb-3">
                                <h6><strong>البند الثاني: مدة الإيجار والقيمة المالية</strong></h6>
                                <ul>
                                    <li><strong>تاريخ الاستلام:</strong> @Model.Booking.PickupDate.ToString("yyyy/MM/dd")</li>
                                    <li><strong>تاريخ الإرجاع:</strong> @Model.Booking.ReturnDate.ToString("yyyy/MM/dd") (يجب الالتزام بالموعد).</li>
                                    <li><strong>إجمالي القيمة الإيجارية:</strong> @Model.Booking.TotalAmount.ToString("N0") ج.م</li>
                                    <li><strong>العربون المدفوع:</strong> @Model.Booking.PaidAmount.ToString("N0") ج.م</li>
                                    <li><strong>مبلغ التأمين (يسترد عند الإرجاع):</strong> @Model.Booking.InsuranceAmount.ToString("N0") ج.م</li>
                                </ul>
                            </div>

                            <div class="mb-3">
                                <h6><strong>البند الثالث: الشروط والأحكام</strong></h6>
                                <ol class="terms-list">
                                    @*<li>يقر الطرف الثاني (المستأجر) بأنه عاين القطع المؤجرة معاينة تامة ووجدها بحالة ممتازة وخالية من العيوب، ويتعهد بإعادتها بنفس الحالة التي استلمها عليها.</li>*@
                                    <li>في حالة تأخر الطرف الثاني عن موعد الإرجاع المحدد أعلاه، يحق للطرف الأول خصم مبلغ عن كل يوم تأخير من مبلغ التأمين.</li>
                                    <li>في حالة تلف القطعة أو ضياعها أو حدوث بقع يصعب إزالتها، يلتزم الطرف الثاني بدفع قيمة إصلاح التلفيات، أو دفع ثمن القطعة كاملاً في حالة التلف الكلي.</li>
                                    <li>مبلغ العربون لا يسترد في حالة إلغاء الحجز قبل الموعد بـ 48 ساعة.</li>
                                    <li>لا يحق للطرف الثاني تعديل القطعة (تضييق/تقصير) إلا بمعرفة الأتيليه.</li>
                                    <li>يعتبر هذا العقد سنداً قانونياً وتوقيع المستأجر عليه بمثابة إقرار بجميع ما ورد فيه.</li>
                                </ol>
                            </div>

                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>