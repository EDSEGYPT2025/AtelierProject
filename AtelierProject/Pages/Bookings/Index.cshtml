@page
@model AtelierProject.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "سجل الحجوزات";
    var today = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark"><i class="fa-solid fa-calendar-check text-primary me-2"></i> سجل حجوزات الأتيليه</h3>
        <a asp-page="Create" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus me-2"></i> حجز جديد
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4 bg-light">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-bold small text-muted">بحث سريع</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fa-solid fa-search"></i></span>
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="رقم الحجز، اسم العميل، هاتفه..." />
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">التاريخ</label>
                    <input type="date" name="DateFilter" value="@(Model.DateFilter?.ToString("yyyy-MM-dd"))" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">نوع الفلتر</label>
                    <select name="TypeFilter" class="form-select" asp-for="TypeFilter">
                        <option value="">-- الكل --</option>
                        <option value="Pickup">مواعيد التسليم (Pickup)</option>
                        <option value="Return">مواعيد الإرجاع (Return)</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100"><i class="fa-solid fa-filter"></i> تصفية</button>
                </div>

                <div class="col-12 mt-2">
                    <small class="text-muted me-2">اختصارات:</small>
                    <a asp-page="./Index" asp-route-DateFilter="@today" asp-route-TypeFilter="Pickup" class="btn btn-sm btn-outline-primary rounded-pill me-1">
                        <i class="fa-solid fa-truck"></i> تسليمات اليوم
                    </a>
                    <a asp-page="./Index" asp-route-DateFilter="@today" asp-route-TypeFilter="Return" class="btn btn-sm btn-outline-danger rounded-pill">
                        <i class="fa-solid fa-rotate-left"></i> مرتجعات اليوم
                    </a>
                    <a asp-page="./Index" class="btn btn-sm btn-link text-decoration-none">عرض الكل</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">#</th>
                            <th>العميل</th>
                            <th>الموديل / الأصناف</th>
                            <th>تاريخ الاستلام</th>
                            <th>تاريخ الإرجاع</th>
                            <th>المتبقي (عليه)</th>
                            <th class="text-center">الحالة</th>
                            <th class="text-center">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Bookings.Any())
                        {
                            @foreach (var item in Model.Bookings)
                            {
                                var firstItem = item.BookingItems.FirstOrDefault()?.ProductItem;
                                var itemName = firstItem?.ProductDefinition?.Name ?? "غير محدد";
                                var itemCount = item.BookingItems.Count;

                                <tr>
                                    <td class="text-center fw-bold">@item.Id</td>

                                    <td>
                                        <div class="fw-bold">@item.Client.Name</div>
                                        <small class="text-muted" dir="ltr">@item.Client.Phone</small>
                                    </td>

                                    <td>
                                        <span class="text-primary fw-bold">@itemName</span>
                                        @if (itemCount > 1)
                                        {
                                            <span class="badge bg-secondary rounded-pill">+@(itemCount - 1)</span>
                                        }
                                        <div class="small text-muted">@firstItem?.ProductDefinition?.Code</div>
                                    </td>

                                    <td>
                                        <i class="fa-regular fa-calendar text-muted me-1"></i>
                                        @item.PickupDate.ToString("dd/MM")
                                    </td>

                                    <td>
                                        <i class="fa-solid fa-rotate-left text-muted me-1"></i>
                                        @item.ReturnDate.ToString("dd/MM")
                                    </td>

                                    <td>
                                        @if (item.RemainingRentalAmount > 0)
                                        {
                                            <span class="text-danger fw-bold">@item.RemainingRentalAmount.ToString("N0")</span>
                                        }
                                        else
                                        {
                                            <span class="text-success"><i class="fa-solid fa-check"></i> خالص</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @switch (item.Status)
                                        {
                                            case AtelierProject.Models.BookingStatus.New:
                                                <span class="badge bg-info text-dark">جديد</span>
                                                break;
                                            case AtelierProject.Models.BookingStatus.PickedUp:
                                                <span class="badge bg-warning text-dark">تم التسليم (خارج)</span>
                                                break;
                                            case AtelierProject.Models.BookingStatus.Returned:
                                                <span class="badge bg-success">تم الإرجاع</span>
                                                break;
                                            case AtelierProject.Models.BookingStatus.Cancelled:
                                                <span class="badge bg-secondary">ملغي</span>
                                                break;
                                        }
                                    </td>

                                    <td class="text-center">
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary shadow-sm px-3">
                                            <i class="fa-solid fa-eye me-1"></i> تفاصيل
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-file-circle-xmark fa-3x mb-3 d-block opacity-50"></i>
                                    لا توجد حجوزات مطابقة للفلاتر الحالية.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>