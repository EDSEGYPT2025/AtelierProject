@page
@model AtelierProject.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "حجز جديد";
}

<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

<style>
    :root {
        --royal-gold: #c5a059;
        --royal-gold-dark: #b08d4b;
        --royal-black: #1a1a1a;
        --royal-grey: #f9f9f9;
        --text-dark: #333;
    }

    body {
        background-color: #f4f4f4;
    }

    .royal-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: #fff;
        border-top: 5px solid var(--royal-gold);
    }

    .royal-header {
        background-color: var(--royal-black);
        padding: 25px;
        text-align: center;
        position: relative;
    }

        .royal-header h3 {
            color: var(--royal-gold);
            font-family: 'Playfair Display', serif;
            margin: 0;
            font-size: 1.8rem;
            letter-spacing: 1px;
        }

    .section-title {
        font-family: 'Cairo', sans-serif;
        color: var(--royal-black);
        font-weight: 700;
        font-size: 1.1rem;
        position: relative;
        padding-bottom: 10px;
        margin-bottom: 20px;
        margin-top: 10px;
        border-bottom: 1px solid #eee;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -1px;
            right: 0;
            width: 60px;
            height: 3px;
            background-color: var(--royal-gold);
        }

    .form-control, .form-select, .input-group-text {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--royal-gold);
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
            background-color: #fffcf5;
        }

    .input-group-text {
        background-color: var(--royal-black);
        color: var(--royal-gold);
        border: 1px solid var(--royal-black);
        font-weight: bold;
    }

    .btn-royal-save {
        background: linear-gradient(135deg, var(--royal-gold), var(--royal-gold-dark));
        color: #fff;
        border: none;
        padding: 12px 40px;
        font-weight: bold;
        border-radius: 8px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-royal-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(197, 160, 89, 0.4);
            color: #fff;
        }

    .btn-royal-cancel {
        background-color: #fff;
        color: #555;
        border: 1px solid #ddd;
        padding: 12px 30px;
        border-radius: 8px;
        transition: all 0.2s;
    }

        .btn-royal-cancel:hover {
            background-color: #f8f8f8;
            color: #000;
            border-color: #bbb;
        }

    /* تنسيقات الجدول المضاف */
    .table-selected-items thead {
        background-color: var(--royal-black);
        color: var(--royal-gold);
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card royal-card">

                <div class="card-header royal-header">
                    <h3 class="mb-0"><i class="fa-solid fa-crown"></i> إنشاء حجز جديد</h3>
                </div>

                <div class="card-body p-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0 rounded-3 mb-4" role="alert"></div>

                        <h5 class="section-title"><i class="fa-regular fa-id-card ms-2 text-warning"></i> البيانات الأساسية</h5>
                        <div class="row g-4 mb-4">
                            <div class="col-md-12">
                                <label asp-for="Booking.ClientId" class="form-label fw-bold">العميل</label>
                                <select asp-for="Booking.ClientId" id="clientSelect" class="form-select" asp-items="ViewBag.ClientId">
                                    <option value="">-- اختر العميل --</option>
                                </select>
                                <span asp-validation-for="Booking.ClientId" class="text-danger"></span>
                            </div>
                        </div>

                        <h5 class="section-title"><i class="fa-solid fa-shirt ms-2 text-warning"></i> اختيار الموديلات</h5>
                        <div class="row g-3 mb-3 bg-light p-3 rounded align-items-end mx-0">
                            <div class="col-md-9">
                                <label class="form-label fw-bold">القطعة (ابحث بالكود أو الاسم)</label>
                                <select id="productSelect" class="form-select" asp-items="ViewBag.ProductItemId">
                                    <option value="">-- ابحث واختر الموديل --</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="button" id="btnAddItem" class="btn btn-dark w-100 fw-bold" style="background-color: var(--royal-black);">
                                    <i class="fa-solid fa-plus"></i> إضافة للسلة
                                </button>
                            </div>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-bordered table-striped text-center table-selected-items">
                                <thead>
                                    <tr>
                                        <th>اسم الموديل / الكود</th>
                                        <th style="width: 100px;">إجراء</th>
                                    </tr>
                                </thead>
                                <tbody id="itemsTableBody">
                                    <tr id="noItemsRow">
                                        <td colspan="2" class="text-muted small py-3">لم يتم اختيار أي قطع بعد..</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div id="hiddenInputsContainer"></div>

                        <h5 class="section-title"><i class="fa-regular fa-calendar-days ms-2 text-warning"></i> فترة الحجز</h5>
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Booking.PickupDate" class="form-label fw-bold">تاريخ الاستلام</label>
                                <input asp-for="Booking.PickupDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Booking.ReturnDate" class="form-label fw-bold">تاريخ الإرجاع</label>
                                <input asp-for="Booking.ReturnDate" class="form-control" type="date" />
                            </div>
                        </div>

                        <h5 class="section-title"><i class="fa-solid fa-coins ms-2 text-warning"></i> الماليات والتأمين</h5>
                        <div class="row g-4 mb-4">
                            <div class="col-md-4">
                                <label asp-for="Booking.TotalAmount" class="form-label fw-bold">إجمالي السعر</label>
                                <div class="input-group">
                                    <input asp-for="Booking.TotalAmount" class="form-control fw-bold text-dark" placeholder="0.00" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Booking.PaidAmount" class="form-label fw-bold">العربون المدفوع</label>
                                <div class="input-group">
                                    <input asp-for="Booking.PaidAmount" class="form-control fw-bold text-success" placeholder="0.00" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Booking.InsuranceAmount" class="form-label fw-bold text-danger">مبلغ التأمين</label>
                                <div class="input-group">
                                    <input asp-for="Booking.InsuranceAmount" class="form-control fw-bold text-danger" placeholder="0.00" />
                                    <span class="input-group-text">ج.م</span>
                                </div>
                                <div class="form-text small mt-1"><i class="fa-solid fa-circle-info ms-1"></i> يسترد عند الإرجاع</div>
                            </div>
                        </div>

                        <h5 class="section-title"><i class="fa-solid fa-scissors ms-2 text-warning"></i> ملاحظات الخياطة</h5>
                        <div class="mb-5">
                            <label asp-for="Booking.Notes" class="form-label fw-bold">تعديلات المقاسات / ملاحظات أخرى</label>
                            <textarea asp-for="Booking.Notes" class="form-control" rows="3" placeholder="اكتب هنا تفاصيل التعديلات المطلوبة..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a asp-page="Index" class="btn btn-royal-cancel">
                                <i class="fa-solid fa-arrow-right ms-1"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-royal-save shadow-sm">
                                <i class="fa-solid fa-check ms-1"></i> تأكيد وحفظ الحجز
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // تفعيل Select2
            $('#productSelect').select2({
                theme: 'bootstrap-5',
                placeholder: '-- ابحث بكود القطعة أو الاسم --',
                width: '100%',
                language: { noResults: function () { return "لا توجد نتائج مطابقة"; } }
            });

            $('#clientSelect').select2({
                theme: 'bootstrap-5',
                placeholder: '-- ابحث عن العميل --',
                width: '100%',
                language: { noResults: function () { return "عميل غير موجود"; } }
            });

            // ✅ كود إضافة وحذف العناصر
            $('#btnAddItem').click(function () {
                var itemId = $('#productSelect').val();
                var itemName = $('#productSelect option:selected').text();

                // التحقق من الاختيار
                if (!itemId) {
                    alert('الرجاء اختيار قطعة من القائمة أولاً');
                    return;
                }

                // التحقق من التكرار
                if ($('#hiddenInputsContainer input[value="' + itemId + '"]').length > 0) {
                    alert('هذه القطعة مضافة بالفعل للقائمة');
                    return;
                }

                // إزالة صف "لا يوجد عناصر"
                $('#noItemsRow').remove();

                // إضافة الصف للجدول
                var newRow = `
                        <tr data-id="${itemId}">
                            <td class="fw-bold text-start align-middle">${itemName}</td>
                            <td>
                                <button type="button" class="btn btn-danger btn-sm btn-remove-item rounded-circle" title="حذف">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                $('#itemsTableBody').append(newRow);

                // إضافة حقل مخفي يرسل الـ ID للسيرفر
                var hiddenInput = `<input type="hidden" name="SelectedItemIds" value="${itemId}" />`;
                $('#hiddenInputsContainer').append(hiddenInput);

                // إعادة تعيين القائمة
                $('#productSelect').val('').trigger('change');
            });

            // حذف عنصر
            $(document).on('click', '.btn-remove-item', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');

                row.remove();
                $('#hiddenInputsContainer input[value="' + id + '"]').remove();

                // إذا فرغت القائمة، أعد صف "لا يوجد عناصر"
                if ($('#itemsTableBody tr').length === 0) {
                    $('#itemsTableBody').html('<tr id="noItemsRow"><td colspan="2" class="text-muted small py-3">لم يتم اختيار أي قطع بعد..</td></tr>');
                }
            });
        });
    </script>
}