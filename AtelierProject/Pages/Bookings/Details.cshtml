@page "{id:int}"
@model AtelierProject.Pages.Bookings.DetailsModel
@using AtelierProject.Models

@{
    ViewData["Title"] = $"فاتورة #{Model.Booking.Id}";
    var netAmount = Model.Booking.TotalAmount - Model.Booking.Discount;

    // ... (نفس كود الواتساب والبيانات السابقة بدون تغيير) ...
    string clientName = Model.Booking.Client?.Name ?? "عميلنا العزيز";
    string originalPhone = Model.Booking.Client?.Phone ?? "";
    string cleanPhone = new string(originalPhone.Where(char.IsDigit).ToArray());
    if (cleanPhone.StartsWith("0")) cleanPhone = "20" + cleanPhone.Substring(1);

    string atelierName = !string.IsNullOrEmpty(Model.Booking.Branch?.CommercialName)
                          ? Model.Booking.Branch.CommercialName
                          : (Model.Booking.Branch?.Name ?? "ATELIER PRO");

    var sb = new System.Text.StringBuilder();
    // ... (نفس بناء نص الواتساب) ...
    string msgContent = Uri.EscapeDataString(sb.ToString());
    string waLink = string.IsNullOrEmpty(cleanPhone) ? "#" : $"https://wa.me/{cleanPhone}?text={msgContent}";
}

<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
<style>
    :root {
        --primary-gold: #c5a059;
        --primary-dark: #1a1a1a;
        --bg-cream: #fdfbf7;
        --text-grey: #555;
        --border-light: #eaeaea;
    }

    body {
        background-color: #eef2f5;
        font-family: 'Cairo', sans-serif;
    }

    /* تصميم الفاتورة للشاشة */
    .invoice-page {
        background: white;
        width: 210mm;
        min-height: 297mm;
        margin: 20px auto;
        padding: 10mm 15mm;
        position: relative;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border-top: 5px solid var(--primary-gold);
    }

    /* --- باقي التنسيقات العامة (نفس السابق) --- */
    .header-content { padding-bottom: 15px; margin-bottom: 15px; border-bottom: 1px double var(--primary-gold); text-align: center; }
    .atelier-title { font-family: 'Playfair Display', serif; font-size: 28px; color: var(--primary-dark); text-transform: uppercase; margin: 0; }
    .atelier-info { font-size: 12px; color: var(--text-grey); margin-top: 5px; }

    .info-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; background-color: var(--bg-cream); padding: 15px; border-radius: 8px; border: 1px solid #f0ebe0; margin-bottom: 15px; }
    .info-group h6 { color: var(--primary-gold); font-weight: 700; font-size: 11px; text-transform: uppercase; margin-bottom: 3px; }

    .main-print-table { width: 100%; border-collapse: separate; border-spacing: 0 5px; }
    .item-row td { background-color: #fff; padding: 10px 15px; border-top: 1px solid var(--border-light); border-bottom: 1px solid var(--border-light); vertical-align: middle; font-size: 13px; }
    .item-row td:first-child { border-right: 1px solid var(--border-light); border-top-right-radius: 10px; border-bottom-right-radius: 10px; }
    .item-row td:last-child { border-left: 1px solid var(--border-light); border-top-left-radius: 10px; border-bottom-left-radius: 10px; text-align: left; font-weight: 700; }
    .item-tag { display: inline-block; font-size: 10px; padding: 2px 6px; border: 1px solid #eee; background: #fcfcfc; border-radius: 8px; margin-left: 5px; color: #666; }

    .footer-wrapper { padding-top: 15px; border-top: 2px solid #eee; margin-top: 15px; display: flex; justify-content: space-between; }
    .financial-summary { background: var(--bg-cream); border: 1px solid #efe8d8; padding: 15px; border-radius: 8px; width: 280px; }
    .fin-row { display: flex; justify-content: space-between; margin-bottom: 5px; font-size: 13px; }
    .fin-row.total { border-top: 1px solid #dacfb8; padding-top: 5px; margin-top: 5px; font-size: 15px; font-weight: 700; }
    .fin-row.discount { color: #dc3545; }

    /* ========================================= */
    /* 🖨️ إعدادات الطباعة المعدلة (A4 صفحة واحدة) */
    /* ========================================= */
    @@media print {
        /* 1. إعدادات الصفحة لإلغاء الهوامش الافتراضية والفوتر */
        @@page {
            size: A4;
            margin: 0; /* إزالة هوامش المتصفح الافتراضية */
        }

        body {
            margin: 0;
            padding: 0;
            background-color: white !important;
            -webkit-print-color-adjust: exact;
        }

        /* 2. ضبط الحاوية لتكون مناسبة للطباعة */
        .container-fluid {
            width: 100% !important;
            padding: 0 !important;
            margin: 0 !important;
        }

        /* 3. إخفاء العناصر غير المرغوبة */
        #sidebar-wrapper, .navbar, .btn, .no-print, .modal, .alert {
            display: none !important;
        }

        /* 4. تنسيق جسم الفاتورة */
        .invoice-page {
            width: 100% !important;
            min-height: auto !important; /* السماح بتقليص الطول */
            margin: 0 !important;
            padding: 10mm 15mm !important; /* هوامش داخلية للفاتورة نفسها */
            border: none !important;
            box-shadow: none !important;
            /* تصغير بسيط للمحتوى إذا لزم الأمر */
            transform: scale(0.95);
            transform-origin: top center;
        }

        /* 5. منع تقسيم العناصر */
        .info-grid, .financial-summary, .footer-wrapper, tr {
            break-inside: avoid;
            page-break-inside: avoid;
        }

        /* تصغير الخطوط قليلاً للطباعة لضمان الاحتواء */
        .atelier-title { font-size: 24px !important; }
        .item-row td { padding: 8px 10px !important; font-size: 12px !important; }
        .financial-summary { padding: 10px !important; width: 45% !important; }
        ul li { margin-bottom: 2px !important; }
    }
</style>

<div class="container-fluid">

    <div class="no-print mb-4" style="width: 210mm; margin: 20px auto;">
        <div class="bg-white p-3 rounded shadow-sm border d-flex justify-content-between align-items-center flex-wrap gap-2">
            <a href="/Bookings/Index" class="btn btn-outline-secondary btn-sm px-3"><i class="fa fa-arrow-right"></i> عودة</a>

            <div class="d-flex gap-2 flex-wrap">
                @if (Model.Booking.Status == AtelierProject.Models.BookingStatus.New)
                {
                    <form method="post" asp-page-handler="UpdateStatus">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <input type="hidden" name="newStatus" value="@AtelierProject.Models.BookingStatus.PickedUp" />
                        <button class="btn btn-warning btn-sm fw-bold"><i class="fa fa-hand-holding"></i> تسليم</button>
                    </form>
                }
                else if (Model.Booking.Status == AtelierProject.Models.BookingStatus.PickedUp)
                {
                    <button class="btn btn-info btn-sm text-white fw-bold" data-bs-toggle="modal" data-bs-target="#returnModal"><i class="fa fa-undo"></i> استلام</button>
                }

                @if (Model.RemainingRental > 0 && Model.Booking.Status != AtelierProject.Models.BookingStatus.Cancelled)
                {
                    <button class="btn btn-primary btn-sm px-3" data-bs-toggle="modal" data-bs-target="#paymentModal"><i class="fa fa-money-bill"></i> دفع</button>
                }

                @if (!string.IsNullOrEmpty(originalPhone))
                {
                    <a href="@waLink" target="_blank" class="btn btn-success btn-sm px-3"><i class="fa-brands fa-whatsapp"></i> واتساب</a>
                }

                <a href="/Bookings/Contract/@Model.Booking.Id" target="_blank" class="btn btn-secondary btn-sm px-3">
                    <i class="fa-solid fa-file-contract"></i> العقد
                </a>

                <button onclick="window.print()" class="btn btn-dark btn-sm px-4"><i class="fa fa-print"></i> طباعة الفاتورة</button>
            </div>
        </div>
    </div>

    <div class="invoice-page">

        <div class="header-content">
            <div>
                <h1 class="atelier-title">@atelierName</h1>
                <div class="atelier-info">
                    @Model.Booking.Branch?.Address
                    @if (!string.IsNullOrEmpty(Model.Booking.Branch?.Phone))
                    {<span> | @Model.Booking.Branch.Phone</span>}
                </div>
            </div>
        </div>

        <div class="info-grid">
            <div class="info-group">
                <h6>العميل</h6>
                <div class="fw-bold">@Model.Booking.Client.Name</div>
                <small class="text-muted" dir="ltr">@Model.Booking.Client.Phone</small>
            </div>
            <div class="info-group ps-3 border-end">
                <h6>الفاتورة #@Model.Booking.Id</h6>
                <div class="d-flex justify-content-between small mt-1">
                    <span>استلام: <strong>@Model.Booking.PickupDate.ToString("yyyy-MM-dd")</strong></span>
                    <span>إرجاع: <strong>@Model.Booking.ReturnDate.ToString("yyyy-MM-dd")</strong></span>
                </div>
            </div>
        </div>

        <table class="main-print-table">
            <thead>
                <tr>
                    <th style="text-align:right; color:#888; font-size:11px; padding:5px 15px; border-bottom:1px solid #ddd;">تفاصيل الأصناف المحجوزة</th>
                    @*<th style="text-align:left; color:#888; font-size:11px; padding:5px 15px; border-bottom:1px solid #ddd;">السعر</th>*@
                </tr>
            </thead>
            <tbody>
                @if (Model.Booking.BookingItems != null && Model.Booking.BookingItems.Any())
                {
                    foreach (var item in Model.Booking.BookingItems)
                    {
                        <tr class="item-row">
                            <td>
                                <div style="font-weight:700; font-size:14px; margin-bottom:2px;">
                                    @item.ProductItem.ProductDefinition?.Name
                                    @if (!string.IsNullOrEmpty(item.ProductItem.Name))
                                    {<span> - @item.ProductItem.Name</span>}
                                </div>
                                <div>
                                    <span class="item-tag">كود: @(item.ProductItem.Barcode ?? "-")</span>
                                    <span class="item-tag">مقاس: @item.ProductItem.Size</span>
                                    @if (!string.IsNullOrEmpty(item.ProductItem.Color))
                                    {<span class="item-tag">لون: @item.ProductItem.Color</span>}
                                </div>
                            </td>
                            <td>
                                @*@(item.RentalPrice > 0 ? item.RentalPrice.ToString("N0") : "-")*@
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="2" class="text-center text-muted py-3">لا توجد قطع مسجلة.</td></tr>
                }

                @if (!string.IsNullOrEmpty(Model.Booking.Notes))
                {
                    <tr>
                        <td colspan="2" style="padding:10px; background:#fffcf5; border-right:3px solid var(--primary-gold); border-radius:4px; font-size:12px; color:#555;">
                            <strong>ملاحظات:</strong> @Model.Booking.Notes
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="footer-wrapper">
            <div style="width: 50%;">
                <h6 style="font-size:11px; font-weight:700; color:var(--primary-gold);">الشروط والأحكام:</h6>
                <ul style="font-size:10px; color:#666; padding-right:15px; line-height:1.5;">
                    <li>التأمين يسترد بالكامل في حالة سلامة القطعة.</li>
                    <li>يخصم قيمة التلفيات من التأمين حسب التقدير.</li>
                    <li>إلغاء الحجز: يسترد العربون خلال 48 ساعة فقط.</li>
                    <li>بعد 48 ساعة: يخصم 50% أو تأجيل لمدة سنة.</li>
                </ul>
            </div>

            <div class="financial-summary">
                <div class="fin-row"><span>الإجمالي:</span> <span>@Model.Booking.TotalAmount.ToString("N0")</span></div>

                @if (Model.Booking.Discount > 0)
                {
                    <div class="fin-row discount"><span>خصم خاص:</span> <span>- @Model.Booking.Discount.ToString("N0")</span></div>
                }

                <div class="fin-row" style="border-bottom:1px dashed #ccc; padding-bottom:5px;"><span>الصافي المطلوب:</span> <span class="fw-bold">@netAmount.ToString("N0")</span></div>

                <div class="fin-row mt-2"><span>المدفوع (عربون):</span> <span>@Model.Booking.PaidAmount.ToString("N0")</span></div>

                <div class="fin-row total"><span>المتبقي (عليه):</span> <span>@Model.RemainingRental.ToString("N0") ج.م</span></div>

                @if (Model.Booking.InsuranceAmount > 0)
                {
                    <div class="mt-2 text-center pt-2 border-top border-dashed text-danger fw-bold" style="font-size:12px;">
                        تأمين: @Model.Booking.InsuranceAmount.ToString("N0") ج.م
                    </div>
                }
            </div>
        </div>

        <div class="text-center mt-3 text-muted small" style="font-family:'Playfair Display'; font-size: 10px;">
            Thank you for choosing @(Model.Booking.Branch?.CommercialName ?? "Us")
        </div>

    </div>
</div>

<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white"><h5 class="modal-title fs-6">دفع متبقي</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
            <form method="post" asp-page-handler="AddPayment">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Booking.Id" />
                    <label class="fw-bold mb-2">المبلغ:</label>
                    <input type="number" name="paymentAmount" class="form-control" value="@Model.RemainingRental" max="@Model.RemainingRental" required />
                </div>
                <div class="modal-footer"><button class="btn btn-primary w-100">حفظ</button></div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="returnModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-info text-white"><h5 class="modal-title fs-6">إرجاع وتسوية</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
            <form method="post" asp-page-handler="Return">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Booking.Id" />
                    <div class="alert alert-light border text-center"><strong class="fs-5">تأمين: @Model.Booking.InsuranceAmount.ToString("N0")</strong></div>
                    <label class="text-danger fw-bold">خصم تلفيات (إن وجد):</label>
                    <input type="number" name="deductionAmount" class="form-control" value="0" />
                </div>
                <div class="modal-footer"><button class="btn btn-light" data-bs-dismiss="modal">إلغاء</button><button type="submit" class="btn btn-primary">تأكيد</button></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}