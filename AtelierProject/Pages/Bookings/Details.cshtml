@page "{id:int}"
@model AtelierProject.Pages.Bookings.DetailsModel
@using AtelierProject.Models

@{
    Layout = null;
    ViewData["Title"] = $"فاتورة #{Model.Booking.Id}";

    // 1. تجهيز بيانات العميل ورقم الهاتف
    string clientName = Model.Booking.Client?.Name ?? "عميلنا العزيز";
    string originalPhone = Model.Booking.Client?.Phone ?? "";

    // تنظيف رقم الهاتف ليكون بصيغة دولية صحيحة
    string cleanPhone = new string(originalPhone.Where(char.IsDigit).ToArray());
    if (cleanPhone.StartsWith("0")) cleanPhone = "20" + cleanPhone.Substring(1);

    // 2. تجهيز بيانات الأتيليه والفرع
    string atelierName = !string.IsNullOrEmpty(Model.Booking.Branch?.CommercialName)
                          ? Model.Booking.Branch.CommercialName
                          : (Model.Booking.Branch?.Name ?? "ATELIER PRO");
    string atelierAddress = Model.Booking.Branch?.Address ?? "العنوان غير محدد";
    string atelierPhone = Model.Booking.Branch?.Phone ?? "";

    // 3. بناء نص الرسالة الاحترافي
    var sb = new System.Text.StringBuilder();

    // الترويسة والتحية
    sb.AppendLine($"مرحباً بك أستاذ/ة {clientName}");
    sb.AppendLine($"نشكر ثقتكم الغالية واختياركم *{atelierName}*");
    sb.AppendLine();

    // تفاصيل الحجز
    sb.AppendLine("*تفاصيل الفاتورة:*");
    sb.AppendLine($"رقم الحجز: *#{Model.Booking.Id}*");
    sb.AppendLine($"موعد الاستلام: *{Model.Booking.PickupDate:yyyy-MM-dd}*");
    sb.AppendLine();

    // التفاصيل المالية
    sb.AppendLine("*التفاصيل المالية:*");
    sb.AppendLine($"المبلغ المدفوع: *{Model.Booking.PaidAmount:N0} ج.م*");

    if (Model.RemainingRental > 0)
    {
        sb.AppendLine($"المبلغ المتبقي: *{Model.RemainingRental:N0} ج.م*");
    }
    else
    {
        sb.AppendLine($"الحالة: *خالص بالكامل*");
    }
    sb.AppendLine();

    // معلومات التواصل والعنوان
    sb.AppendLine("*عنواننا:*");
    sb.AppendLine($"{atelierAddress}");
    if (!string.IsNullOrEmpty(atelierPhone))
    {
        sb.AppendLine($"*للتواصل:* {atelierPhone}");
    }
    sb.AppendLine();
    sb.AppendLine("نسعد دائماً بخدمتكم وتألقكم معنا ❤️");

    // 4. تشفير الرسالة لتصلح للرابط
    string msgContent = Uri.EscapeDataString(sb.ToString());
    string waLink = string.IsNullOrEmpty(cleanPhone) ? "#" : $"https://wa.me/{cleanPhone}?text={msgContent}";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>فاتورة #@Model.Booking.Id</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #555;
            padding: 20px;
        }

        .invoice-page {
            background: white;
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 15mm;
            display: flex;
            flex-direction: column;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                background: white;
                margin: 0;
                padding: 0;
            }

            .invoice-page {
                width: 100%;
                margin: 0;
                border: none;
                box-shadow: none;
            }
        }

        .notes-box {
            margin-top: 20px;
            padding: 10px;
            border: 1px dashed #ccc;
            background-color: #fcfcfc;
            font-size: 13px;
        }

        .item-details {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }

        .item-tag {
            border: 1px solid #ddd;
            padding: 2px 6px;
            border-radius: 4px;
            background-color: #f9f9f9;
            display: inline-block;
            margin-left: 5px;
            margin-bottom: 3px;
        }
    </style>
</head>
<body>
    <div class="no-print container mb-4">
        <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
            <a href="/Bookings/Index" class="btn btn-outline-secondary btn-sm"><i class="fa fa-arrow-right"></i> عودة</a>

            <div class="d-flex gap-2">
                @if (Model.Booking.Status == BookingStatus.New)
                {
                    <form method="post" asp-page-handler="UpdateStatus">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <input type="hidden" name="newStatus" value="@BookingStatus.PickedUp" />
                        <button class="btn btn-warning btn-sm fw-bold"><i class="fa fa-hand-holding"></i> تسليم</button>
                    </form>
                }
                else if (Model.Booking.Status == BookingStatus.PickedUp)
                {
                    <button class="btn btn-info btn-sm text-white fw-bold" data-bs-toggle="modal" data-bs-target="#returnModal">
                        <i class="fa fa-undo"></i> استلام (إرجاع)
                    </button>
                }

                @if (Model.RemainingRental > 0)
                {
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#paymentModal"><i class="fa fa-money-bill"></i> دفع الإيجار</button>
                }

                @if (!string.IsNullOrEmpty(originalPhone))
                {
                    <a href="@waLink" target="_blank" class="btn btn-success btn-sm shadow-sm">
                        <i class="fa-brands fa-whatsapp fa-lg me-1"></i> إرسال الفاتورة
                    </a>
                }

                <button onclick="window.print()" class="btn btn-dark btn-sm"><i class="fa fa-print"></i> طباعة</button>
            </div>
        </div>
    </div>

    <div class="invoice-page">
        <div style="text-align:center; border-bottom:2px solid #000; padding-bottom:20px; margin-bottom:30px;">
            <h1 style="font-family:'Playfair Display'; font-size:40px; margin:0;">
                @( !string.IsNullOrEmpty(Model.Booking.Branch?.CommercialName)
            ? Model.Booking.Branch.CommercialName
            : (Model.Booking.Branch?.Name ?? "ATELIER PRO") )
            </h1>

            <div style="font-size:14px; margin-top:5px;">
                @Model.Booking.Branch?.Address
                @if (!string.IsNullOrEmpty(Model.Booking.Branch?.Phone))
                {<span> | ت: @Model.Booking.Branch.Phone</span>}
            </div>
        </div>

        <div style="display:flex; justify-content:space-between; margin-bottom:30px;">
            <div>
                <strong>العميل:</strong> @Model.Booking.Client.Name<br>
                <strong>رقم الفاتورة:</strong> #@Model.Booking.Id
            </div>
            <div style="text-align:left;">
                <strong>الاستلام:</strong> @Model.Booking.PickupDate.ToString("yyyy-MM-dd")<br>
                <strong>الإرجاع:</strong> @Model.Booking.ReturnDate.ToString("yyyy-MM-dd")
            </div>
        </div>

        <table style="width:100%; border-collapse:collapse; margin-bottom:20px;">
            <tr style="border-bottom:1px solid #000;">
                <th style="text-align:right; padding:10px;">الصنف</th>
                <th style="text-align:left; padding:10px;">السعر</th>
            </tr>
            @foreach (var item in Model.Booking.BookingItems)
            {
                <tr style="border-bottom:1px solid #eee;">
                    <td style="padding:10px;">
                        <div style="font-weight:bold; font-size:16px;">
                            @item.ProductItem.ProductDefinition?.Name
                            @if (!string.IsNullOrEmpty(item.ProductItem.Name))
                            {
                                <span style="font-weight:normal; font-size:14px;"> - @item.ProductItem.Name</span>
                            }
                        </div>

                        <div class="item-details">
                            <span class="item-tag"><b>الباركود:</b> @(item.ProductItem.Barcode ?? "-")</span>
                            <span class="item-tag"><b>المقاس:</b> @item.ProductItem.Size</span>

                            @if (!string.IsNullOrEmpty(item.ProductItem.Color))
                            {
                                <span class="item-tag"><b>اللون:</b> @item.ProductItem.Color</span>
                            }
                        </div>
                    </td>
                    <td style="text-align:left; padding:10px; vertical-align:top;">
                        @item.RentalPrice.ToString("N0")
                    </td>
                </tr>
            }
        </table>

        @if (!string.IsNullOrEmpty(Model.Booking.Notes))
        {
            <div class="notes-box">
                <strong><i class="fa fa-scissors"></i> ملاحظات المقاسات / تعديلات:</strong>
                <p style="white-space: pre-wrap; margin:5px 0 0 0;">@Model.Booking.Notes</p>
            </div>
        }

        <div style="margin-top:30px; display:flex; justify-content:flex-end;">
            <div style="width:250px;">
                <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
                    <span>إجمالي الإيجار:</span> <span>@Model.Booking.TotalAmount.ToString("N0")</span>
                </div>
                <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
                    <span>المدفوع:</span> <span>@Model.Booking.PaidAmount.ToString("N0")</span>
                </div>
                <div style="display:flex; justify-content:space-between; margin-bottom:10px; border-top:2px solid #000; padding-top:5px; font-weight:bold;">
                    <span>المتبقي (إيجار):</span> <span>@Model.RemainingRental.ToString("N0") ج.م</span>
                </div>

                <div style="background:#f8f9fa; padding:10px; border:1px solid #ddd; margin-top:10px;">
                    <div style="display:flex; justify-content:space-between; color:#d9534f; font-weight:bold;">
                        <span>مبلغ التأمين:</span> <span>@Model.Booking.InsuranceAmount.ToString("N0") ج.م</span>
                    </div>
                    <small style="display:block; text-align:center; color:#777; margin-top:5px;">(يسترد عند الإرجاع)</small>
                </div>
            </div>
        </div>

        <div style="margin-top:auto; border-top:2px solid #eee; padding-top:15px;">
            <h6 style="font-weight:bold; margin-bottom:8px; font-size:14px;">الشروط والأحكام:</h6>
            <ul style="font-size:12px; color:#555; padding-right:20px; margin-bottom:0; line-height:1.7;">
                <li>التأمين يسترد بالكامل في حالة سلامة القطعة.</li>
                <li>في حالة وجود أي تلفيات يتم تقديرها وخصمها على العميل.</li>
                <li>في حالة إلغاء الحجز يتم استرجاع العربون خلال 48 ساعة من تاريخ الحجز.</li>
                <li>في حالة إلغاء الحجز بعد 48 ساعة من الحجز يتم خصم 50% من قيمة العربون أو تأجيل مفتوح لمدة سنة.</li>
            </ul>
        </div>
    </div>

    <div class="modal fade" id="paymentModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">دفع متبقي الإيجار</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-page-handler="AddPayment">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <label>المبلغ:</label>
                        <input type="number" name="paymentAmount" class="form-control" required />
                    </div>
                    <div class="modal-footer"><button class="btn btn-primary">حفظ</button></div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="returnModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">إرجاع الفستان وتسوية التأمين</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-page-handler="Return">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <div class="alert alert-secondary text-center">
                            قيمة التأمين المحفوظة: <br>
                            <strong class="fs-4">@Model.Booking.InsuranceAmount.ToString("N0") ج.م</strong>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">هل يوجد تلفيات؟ (خصم من التأمين)</label>
                            <input type="number" name="deductionAmount" class="form-control" value="0" min="0" max="@Model.Booking.InsuranceAmount" />
                            <div class="form-text">أدخل القيمة التي سيتم خصمها من العميل (إيراد للأتيليه). اتركها 0 إذا كان الإرجاع سليماً.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                        <button type="submit" class="btn btn-primary">تأكيد الإرجاع وإنهاء الحجز</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>