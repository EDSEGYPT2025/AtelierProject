@page "{id:int}"
@model AtelierProject.Pages.Bookings.DetailsModel
@using AtelierProject.Models

@{
    Layout = null;
    ViewData["Title"] = $"فاتورة #{Model.Booking.Id}";

    // تجهيز البيانات
    string clientName = Model.Booking.Client?.Name ?? "عميلنا العزيز";
    string originalPhone = Model.Booking.Client?.Phone ?? "";
    string cleanPhone = new string(originalPhone.Where(char.IsDigit).ToArray());
    if (cleanPhone.StartsWith("0")) cleanPhone = "20" + cleanPhone.Substring(1);

    string atelierName = !string.IsNullOrEmpty(Model.Booking.Branch?.CommercialName) ? Model.Booking.Branch.CommercialName : (Model.Booking.Branch?.Name ?? "ATELIER PRO");

    var sb = new System.Text.StringBuilder();
    sb.AppendLine($"مرحباً بك أستاذ/ة {clientName}");
    sb.AppendLine($"نشكر ثقتكم الغالية واختياركم *{atelierName}*");
    sb.AppendLine();
    sb.AppendLine($"رقم الحجز: *#{Model.Booking.Id}*");
    sb.AppendLine($"المبلغ المتبقي: *{Model.RemainingRental:N0} ج.م*");

    string msgContent = Uri.EscapeDataString(sb.ToString());
    string waLink = string.IsNullOrEmpty(cleanPhone) ? "#" : $"https://wa.me/{cleanPhone}?text={msgContent}";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>فاتورة #@Model.Booking.Id</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary-gold: #c5a059;
            --primary-dark: #1a1a1a;
            --bg-cream: #fdfbf7;
            --text-grey: #555;
            --border-light: #eaeaea;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: #eef2f5;
            padding: 20px;
            color: var(--primary-dark);
        }

        .invoice-page {
            background: white;
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 10mm 15mm;
            position: relative;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            border-top: 5px solid var(--primary-gold);
        }

        .main-print-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .header-content {
            padding-bottom: 20px;
            margin-bottom: 20px;
            border-bottom: 1px double var(--primary-gold);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            min-height: 100px;
        }

        .atelier-title {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            color: var(--primary-dark);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin: 0;
            text-align: center;
        }

        .atelier-info {
            font-size: 13px;
            color: var(--text-grey);
            margin-top: 8px;
            text-align: center;
        }

        .logo-img {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            max-height: 80px;
            width: auto;
        }

        .column-headers th {
            color: #888;
            font-size: 12px;
            padding: 5px 15px;
            font-weight: normal;
            border-bottom: 1px solid #ddd;
        }

        .item-row td {
            background-color: #fff;
            padding: 15px 20px;
            border-top: 1px solid var(--border-light);
            border-bottom: 1px solid var(--border-light);
            vertical-align: middle;
        }

            .item-row td:first-child {
                border-top-right-radius: 10px;
                border-bottom-right-radius: 10px;
                border-right: 1px solid var(--border-light);
            }

            .item-row td:last-child {
                border-top-left-radius: 10px;
                border-bottom-left-radius: 10px;
                border-left: 1px solid var(--border-light);
                text-align: left;
                font-weight: 700;
                color: var(--primary-dark);
            }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            background-color: var(--bg-cream);
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #f0ebe0;
            margin-bottom: 10px;
        }

        .info-group h6 {
            color: var(--primary-gold);
            font-weight: 700;
            font-size: 12px;
            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .item-tag {
            display: inline-block;
            font-size: 11px;
            padding: 2px 8px;
            border: 1px solid #eee;
            background: #fcfcfc;
            border-radius: 10px;
            margin-left: 5px;
            color: #666;
        }

        .footer-wrapper {
            padding-top: 20px;
            border-top: 2px solid #eee;
            margin-top: 20px;
        }

        .financial-summary {
            background: var(--bg-cream);
            border: 1px solid #efe8d8;
            padding: 20px;
            border-radius: 8px;
            width: 300px;
            margin-right: auto;
        }

        .fin-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 14px;
        }

            .fin-row.total {
                border-top: 1px solid #dacfb8;
                padding-top: 8px;
                margin-top: 8px;
                font-size: 16px;
                font-weight: 700;
            }

        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                background: white;
                padding: 0;
                margin: 0;
            }

            .invoice-page {
                width: 100%;
                margin: 0;
                border: none;
                box-shadow: none;
                padding: 0;
            }

            thead {
                display: table-header-group;
            }

            tfoot {
                display: table-footer-group;
            }

            tr {
                page-break-inside: avoid;
            }

            .info-grid, .financial-summary, .item-row td {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }

        @@page {
            size: A4;
            margin: 10mm;
        }
    </style>
</head>
<body>

    <div class="no-print container mb-4">
        <div class="bg-white p-3 rounded shadow-sm border d-flex justify-content-between align-items-center flex-wrap gap-2">
            <a href="/Bookings/Index" class="btn btn-outline-secondary btn-sm px-3"><i class="fa fa-arrow-right"></i> عودة</a>

            <div class="d-flex gap-2 flex-wrap">
                @if (Model.Booking.Status == BookingStatus.New)
                {
                    <form method="post" asp-page-handler="UpdateStatus">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <input type="hidden" name="newStatus" value="@BookingStatus.PickedUp" />
                        <button class="btn btn-warning btn-sm fw-bold"><i class="fa fa-hand-holding"></i> تسليم</button>
                    </form>
                }
                else if (Model.Booking.Status == BookingStatus.PickedUp)
                {
                    <button class="btn btn-info btn-sm text-white fw-bold" data-bs-toggle="modal" data-bs-target="#returnModal"><i class="fa fa-undo"></i> استلام</button>
                }

                @if (Model.RemainingRental > 0)
                {
                    <button class="btn btn-primary btn-sm px-3" data-bs-toggle="modal" data-bs-target="#paymentModal"><i class="fa fa-money-bill"></i> دفع</button>
                }

                @if (!string.IsNullOrEmpty(originalPhone))
                {
                    <a href="@waLink" target="_blank" class="btn btn-success btn-sm px-3"><i class="fa-brands fa-whatsapp"></i> واتساب</a>
                }

                <a href="/Bookings/Contract/@Model.Booking.Id" target="_blank" class="btn btn-secondary btn-sm px-3">
                    <i class="fa-solid fa-file-contract"></i> طباعة العقد
                </a>

                <button onclick="window.print()" class="btn btn-dark btn-sm px-4"><i class="fa fa-print"></i> طباعة الفاتورة</button>
            </div>
        </div>
    </div>

    <div class="invoice-page">
        <table class="main-print-table">

            <thead>
                <tr>
                    <th colspan="2" style="border:none; font-weight:normal; padding:0;">
                        <div class="header-content">
                            <div style="width:100%; text-align:center;">
                                <h1 class="atelier-title">
                                    @( !string.IsNullOrEmpty(Model.Booking.Branch?.CommercialName) ? Model.Booking.Branch.CommercialName : (Model.Booking.Branch?.Name ?? "ATELIER PRO") )
                                </h1>
                                <div class="atelier-info">
                                    @Model.Booking.Branch?.Address
                                    @if (!string.IsNullOrEmpty(Model.Booking.Branch?.Phone))
                                    {<span> | @Model.Booking.Branch.Phone</span>}
                                </div>
                            </div>
                            <img src="~/img/logo.png" class="logo-img" alt="Logo" />
                        </div>
                    </th>
                </tr>
                <tr class="column-headers">
                    <th style="text-align:right;">تفاصيل الأصناف المحجوزة</th>
                    <th style="text-align:left;">السعر</th>
                </tr>
            </thead>

            <tbody>

                <tr>
                    <td colspan="2" style="padding:0; border:none; background:none;">
                        <div class="info-grid">
                            <div class="info-group">
                                <h6>العميل</h6>
                                <div>@Model.Booking.Client.Name</div>
                                <small class="text-muted" dir="ltr">@Model.Booking.Client.Phone</small>
                            </div>
                            <div class="info-group ps-3 border-end">
                                <h6>الفاتورة #@Model.Booking.Id</h6>
                                <div class="d-flex justify-content-between small mt-1">
                                    <span>استلام: @Model.Booking.PickupDate.ToString("yyyy-MM-dd")</span>
                                    <span>إرجاع: @Model.Booking.ReturnDate.ToString("yyyy-MM-dd")</span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>

                @if (Model.Booking.BookingItems != null && Model.Booking.BookingItems.Any())
                {
                    foreach (var item in Model.Booking.BookingItems)
                    {
                        <tr class="item-row">
                            <td>
                                <div style="font-weight:700; font-size:15px; margin-bottom:4px;">
                                    @item.ProductItem.ProductDefinition?.Name
                                    @if (!string.IsNullOrEmpty(item.ProductItem.Name))
                                    {<span> - @item.ProductItem.Name</span>}
                                </div>
                                <div>
                                    <span class="item-tag">كود: @(item.ProductItem.Barcode ?? "-")</span>
                                    <span class="item-tag">مقاس: @item.ProductItem.Size</span>
                                    @if (!string.IsNullOrEmpty(item.ProductItem.Color))
                                    {<span class="item-tag">لون: @item.ProductItem.Color</span>}
                                </div>
                            </td>
                            <td>
                                @(item.RentalPrice > 0 ? item.RentalPrice.ToString("N0") + " ج.م" : "-")
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted py-3">لا توجد قطع مسجلة.</td>
                    </tr>
                }

                @if (!string.IsNullOrEmpty(Model.Booking.Notes))
                {
                    <tr>
                        <td colspan="2" style="padding:15px; background:#fffcf5; border-right:3px solid var(--primary-gold); border-radius:4px; font-size:13px; color:#555;">
                            <strong>ملاحظات:</strong> @Model.Booking.Notes
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="2" style="padding:0; border:none;">
                        <div class="footer-wrapper">
                            <div class="d-flex justify-content-between align-items-start">

                                <div style="width: 55%;">
                                    <h6 style="font-size:12px; font-weight:700;">الشروط والأحكام:</h6>
                                    <ul style="font-size:11px; color:#666; padding-right:15px; line-height:1.6;">
                                        <li>التأمين يسترد بالكامل في حالة سلامة القطعة.</li>
                                        <li>يخصم قيمة التلفيات من التأمين حسب التقدير.</li>
                                        <li>إلغاء الحجز: يسترد العربون خلال 48 ساعة فقط.</li>
                                        <li>بعد 48 ساعة: يخصم 50% أو تأجيل لمدة سنة.</li>
                                    </ul>
                                </div>

                                <div class="financial-summary">
                                    <div class="fin-row"><span>الإجمالي:</span> <span>@Model.Booking.TotalAmount.ToString("N0")</span></div>
                                    <div class="fin-row"><span>المدفوع:</span> <span>@Model.Booking.PaidAmount.ToString("N0")</span></div>
                                    <div class="fin-row total"><span>المتبقي:</span> <span>@Model.RemainingRental.ToString("N0") ج.م</span></div>
                                    <div class="mt-2 text-center pt-2 border-top border-dashed text-danger fw-bold" style="font-size:13px;">
                                        تأمين: @Model.Booking.InsuranceAmount.ToString("N0") ج.م
                                    </div>
                                </div>

                            </div>

                            <div class="text-center mt-4 text-muted small" style="font-family:'Playfair Display'">
                                Thank you for choosing @(Model.Booking.Branch?.CommercialName ?? "Us")
                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="modal fade" id="paymentModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-dark text-white"><h5 class="modal-title fs-6">دفع متبقي</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
                <form method="post" asp-page-handler="AddPayment">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <label>المبلغ:</label> <input type="number" name="paymentAmount" class="form-control" required />
                    </div>
                    <div class="modal-footer"><button class="btn btn-primary w-100">حفظ</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="returnModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-info text-white"><h5 class="modal-title fs-6">إرجاع وتسوية</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
                <form method="post" asp-page-handler="Return">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <div class="alert alert-light border text-center"><strong class="fs-5">تأمين: @Model.Booking.InsuranceAmount.ToString("N0")</strong></div>
                        <label class="text-danger fw-bold">خصم تلفيات:</label> <input type="number" name="deductionAmount" class="form-control" value="0" />
                    </div>
                    <div class="modal-footer"><button class="btn btn-light" data-bs-dismiss="modal">إلغاء</button><button type="submit" class="btn btn-primary">تأكيد</button></div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>