@page "{id:int}"
@model AtelierProject.Pages.Bookings.DetailsModel
@using AtelierProject.Models

@{
    Layout = null;
    ViewData["Title"] = $"فاتورة #{Model.Booking.Id}";

    // واتساب (نفس المنطق السابق)
    string clientName = Model.Booking.Client?.Name ?? "عميل";
    string originalPhone = Model.Booking.Client?.Phone ?? "";
    string cleanPhone = new string(originalPhone.Where(char.IsDigit).ToArray());
    if (cleanPhone.StartsWith("0")) cleanPhone = "20" + cleanPhone.Substring(1);
    string msg = $"فاتورة حجز رقم {Model.Booking.Id}";
    string waLink = string.IsNullOrEmpty(cleanPhone) ? "#" : $"https://wa.me/{cleanPhone}?text={msg}";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>فاتورة #@Model.Booking.Id</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* (نفس الستايل السابق للفاتورة، مع إضافة بسيطة للملاحظات) */
        body { font-family: 'Cairo', sans-serif; background-color: #555; padding: 20px; }
        .invoice-page { background: white; width: 210mm; min-height: 297mm; margin: 0 auto; padding: 15mm; display: flex; flex-direction: column; }

        @@media print {
            .no-print { display: none !important; }
            body { background: white; margin: 0; padding: 0; }
            .invoice-page { width: 100%; margin: 0; border: none; box-shadow: none; }
        }

        /* تنسيق بوكس الملاحظات في الفاتورة */
        .notes-box {
            margin-top: 20px;
            padding: 10px;
            border: 1px dashed #ccc;
            background-color: #fcfcfc;
            font-size: 13px;
        }
    </style>
</head>
<body>

    <div class="no-print container mb-4">
        <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
            <a href="/Bookings/Index" class="btn btn-outline-secondary btn-sm"><i class="fa fa-arrow-right"></i> عودة</a>

            <div class="d-flex gap-2">
                @if (Model.Booking.Status == BookingStatus.New)
                {
                    <form method="post" asp-page-handler="UpdateStatus">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <input type="hidden" name="newStatus" value="@BookingStatus.PickedUp" />
                        <button class="btn btn-warning btn-sm fw-bold"><i class="fa fa-hand-holding"></i> تسليم</button>
                    </form>
                }
                else if (Model.Booking.Status == BookingStatus.PickedUp)
                {
                    <button class="btn btn-info btn-sm text-white fw-bold" data-bs-toggle="modal" data-bs-target="#returnModal">
                        <i class="fa fa-undo"></i> استلام (إرجاع)
                    </button>
                }

                @if (Model.RemainingRental > 0)
                {
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#paymentModal"><i class="fa fa-money-bill"></i> دفع الإيجار</button>
                }

                <button onclick="window.print()" class="btn btn-dark btn-sm"><i class="fa fa-print"></i> طباعة</button>
            </div>
        </div>
    </div>

    <div class="invoice-page">
        <div style="text-align:center; border-bottom:2px solid #000; padding-bottom:20px; margin-bottom:30px;">
            <h1 style="font-family:'Playfair Display'; font-size:40px; margin:0;">ATELIER</h1>
            <div style="letter-spacing:3px; font-size:12px;">LUXURY FASHION</div>
        </div>

        <div style="display:flex; justify-content:space-between; margin-bottom:30px;">
            <div>
                <strong>العميل:</strong> @Model.Booking.Client.Name<br>
                <strong>رقم الفاتورة:</strong> #@Model.Booking.Id
            </div>
            <div style="text-align:left;">
                <strong>الاستلام:</strong> @Model.Booking.PickupDate.ToString("yyyy-MM-dd")<br>
                <strong>الإرجاع:</strong> @Model.Booking.ReturnDate.ToString("yyyy-MM-dd")
            </div>
        </div>

        <table style="width:100%; border-collapse:collapse; margin-bottom:20px;">
            <tr style="border-bottom:1px solid #000;">
                <th style="text-align:right; padding:10px;">الصنف</th>
                <th style="text-align:left; padding:10px;">السعر</th>
            </tr>
            @foreach (var item in Model.Booking.BookingItems)
            {
                <tr style="border-bottom:1px solid #eee;">
                    <td style="padding:10px;">@item.ProductItem.ProductDefinition?.Name</td>
                    <td style="text-align:left; padding:10px;">@item.RentalPrice.ToString("N0")</td>
                </tr>
            }
        </table>

        @if (!string.IsNullOrEmpty(Model.Booking.Notes))
        {
            <div class="notes-box">
                <strong><i class="fa fa-scissors"></i> ملاحظات الخياطة / تعديلات:</strong>
                <p style="white-space: pre-wrap; margin:5px 0 0 0;">@Model.Booking.Notes</p>
            </div>
        }

        <div style="margin-top:30px; display:flex; justify-content:flex-end;">
            <div style="width:250px;">
                <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
                    <span>إجمالي الإيجار:</span> <span>@Model.Booking.TotalAmount.ToString("N0")</span>
                </div>
                <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
                    <span>المدفوع:</span> <span>@Model.Booking.PaidAmount.ToString("N0")</span>
                </div>
                <div style="display:flex; justify-content:space-between; margin-bottom:10px; border-top:2px solid #000; padding-top:5px; font-weight:bold;">
                    <span>المتبقي (إيجار):</span> <span>@Model.RemainingRental.ToString("N0") ج.م</span>
                </div>

                <div style="background:#f8f9fa; padding:10px; border:1px solid #ddd; margin-top:10px;">
                    <div style="display:flex; justify-content:space-between; color:#d9534f; font-weight:bold;">
                        <span>مبلغ التأمين:</span> <span>@Model.Booking.InsuranceAmount.ToString("N0") ج.م</span>
                    </div>
                    <small style="display:block; text-align:center; color:#777; margin-top:5px;">(يسترد عند الإرجاع)</small>
                </div>
            </div>
        </div>

        <div style="margin-top:auto; border-top:1px solid #eee; padding-top:20px; font-size:12px; color:#777;">
            الشروط والأحكام: التأمين يسترد بالكامل في حال سلامة القطعة. يخصم من التأمين في حال التلف.
        </div>
    </div>

    <div class="modal fade" id="paymentModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">دفع متبقي الإيجار</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-page-handler="AddPayment">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />
                        <label>المبلغ:</label>
                        <input type="number" name="paymentAmount" class="form-control" required />
                    </div>
                    <div class="modal-footer"><button class="btn btn-primary">حفظ</button></div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="returnModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">إرجاع الفستان وتسوية التأمين</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-page-handler="Return">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Booking.Id" />

                        <div class="alert alert-secondary text-center">
                            قيمة التأمين المحفوظة: <br>
                            <strong class="fs-4">@Model.Booking.InsuranceAmount.ToString("N0") ج.م</strong>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">هل يوجد تلفيات؟ (خصم من التأمين)</label>
                            <input type="number" name="deductionAmount" class="form-control" value="0" min="0" max="@Model.Booking.InsuranceAmount" />
                            <div class="form-text">أدخل القيمة التي سيتم خصمها من العميل (إيراد للأتيليه). اتركها 0 إذا كان الإرجاع سليماً.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                        <button type="submit" class="btn btn-primary">تأكيد الإرجاع وإنهاء الحجز</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>