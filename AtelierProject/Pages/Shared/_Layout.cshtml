@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using AtelierProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // 1. جلب بيانات المستخدم والفرع
    ApplicationUser currentUser = null;
    string branchName = "الإدارة العامة";
    string commercialName = "";

    if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);
        currentUser = await UserManager.Users
            .Include(u => u.Branch)
            .FirstOrDefaultAsync(u => u.Id == userId);

        if (currentUser != null && currentUser.Branch != null)
        {
            branchName = currentUser.Branch.Name;
            commercialName = currentUser.Branch.CommercialName;
        }
    }
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة الأتيليه</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        /* --- هيكل الصفحة والقائمة --- */
        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            transition: all 0.3s;
        }

        #sidebar-wrapper {
            min-width: 260px;
            max-width: 260px;
            min-height: 100vh;
            background: #2c3e50;
            color: #fff;
            transition: all 0.3s;
            z-index: 1000;
            display: flex;
            flex-direction: column; /* لضمان دفع زر الدعم للأسفل */
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-right: -260px;
        }

        .sidebar-heading {
            padding: 1.5rem;
            font-weight: 700;
            font-size: 1.3rem;
            color: #ecf0f1;
            background: rgba(0,0,0,0.1);
        }

        .list-group-item {
            background-color: transparent;
            color: #b0c4de;
            border: none;
            padding: 12px 20px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s;
            display: flex;
            align-items: center;
        }

            .list-group-item:hover, .list-group-item.active {
                background-color: #34495e;
                color: #fff;
                border-right: 4px solid #3498db;
                padding-right: 16px;
            }

            .list-group-item i {
                width: 30px;
                text-align: center;
                font-size: 1.1rem;
            }

        .submenu-link {
            padding-right: 55px !important;
            font-size: 0.9rem;
            background-color: rgba(0,0,0,0.15);
        }

        .arrow-icon {
            font-size: 0.8rem !important;
            width: auto !important;
            margin-right: auto;
        }

        #page-content-wrapper {
            width: 100%;
            padding: 20px;
        }

        /* --- تنسيق شريط المستخدم والفرع --- */
        .user-info-pill {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 50px;
            padding: 5px 15px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s ease;
            cursor: pointer;
            max-width: 100%;
        }

            .user-info-pill:hover {
                background-color: #fff;
                box-shadow: 0 4px 10px rgba(0,0,0,0.08);
                border-color: #dee2e6;
            }

        .branch-badge {
            background-color: #e3f2fd;
            color: #0d6efd;
            padding: 5px 12px;
            border-radius: 12px;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
            gap: 8px;
            text-align: right;
            line-height: 1.2;
        }

        .user-name-container {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            background-color: #0d6efd;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            flex-shrink: 0;
        }

        .user-name-text {
            font-weight: 700;
            color: #495057;
            font-size: 0.95rem;
            white-space: nowrap;
        }

        @@media (max-width: 768px) {
            #sidebar-wrapper {
                margin-right: -260px;
            }

            #wrapper.toggled #sidebar-wrapper {
                margin-right: 0;
            }

            .user-info-pill {
                padding: 4px 10px;
                gap: 8px;
            }

            .branch-badge {
                padding: 4px 8px;
                font-size: 0.75rem;
            }

            .user-name-text {
                font-size: 0.85rem;
            }

            .branch-details div {
                max-width: 100px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
        }
    </style>
</head>
<body>

    <div class="d-flex" id="wrapper">
        @if (SignInManager.IsSignedIn(User) && currentUser != null)
        {
            <div id="sidebar-wrapper">
                <div class="sidebar-heading text-center">
                    <i class="fa-solid fa-gem me-2 text-warning"></i> أتيليه برو
                </div>

                <div class="list-group list-group-flush my-3 flex-grow-1">
                    <a asp-page="/Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-gauge"></i> لوحة التحكم
                    </a>

                    @* --- قسم الأتيليه --- *@
                    @if (currentUser.CanAccessMenSection || currentUser.CanAccessWomenSection || currentUser.BranchId == null)
                    {
                        <a href="#menuAtelier" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-shirt"></i> إدارة الأتيليه
                            <i class="fa-solid fa-chevron-down arrow-icon"></i>
                        </a>
                        <div class="collapse" id="menuAtelier">
                            <a asp-page="/Bookings/Create" class="list-group-item list-group-item-action submenu-link">
                                <i class="fa-solid fa-plus fs-6 ms-1 text-warning"></i> حجز جديد
                            </a>
                            <a asp-page="/Bookings/Index" class="list-group-item list-group-item-action submenu-link">سجل الحجوزات</a>
                            <a asp-page="/Definitions/Index" class="list-group-item list-group-item-action submenu-link">كتالوج الموديلات</a>
                        </div>
                    }

                    @* --- قسم الصالون --- *@
                    @if (currentUser.CanAccessBeautySection || currentUser.BranchId == null)
                    {
                        <a href="#menuSalon" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-spa"></i> صالون التجميل
                            <i class="fa-solid fa-chevron-down arrow-icon"></i>
                        </a>
                        <div class="collapse" id="menuSalon">
                            <a asp-page="/Salon/Appointments/Create" class="list-group-item list-group-item-action submenu-link text-warning">
                                <i class="fa-solid fa-plus fs-6 ms-1"></i> حجز موعد
                            </a>
                            <a asp-page="/Salon/Appointments/Index" class="list-group-item list-group-item-action submenu-link">سجل المواعيد</a>
                            <a asp-page="/Salon/Services/Index" class="list-group-item list-group-item-action submenu-link">خدمات الصالون</a>
                        </div>
                    }

                    <a asp-page="/Clients/Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-users"></i> قاعدة العملاء
                    </a>

                    @* --- قسم المصروفات --- *@
                    <a href="#menuExpenses" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-wallet"></i> المصروفات
                        <i class="fa-solid fa-chevron-down arrow-icon"></i>
                    </a>
                    <div class="collapse" id="menuExpenses">
                        <a asp-page="/Expenses/Index" class="list-group-item list-group-item-action submenu-link">سجل المصروفات</a>
                        <a asp-page="/Expenses/Categories/Index" class="list-group-item list-group-item-action submenu-link">بنود المصروفات</a>
                    </div>

                    @* --- قسم التقارير المالية --- *@
                    <a href="#menuReports" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-chart-pie"></i> التقارير المالية
                        <i class="fa-solid fa-chevron-down arrow-icon"></i>
                    </a>
                    <div class="collapse" id="menuReports">

                        @if (currentUser.BranchId == null) // يظهر فقط للمدير العام (الذي ليس له فرع محدد)
                        {
                            <a asp-page="/Reports/Safe" class="list-group-item list-group-item-action submenu-link text-info fw-bold">
                                <i class="fa-solid fa-vault me-1"></i> حركة الخزينة
                            </a>
                        }

                        @* ✅ الرابط الجديد: جرد المنتجات *@
                        <a asp-page="/Reports/Inventory" class="list-group-item list-group-item-action submenu-link">
                            <i class="fa-solid fa-list-check me-1"></i> جرد المنتجات
                        </a>
                    </div>

                    @* --- الإدارة (للمدير العام أو من يملك جميع الصلاحيات) --- *@
                    @* ✅ التعديل هنا: إضافة شرط (currentUser.CanAccess... && ...) *@
                    @if (currentUser.BranchId == null || (currentUser.CanAccessMenSection && currentUser.CanAccessWomenSection && currentUser.CanAccessBeautySection))
                    {
                        <div class="border-top border-secondary mx-3 my-2"></div>
                        <a asp-page="/Branches/Index" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-building"></i> الفروع
                        </a>
                        <a asp-page="/Users/Index" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-user-shield"></i> إدارة المستخدمين
                        </a>
                    }
                </div>

                <div class="mt-auto border-top border-secondary pt-3 px-3 pb-3">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#supportModal" class="btn btn-outline-warning w-100 fw-bold d-flex align-items-center justify-content-center gap-2">
                        <i class="fa-solid fa-headset fa-lg"></i>
                        <span>الدعم الفني</span>
                    </a>
                </div>
            </div>
        }

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white rounded shadow-sm mb-4">
                <div class="container-fluid">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <button class="btn btn-outline-primary border-0" id="menu-toggle">
                            <i class="fa-solid fa-bars fa-lg"></i>
                        </button>
                    }

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                            @if (SignInManager.IsSignedIn(User) && currentUser != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link p-0" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <div class="user-info-pill">
                                            <div class="branch-badge">
                                                <i class="fa-solid fa-store fa-lg"></i>
                                                <div class="branch-details">
                                                    @if (!string.IsNullOrEmpty(commercialName))
                                                    {
                                                        <div style="font-weight: 700; font-size: 0.85rem;">@commercialName</div>
                                                        <div style="font-size: 0.7rem; opacity: 0.8; font-weight: normal;">@branchName</div>
                                                    }
                                                    else
                                                    {
                                                        <span>@branchName</span>
                                                    }
                                                </div>
                                            </div>
                                            <div style="width: 1px; height: 24px; background-color: #dee2e6;"></div>
                                            <div class="user-name-container">
                                                <span class="user-name-text">@currentUser.FullName</span>
                                                <div class="user-avatar">
                                                    <i class="fa-solid fa-user-tie"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-2" aria-labelledby="navbarDropdown">
                                        <li><h6 class="dropdown-header text-center">@currentUser.Email</h6></li>
                                        <li><hr class="dropdown-divider"></li>

                                        <li>
                                            <a asp-page="/Account/ChangePassword" class="dropdown-item text-dark">
                                                <i class="fa-solid fa-key me-2 text-warning"></i> تغيير كلمة المرور
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>

                                        <li>
                                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                                <button type="submit" class="dropdown-item text-danger fw-bold">
                                                    <i class="fa-solid fa-right-from-bracket me-2"></i> تسجيل خروج
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary px-4 rounded-pill" asp-area="" asp-page="/Account/Login">
                                        <i class="fa-solid fa-right-to-bracket me-2"></i> تسجيل الدخول
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="modal fade" id="supportModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-top: 5px solid #c5a059 !important;">

                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title fw-bold">
                        <i class="fa-solid fa-life-ring text-warning me-2"></i> مركز المساعدة والدعم
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body p-4 text-center">
                    <p class="text-muted mb-4">نحن هنا لمساعدتك على مدار الساعة لضمان سير عملك بكل كفاءة.</p>

                    <div class="d-grid gap-3">

                        <div class="p-3 border rounded-3 d-flex align-items-center justify-content-between bg-light">
                            <div class="d-flex align-items-center gap-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                    <i class="fa-solid fa-phone"></i>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted d-block">الدعم الفني (1)</small>
                                    <span class="fw-bold" dir="ltr">01010475455</span>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="tel:01010475455" class="btn btn-sm btn-outline-primary"><i class="fa fa-phone"></i></a>
                                <a href="https://wa.me/201010475455" target="_blank" class="btn btn-sm btn-success"><i class="fa-brands fa-whatsapp"></i></a>
                            </div>
                        </div>

                        <div class="p-3 border rounded-3 d-flex align-items-center justify-content-between bg-light">
                            <div class="d-flex align-items-center gap-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                    <i class="fa-solid fa-mobile-screen"></i>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted d-block">الدعم الفني (2)</small>
                                    <span class="fw-bold" dir="ltr">01111292878</span>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="tel:01111292878" class="btn btn-sm btn-outline-primary"><i class="fa fa-phone"></i></a>
                                <a href="https://wa.me/201111292878" target="_blank" class="btn btn-sm btn-success"><i class="fa-brands fa-whatsapp"></i></a>
                            </div>
                        </div>

                        <div class="p-3 border rounded-3 d-flex align-items-center justify-content-between bg-light">
                            <div class="d-flex align-items-center gap-3">
                                <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                    <i class="fa-solid fa-envelope"></i>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted d-block">البريد الإلكتروني</small>
                                    <span class="fw-bold" style="font-size: 0.9rem;">edsegypt@outlook.com</span>
                                </div>
                            </div>
                            <a href="mailto:edsegypt@outlook.com" class="btn btn-sm btn-outline-danger"><i class="fa fa-paper-plane"></i></a>
                        </div>

                        <div class="mt-2 pt-3 border-top">
                            <small class="text-muted mb-2 d-block">تحميل برامج المساعدة عن بعد:</small>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="https://anydesk.com/en/downloads" target="_blank" class="btn btn-sm btn-light border shadow-sm text-dark text-decoration-none">
                                    <img src="/img/anydesk-logo.png" width="16" alt="AnyDesk"> AnyDesk
                                </a>
                                <a href="https://www.teamviewer.com/en/download/" target="_blank" class="btn btn-sm btn-light border shadow-sm text-dark text-decoration-none">
                                    <img src="/img/logo-teamviewer-icon-1024.png" width="16" alt="TeamViewer"> TeamViewer
                                </a>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer justify-content-center border-0 bg-light">
                    <small class="text-muted">
                        <i class="fa-solid fa-clock me-1"></i> مواعيد العمل: يومياً من 10 ص إلى 10 م
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        if (toggleButton) {
            toggleButton.onclick = function () {
                el.classList.toggle("toggled");
            };
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>