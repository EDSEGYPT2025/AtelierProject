@using Microsoft.AspNetCore.Identity
@using AtelierProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // 1. جلب بيانات المستخدم الحالي للصلاحيات
    ApplicationUser currentUser = null;
    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة الأتيليه</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        /* --- هيكل الصفحة والقائمة (نفس الستايل القديم) --- */
        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            transition: all 0.3s;
        }

        #sidebar-wrapper {
            min-width: 260px;
            max-width: 260px;
            min-height: 100vh;
            background: #2c3e50;
            color: #fff;
            transition: all 0.3s;
            z-index: 1000;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-right: -260px;
        }

        .sidebar-heading {
            padding: 1.5rem;
            font-weight: 700;
            font-size: 1.3rem;
            color: #ecf0f1;
            background: rgba(0,0,0,0.1);
        }

        .list-group-item {
            background-color: transparent;
            color: #b0c4de;
            border: none;
            padding: 12px 20px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s;
            display: flex;
            align-items: center;
        }

            .list-group-item:hover, .list-group-item.active {
                background-color: #34495e;
                color: #fff;
                border-right: 4px solid #3498db;
                padding-right: 16px;
            }

            .list-group-item i {
                width: 30px;
                text-align: center;
                font-size: 1.1rem;
            }

        .submenu-link {
            padding-right: 55px !important;
            font-size: 0.9rem;
            background-color: rgba(0,0,0,0.15);
        }

        .arrow-icon {
            font-size: 0.8rem !important;
            width: auto !important;
            margin-right: auto;
        }

        #page-content-wrapper {
            width: 100%;
            padding: 20px;
        }

        @@media (max-width: 768px) {
            #sidebar-wrapper {
                margin-right: -260px;
            }

            #wrapper.toggled #sidebar-wrapper {
                margin-right: 0;
            }
        }
    </style>
</head>
<body>

    <div class="d-flex" id="wrapper">

        @if (SignInManager.IsSignedIn(User) && currentUser != null)
        {
            <div id="sidebar-wrapper">
                <div class="sidebar-heading text-center">
                    <i class="fa-solid fa-gem me-2 text-warning"></i> أتيليه برو
                </div>

                <div class="list-group list-group-flush my-3">

                    <a asp-page="/Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-gauge"></i> لوحة التحكم
                    </a>

                    @if (currentUser.CanAccessMenSection || currentUser.CanAccessWomenSection || currentUser.BranchId == null)
                    {
                        <a href="#menuAtelier" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-shirt"></i> إدارة الأتيليه
                            <i class="fa-solid fa-chevron-down arrow-icon"></i>
                        </a>
                        <div class="collapse" id="menuAtelier">
                            <a asp-page="/Bookings/Create" class="list-group-item list-group-item-action submenu-link">
                                <i class="fa-solid fa-plus fs-6 ms-1 text-warning"></i> حجز جديد
                            </a>
                            <a asp-page="/Bookings/Index" class="list-group-item list-group-item-action submenu-link">
                                سجل الحجوزات
                            </a>
                            <a asp-page="/Definitions/Index" class="list-group-item list-group-item-action submenu-link">
                                كتالوج الموديلات والمخزون
                            </a>
                        </div>
                    }

                    @if (currentUser.CanAccessBeautySection || currentUser.BranchId == null)
                    {
                        <a href="#menuSalon" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-spa"></i> صالون التجميل
                            <i class="fa-solid fa-chevron-down arrow-icon"></i>
                        </a>
                        <div class="collapse" id="menuSalon">
                            <a asp-page="/Salon/Appointments/Create" class="list-group-item list-group-item-action submenu-link">
                                <i class="fa-solid fa-plus fs-6 ms-1 text-warning"></i> حجز موعد
                            </a>
                            <a asp-page="/Salon/Appointments/Index" class="list-group-item list-group-item-action submenu-link">
                                سجل المواعيد
                            </a>
                            <a asp-page="/Salon/Services/Index" class="list-group-item list-group-item-action submenu-link">
                                خدمات الصالون
                            </a>
                        </div>
                    }

                    <a asp-page="/Clients/Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-users"></i> قاعدة العملاء
                    </a>

                    <a href="#menuReports" data-bs-toggle="collapse" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-chart-pie"></i> التقارير المالية
                        <i class="fa-solid fa-chevron-down arrow-icon"></i>
                    </a>
                    <div class="collapse" id="menuReports">
                        <a asp-page="/Reports/Daily" class="list-group-item list-group-item-action submenu-link">تقرير الخزنة اليومي</a>
                        <a asp-page="/Reports/Monthly" class="list-group-item list-group-item-action submenu-link">التقرير الشهري</a>
                    </div>

                    @if (currentUser.BranchId == null)
                    {
                        <div class="border-top border-secondary mx-3 my-2"></div>
                        <a asp-page="/Branches/Index" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-building"></i> الفروع
                        </a>
                        <a asp-page="/Users/Index" class="list-group-item list-group-item-action">
                            <i class="fa-solid fa-user-shield"></i> إدارة المستخدمين
                        </a>
                    }
                </div>
            </div>
        }

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white rounded shadow-sm mb-4">
                <div class="container-fluid">

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <button class="btn btn-primary" id="menu-toggle">
                            <i class="fa-solid fa-bars"></i>
                        </button>
                    }

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            @if (SignInManager.IsSignedIn(User) && currentUser != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle fw-bold text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fa-solid fa-circle-user fa-lg text-primary ms-1"></i> مرحباً، @currentUser.FullName
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                        <li>
                                            <form class="form-inline" asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                                <button type="submit" class="dropdown-item text-danger">تسجيل خروج</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" asp-area="" asp-page="/Account/Login">تسجيل الدخول</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        if (toggleButton) {
            toggleButton.onclick = function () {
                el.classList.toggle("toggled");
            };
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>