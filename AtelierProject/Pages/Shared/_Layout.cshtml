@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using AtelierProject.Models
@using Microsoft.Extensions.Configuration
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IConfiguration Configuration

@{
    // 1. جلب بيانات المستخدم والفرع
    ApplicationUser currentUser = null;
    string branchName = "الإدارة العامة";
    string commercialName = "";

    if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);
        currentUser = await UserManager.Users
            .Include(u => u.Branch)
            .FirstOrDefaultAsync(u => u.Id == userId);

        if (currentUser != null && currentUser.Branch != null)
        {
            branchName = currentUser.Branch.Name;
            commercialName = currentUser.Branch.CommercialName;
        }
    }
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة الأتيليه</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* --- 1. إعدادات الصفحة العامة --- */
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f1f5f9; /* رمادي فاتح مريح للعين */
            overflow-x: hidden;
        }

        /* --- 2. السايد بار الفخم (Luxury Sidebar) --- */
        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            transition: all 0.3s;
        }

        #sidebar-wrapper {
            min-width: 270px;
            max-width: 270px;
            min-height: 100vh;
            /* تدرج لوني فخم (كحلي ليلي) */
            background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);
            color: #fff;
            transition: all 0.3s;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            box-shadow: 4px 0 25px rgba(0,0,0,0.15); /* ظل قوي للعمق */
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-right: -270px;
        }

        .sidebar-heading {
            padding: 2rem 1.5rem;
            background: rgba(255,255,255,0.02); /* إضاءة خفيفة */
            border-bottom: 1px solid rgba(255,255,255,0.05);
            font-size: 1.4rem;
        }

        /* --- 3. حركة الشعار (Golden Pulse) --- */
        .animated-brand {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
            animation: pulse-glow 3s infinite ease-in-out;
        }

            .animated-brand i {
                color: #fbbf24; /* ذهبي */
                margin-left: 10px;
                transition: transform 0.5s;
            }

            .animated-brand:hover i {
                transform: rotate(360deg);
            }

        @@keyframes pulse-glow {
            0% {
                transform: scale(1);
                text-shadow: 0 0 0 rgba(251, 191, 36, 0);
            }

            50% {
                transform: scale(1.05);
                text-shadow: 0 0 15px rgba(251, 191, 36, 0.5);
                color: #fff;
            }

            100% {
                transform: scale(1);
                text-shadow: 0 0 0 rgba(251, 191, 36, 0);
            }
        }

        /* --- 4. تصميم الروابط (Interactive Items) --- */
        .list-group-item {
            background-color: transparent;
            color: #94a3b8; /* لون نص هادئ */
            border: none;
            padding: 14px 25px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            margin: 4px 12px; /* مسافة بين العناصر */
            border-radius: 10px !important; /* حواف دائرية */
        }

            /* تأثير المرور (Hover) */
            .list-group-item:hover, .list-group-item.active {
                background-color: rgba(197, 160, 89, 0.15) !important; /* خلفية ذهبية شفافة */
                color: #fbbf24 !important; /* نص ذهبي */
                transform: translateX(-5px); /* حركة لليسار */
            }

            .list-group-item i {
                width: 30px;
                text-align: center;
                font-size: 1.1rem;
                color: #64748b;
                transition: color 0.3s;
            }

            .list-group-item:hover i, .list-group-item.active i {
                color: #fbbf24; /* الأيقونة تصبح ذهبية */
            }

        .submenu-link {
            padding-right: 50px !important;
            font-size: 0.9rem;
            margin: 2px 12px; /* تصغير المسافة للقوائم الفرعية */
        }

        .arrow-icon {
            font-size: 0.8rem !important;
            width: auto !important;
            margin-right: auto;
            opacity: 0.7;
        }

        /* --- 5. الناف بار العائم (Floating Navbar) --- */
        #page-content-wrapper {
            width: 100%;
            padding: 0;
        }

        .navbar {
            margin: 20px; /* مسافة من جميع الجهات ليكون عائماً */
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.04);
            background-color: rgba(255, 255, 255, 0.95); /* شفافية بسيطة */
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,0,0,0.02);
            padding: 0.8rem 1rem;
        }

        .container-fluid-content {
            padding: 0 25px 25px 25px; /* المحتوى الداخلي */
        }

        /* --- 6. تنسيق كبسولة المستخدم --- */
        .user-info-pill {
            background-color: transparent;
            border: 1px solid #f1f5f9;
            border-radius: 50px;
            padding: 6px 16px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .user-info-pill:hover {
                background-color: #fff;
                box-shadow: 0 4px 15px rgba(0,0,0,0.05);
                border-color: #c5a059; /* حدود ذهبية عند اللمس */
            }

        .branch-badge {
            background-color: #e3f2fd;
            color: #0d6efd;
            padding: 5px 12px;
            border-radius: 12px;
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            gap: 8px;
            text-align: right;
            line-height: 1.2;
        }

        .user-avatar {
            width: 35px;
            height: 35px;
            background: linear-gradient(135deg, #0d6efd, #0a58ca);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            box-shadow: 0 2px 5px rgba(13, 110, 253, 0.3);
        }

        .user-name-text {
            font-weight: 700;
            color: #334155;
            font-size: 0.9rem;
        }

        @@media (max-width: 768px) {
            #sidebar-wrapper {
                margin-right: -270px;
            }

            #wrapper.toggled #sidebar-wrapper {
                margin-right: 0;
            }

            .navbar {
                margin: 10px;
                border-radius: 10px;
            }

            .container-fluid-content {
                padding: 0 15px 15px 15px;
            }
        }
    </style>
</head>
