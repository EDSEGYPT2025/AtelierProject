@page
@model AtelierProject.Pages.Reports.DailyModel
@using AtelierProject.Models
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "التقرير اليومي الشامل";
    var user = await UserManager.GetUserAsync(User);
}

<div class="container-fluid py-4">

    <div class="card bg-white border-0 shadow-sm mb-4 p-3 rounded-3">
        <form method="get" class="row align-items-center justify-content-center g-3">
            <div class="col-auto">
                <label class="fw-bold text-muted small text-uppercase">تاريخ التقرير</label>
                <input type="date" asp-for="ReportDate" class="form-control fw-bold border-primary" onchange="this.form.submit()" />
            </div>

            @if (user.BranchId == null)
            {
                <div class="col-auto">
                    <label class="fw-bold text-muted small text-uppercase">الفرع</label>
                    <select asp-for="SelectedBranchId" asp-items="ViewBag.BranchList" class="form-select fw-bold text-primary" onchange="this.form.submit()">
                        <option value="">-- الإجمالي (كل الفروع) --</option>
                    </select>
                </div>
            }

            <div class="col-auto align-self-end">
                <button type="submit" class="btn btn-dark px-4"><i class="fa-solid fa-sync me-2"></i> تحديث</button>
            </div>
        </form>
    </div>

    <div class="row g-3 mb-4">

        @if (user.CanAccessMenSection || user.BranchId == null)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 border-top border-4 border-dark">
                    <div class="card-body">
                        <h6 class="text-muted fw-bold text-uppercase mb-3"><i class="fa-solid fa-user-tie me-2"></i> قسم الرجال</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-success fw-bold"><i class="fa-solid fa-circle-plus"></i> إيراد حجوزات:</span>
                            <span>@Model.TotalCashIn_Men.ToString("N0")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-danger fw-bold"><i class="fa-solid fa-circle-minus"></i> مرتجع تأمين:</span>
                            <span class="text-danger">- @Model.TotalRefunds_Men.ToString("N0")</span>
                        </div>
                        <div class="bg-light p-2 rounded text-center">
                            <small class="text-muted">صافي الرجال</small>
                            <div class="fw-bold fs-5">@((Model.TotalCashIn_Men - Model.TotalRefunds_Men).ToString("N0"))</div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (user.CanAccessWomenSection || user.CanAccessBeautySection || user.BranchId == null)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 border-top border-4 border-danger">
                    <div class="card-body">
                        <h6 class="text-muted fw-bold text-uppercase mb-3"><i class="fa-solid fa-gem me-2"></i> حريمي وصالون</h6>

                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-success"><i class="fa-solid fa-shirt"></i> إيراد فساتين:</span>
                            <span>@Model.TotalCashIn_Women.ToString("N0")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-danger small ms-3">↳ مرتجع تأمين:</span>
                            <span class="text-danger small">- @Model.TotalRefunds_Women.ToString("N0")</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3 pt-2 border-top border-dashed">
                            <span class="text-success fw-bold"><i class="fa-solid fa-spa"></i> إيراد بيوتي سنتر:</span>
                            <span class="fw-bold">@Model.TotalCashIn_Beauty.ToString("N0")</span>
                        </div>

                        <div class="bg-light p-2 rounded text-center">
                            <small class="text-muted">صافي حريمي وصالون</small>
                            <div class="fw-bold fs-5 text-danger">
                                @(((Model.TotalCashIn_Women - Model.TotalRefunds_Women) + Model.TotalCashIn_Beauty).ToString("N0"))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 border-top border-4 border-warning bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-dark fw-bold text-uppercase mb-0"><i class="fa-solid fa-money-bill-transfer me-2"></i> المصروفات</h6>
                        <a asp-page="/Expenses/Index" class="btn btn-sm btn-outline-dark px-3 rounded-pill">التفاصيل</a>
                    </div>

                    <div class="text-center py-4">
                        <h1 class="display-6 fw-bold text-dark">@Model.TotalExpenses.ToString("N0")</h1>
                        <span class="badge bg-warning text-dark">إجمالي منصرف اليوم</span>
                    </div>

                    <div class="text-muted small text-center">
                        يشمل الرواتب، الفواتير، والمشتريات المسجلة بتاريخ اليوم.
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="card border-0 shadow-lg text-white" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
        <div class="card-body p-4 text-center">
            <h5 class="text-uppercase opacity-75 mb-1">الصافي الفعلي في الخزينة (الدرج)</h5>
            <h1 class="display-3 fw-bold mb-0">
                @Model.GrandTotalNet.ToString("N0") <span class="fs-4">ج.م</span>
            </h1>
            <p class="mb-0 mt-2 opacity-75 small">
                (إجمالي الإيرادات - إجمالي المرتجعات - إجمالي المصروفات)
            </p>
        </div>
    </div>

</div>