@page
@model AtelierProject.Pages.Reports.SafeModel
@using AtelierProject.Models
@{
    ViewData["Title"] = "تقرير الخزينة";
    var reportTitle = "كشف حساب حركة الخزينة";
    var branchTitle = Model.SelectedBranchId.HasValue ? "فرع محدد" : "كافة الفروع"; // يمكن تعديله ليجلب اسم الفرع
}

<style>
    /* --------------------------------------------------------
       تنسيقات الطباعة الاحترافية (A4 World Class Standard)
       -------------------------------------------------------- */
    @@media print {
        /* 1. إخفاء العناصر غير المرغوبة */
        #sidebar-wrapper, .navbar, .btn, form, .no-print, .card-header, .badge {
            display: none !important;
        }
        /* 2. ضبط الصفحة */
        body {
            background-color: #fff !important;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 12pt;
            color: #000;
            padding: 0;
            margin: 0;
        }

        .container-fluid {
            width: 100% !important;
            padding: 0 !important;
            margin: 0 !important;
        }
        /* 3. إظهار ترويسة الطباعة */
        .print-header {
            display: flex !important;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        /* 4. تنسيق الجدول الاحترافي */
        table {
            width: 100% !important;
            border-collapse: collapse !important;
            margin-bottom: 20px !important;
            font-size: 10pt;
        }

        th, td {
            border: 1px solid #444 !important;
            padding: 8px !important;
            text-align: center !important;
        }

        thead th {
            background-color: #f0f0f0 !important; /* لون رمادي فاتح */
            color: #000 !important;
            font-weight: bold !important;
            -webkit-print-color-adjust: exact; /* لضمان طباعة الخلفية الرمادية */
        }
        /* 5. ملخص الأرصدة (بديل الكروت الملونة) */
        .print-summary-box {
            display: block !important;
            margin-bottom: 20px;
            border: 1px solid #000;
            padding: 10px;
        }

        .print-summary-table {
            width: 100%;
            border: none !important;
        }

            .print-summary-table td {
                border: none !important;
                text-align: right !important;
                padding: 5px 15px;
            }
        /* 6. التذييل والتوقيعات */
        .print-footer {
            display: block !important;
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            font-size: 9pt;
            border-top: 1px solid #ccc;
            padding-top: 10px;
        }

        .signatures {
            display: flex !important;
            justify-content: space-between;
            margin-top: 50px;
            margin-bottom: 30px;
            page-break-inside: avoid;
        }

        .signature-box {
            width: 30%;
            border-top: 1px solid #000;
            text-align: center;
            padding-top: 5px;
        }
    }

    /* إخفاء عناصر الطباعة في الشاشة العادية */
    .print-header, .print-footer, .print-summary-box, .signatures {
        display: none;
    }
</style>

<div class="container-fluid py-4">

    <div class="print-header">
        <div class="text-end">
            <h2 class="m-0 fw-bold">Atelier System</h2> <p class="m-0">تقرير مالي رسمي</p>
        </div>
        <div class="text-center">
            <h3 class="fw-bold text-decoration-underline">@reportTitle</h3>
            <p class="m-0">عن الفترة من: <strong>@Model.FromDate.ToString("yyyy-MM-dd")</strong> إلى: <strong>@Model.ToDate.ToString("yyyy-MM-dd")</strong></p>
        </div>
        <div class="text-start">
            <p class="m-0">الفرع: <strong>@branchTitle</strong></p>
            <p class="m-0">تاريخ الطباعة: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</p>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div>
            <h2 class="fw-bold text-dark"><i class="fa-solid fa-vault me-2"></i> حركة الخزينة</h2>
        </div>
        <div>
            <button onclick="window.print()" class="btn btn-dark btn-lg px-4 shadow-sm">
                <i class="fa-solid fa-print me-2"></i> طباعة التقرير
            </button>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 no-print">
        <div class="card-body bg-light">
            <form method="get" class="row g-3 align-items-end">
                @if (Model.IsGeneralManager)
                {
                    <div class="col-md-2">
                        <label class="form-label fw-bold">الفرع</label>
                        <select asp-for="SelectedBranchId" class="form-select" asp-items="ViewBag.BranchId" onchange="this.form.submit()">
                            <option value="">-- كل الفروع --</option>
                        </select>
                    </div>
                }

                <div class="col-md-2">
                    <label class="form-label fw-bold">القسم</label>
                    <select asp-for="SelectedDepartment" class="form-select" asp-items="Html.GetEnumSelectList<DepartmentType>()" onchange="this.form.submit()">
                        <option value="">-- كل الأقسام --</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">المستخدم</label>
                    <select asp-for="SelectedUserId" class="form-select" asp-items="ViewBag.UserId" onchange="this.form.submit()">
                        <option value="">-- كل المستخدمين --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold">من</label>
                    <input asp-for="FromDate" type="date" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">إلى</label>
                    <input asp-for="ToDate" type="date" class="form-control" />
                </div>

                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100"><i class="fa fa-filter"></i></button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4 g-3 text-center no-print">
        <div class="col">
            <div class="card border-success border-start-4 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">إيرادات</h6>
                    <h4 class="text-success fw-bold">@Model.PeriodRevenue.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-info border-start-4 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-dark mb-2">تأمين مستلم</h6>
                    <h4 class="text-primary fw-bold">@Model.PeriodInsuranceIn.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-danger border-start-4 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">مصروفات</h6>
                    <h4 class="text-danger fw-bold">@Model.PeriodExpense.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-secondary border-start-4 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">تأمين مسترد</h6>
                    <h4 class="text-secondary fw-bold">@Model.PeriodInsuranceOut.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-dark text-white shadow-sm h-100">
                <div class="card-body">
                    <h6 class="opacity-75 mb-2">الصافي</h6>
                    <h4 class="fw-bold text-warning">@Model.PeriodNetFlow.ToString("N0")</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="print-summary-box">
        <h5 class="fw-bold mb-3 border-bottom pb-2">ملخص الفترة المالية</h5>
        <table class="print-summary-table">
            <tr>
                <td class="fw-bold">إجمالي الإيرادات:</td>
                <td>@Model.PeriodRevenue.ToString("N0") ج.م</td>
                <td class="fw-bold">إجمالي المصروفات:</td>
                <td>@Model.PeriodExpense.ToString("N0") ج.م</td>
            </tr>
            <tr>
                <td class="fw-bold">تأمين مستلم (داخل):</td>
                <td>@Model.PeriodInsuranceIn.ToString("N0") ج.م</td>
                <td class="fw-bold">تأمين مسترد (خارج):</td>
                <td>@Model.PeriodInsuranceOut.ToString("N0") ج.م</td>
            </tr>
            <tr style="font-size: 1.2rem; border-top: 1px solid #000;">
                <td class="fw-bold pt-2">صافي حركة الفترة:</td>
                <td class="pt-2 fw-bold">@Model.PeriodNetFlow.ToString("N0") ج.م</td>
                <td class="fw-bold pt-2">الرصيد الفعلي الحالي:</td>
                <td class="pt-2 fw-bold">@Model.TotalCashBalance.ToString("N0") ج.م</td>
            </tr>
        </table>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>التاريخ</th>
                        @if (Model.IsGeneralManager)
                        {
                            <th>الفرع</th>
                        }
                        <th>النوع</th>
                        <th>القسم</th>
                        <th>البيان</th>
                        <th>بواسطة</th>
                        <th class="text-end">المبلغ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Transactions.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">لا توجد حركات في هذه الفترة</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Transactions)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @item.TransactionDate.ToString("yyyy-MM-dd") <br />
                                    <small class="text-muted no-print">@item.TransactionDate.ToString("hh:mm tt")</small>
                                    <span class="d-none d-print-inline">@item.TransactionDate.ToString("hh:mm tt")</span>
                                </td>

                                @if (Model.IsGeneralManager)
                                {
                                    <td>
                                        <span class="no-print badge bg-light text-dark border">@item.Branch?.Name</span>
                                        <span class="d-none d-print-inline">@item.Branch?.Name</span>
                                    </td>
                                }

                                <td>
                                    @* للشاشة: ألوان وبادجات *@
                                    <span class="no-print">
                                        @switch (item.Type)
                                        {
                                            case TransactionType.Income:<span class="badge bg-success">إيراد</span> break;
                                            case TransactionType.Expense: <span class="badge bg-danger">مصروف</span> break;
                                            case TransactionType.InsuranceIn: <span class="badge bg-info text-dark">تأمين داخل</span> break;
                                            case TransactionType.InsuranceOut: <span class="badge bg-secondary">تأمين خارج</span>break;
                                        }
                                    </span>
                                    @* للطباعة: نص عادي *@
                                    <span class="d-none d-print-inline fw-bold">
                                        @switch (item.Type)
                                        {
                                            case TransactionType.Income:@:إيراد
                                                break;
                                            case TransactionType.Expense: @:مصروف
                                                break;
                                            case TransactionType.InsuranceIn: @:تأمين (قبض)
                                                break;
                                            case TransactionType.InsuranceOut: @:تأمين (رد)
                                                break;
                                        }
                                    </span>
                                </td>
                                <td>
                                    @switch (item.Department)
                                    {
                                        case DepartmentType.Men:<span>رجالي</span> break;
                                        case DepartmentType.Women: <span>حريمي</span> break;
                                        case DepartmentType.BeautySalon: <span>كوافير</span>break;
                                    }
                                </td>
                                <td class="text-start">@item.Description</td>

                                <td>
                                    @{
                                        string userName = "غير معروف";
                                        if (item.CreatedByUserId != null && Model.UserNames.ContainsKey(item.CreatedByUserId))
                                        {
                                            userName = Model.UserNames[item.CreatedByUserId];
                                        }
                                    }
                                    <span class="no-print badge bg-light text-secondary border">@userName</span>
                                    <span class="d-none d-print-inline">@userName</span>
                                </td>

                                <td class="text-end fw-bold">
                                    @item.Amount.ToString("N0")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="signatures">
        <div class="signature-box">
            <p class="mb-4">المحاسب</p>
            <p>..................</p>
        </div>
        <div class="signature-box">
            <p class="mb-4">مدير الفرع</p>
            <p>..................</p>
        </div>
        <div class="signature-box">
            <p class="mb-4">المدير العام</p>
            <p>..................</p>
        </div>
    </div>

    <div class="print-footer">
        <p>تم استخراج هذا التقرير آلياً من نظام Atelier System - صفحة رقم <span class="page-number"></span></p>
    </div>

</div>