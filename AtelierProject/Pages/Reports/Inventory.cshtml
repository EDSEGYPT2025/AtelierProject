@page
@model AtelierProject.Pages.Reports.InventoryModel
@using AtelierProject.Models
@{
    ViewData["Title"] = "تقرير جرد المنتجات";
}

<style>
    /* ========================================= */
    /* 👑 تنسيقات الثيم الملكي (للعرض على الشاشة) */
    /* ========================================= */

    .page-title {
        font-family: 'Playfair Display', serif;
        color: #1e293b;
        font-weight: 700;
    }

    /* كارت الفلتر */
    .filter-card {
        border: none;
        border-radius: 15px;
        background: #fff;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        margin-bottom: 25px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px 15px;
        border: 1px solid #e2e8f0;
    }

        .form-control:focus, .form-select:focus {
            border-color: #c5a059;
            box-shadow: 0 0 0 3px rgba(197, 160, 89, 0.1);
        }

    /* زر البحث */
    .btn-search-dark {
        background: #1e293b;
        color: #fff;
        border-radius: 10px;
        transition: 0.3s;
        font-weight: bold;
    }

        .btn-search-dark:hover {
            background: #0f172a;
            color: #fff;
        }

    /* كروت المجموعات (موديلات) */
    .inventory-group-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 20px;
        background: #fff;
        border-top: 3px solid #c5a059;
    }

    .group-header {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #e2e8f0;
    }

    /* الجدول الداخلي */
    .table-inventory th {
        font-size: 0.85rem;
        color: #64748b;
        font-weight: 600;
        background-color: #fff;
        border-bottom: 2px solid #f1f5f9;
    }

    .table-inventory td {
        vertical-align: middle;
        color: #334155;
        border-bottom: 1px solid #f8fafc;
    }

    /* شارات الحالة */
    .badge-avail {
        background-color: #dcfce7;
        color: #16a34a;
        border: 1px solid #bbf7d0;
    }

    .badge-rented {
        background-color: #fef9c3;
        color: #ca8a04;
        border: 1px solid #fde047;
    }

    .badge-maint {
        background-color: #e0f2fe;
        color: #0284c7;
        border: 1px solid #bae6fd;
    }

    .badge-other {
        background-color: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

    /* زر الطباعة العائم */
    .fab-print {
        position: fixed;
        bottom: 30px;
        left: 30px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1e293b, #0f172a);
        color: #c5a059;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        border: 2px solid #c5a059;
        transition: transform 0.3s;
        z-index: 1000;
        cursor: pointer;
    }

        .fab-print:hover {
            transform: scale(1.1) rotate(10deg);
            color: #fff;
        }

    /* ========================================= */
    /* 🖨️ إعدادات الطباعة (Print Styles) */
    /* ========================================= */
    @@media print {
        /* إخفاء العناصر غير الضرورية */
        #sidebar-wrapper, .navbar, .no-print, .filter-card, .fab-print, footer {
            display: none !important;
        }
        /* ضبط الصفحة */
        body, #wrapper, #page-content-wrapper {
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
            background-color: white !important;
            font-size: 12pt;
        }

        .container-fluid {
            padding: 0 !important;
        }
        /* تنسيق كروت الجرد للطباعة */
        .inventory-group-card {
            box-shadow: none !important;
            border: 1px solid #000 !important;
            border-top: none !important; /* إلغاء اللون الملون */
            margin-bottom: 15px !important;
            break-inside: avoid; /* منع قص الكارت بين الصفحات */
        }

        .group-header {
            background: #f0f0f0 !important; /* لون رمادي فاتح للطباعة */
            border-bottom: 1px solid #000 !important;
            color: #000 !important;
            -webkit-print-color-adjust: exact;
        }
        /* الجداول */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc !important;
            padding: 5px 10px !important;
            color: #000 !important;
        }
        /* الشارات */
        .badge {
            border: 1px solid #000 !important;
            color: #000 !important;
            background: transparent !important;
            padding: 2px 5px;
        }
        /* العناوين */
        h2, h3, h4, h5, p, span {
            color: #000 !important;
        }
        /* إظهار معلومات التقرير */
        .print-header {
            display: block !important;
            margin-bottom: 20px;
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }
    }

    .print-header {
        display: none;
    }
    /* مخفي في الشاشة العادية */
</style>

<div class="container-fluid py-4">

    <div class="print-header">
        <h2>Atelier Pro - تقرير جرد المخزون</h2>
        <p>تاريخ الطباعة: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div>
            <h3 class="page-title mb-1"><i class="fa-solid fa-boxes-stacked text-warning me-2"></i> تقرير الجرد</h3>
            <p class="text-muted small mb-0">عرض شامل لحالة المنتجات والمخزون الحالي</p>
        </div>
    </div>

    <div class="filter-card p-4 no-print">
        <form method="get" class="row g-3 align-items-end">
            @if (Model.IsAdmin)
            {
                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small">الفرع</label>
                    <select asp-for="BranchId" asp-items="ViewBag.BranchList" class="form-select">
                        <option value="">-- كل الفروع (تقرير شامل) --</option>
                    </select>
                </div>
            }
            <div class="col-md-4">
                <label class="form-label fw-bold text-muted small">القسم</label>
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<DepartmentType>()" class="form-select">
                    <option value="">-- كل الأقسام --</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-search-dark w-100">
                    <i class="fa-solid fa-search me-2"></i> عرض الجرد
                </button>
            </div>
        </form>
    </div>

    <div class="alert alert-light border d-flex justify-content-between align-items-center mb-4">
        <div>
            <strong>تاريخ التقرير:</strong> @DateTime.Now.ToString("yyyy-MM-dd")
        </div>
        <div>
            <strong>عدد الموديلات:</strong> @Model.InventoryGroups.Count
            <span class="mx-2">|</span>
            <strong>إجمالي القطع:</strong> @Model.InventoryGroups.Sum(g => g.ProductItems.Count)
        </div>
    </div>

    @if (!Model.InventoryGroups.Any())
    {
        <div class="text-center py-5">
            <i class="fa-solid fa-box-open fa-3x text-muted mb-3 opacity-50"></i>
            <p class="text-muted fw-bold">لا توجد منتجات مطابقة لخيارات البحث.</p>
        </div>
    }
    else
    {
        <div class="inventory-list">
            @foreach (var group in Model.InventoryGroups)
            {
                <div class="inventory-group-card">

                    <div class="group-header">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-white p-2 rounded-circle border shadow-sm no-print" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                @if (group.Department == DepartmentType.Men)
                                {
                                    <i class="fa-solid fa-user-tie text-dark"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-person-dress text-danger"></i>
                                }
                            </div>
                            <div>
                                <h5 class="fw-bold mb-0 text-dark">@group.Name</h5>
                                <span class="small text-muted font-monospace">Code: @group.Code</span>
                            </div>
                        </div>
                        <div class="text-end">
                            <div class="badge bg-dark text-white rounded-pill px-3 py-2">
                                العدد: @group.ProductItems.Count
                            </div>
                            <div class="small text-muted mt-1 no-print">
                                الإيجار: <span class="text-success fw-bold">@group.RentalPrice.ToString("N0")</span>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-inventory mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 20%;">الباركود</th>
                                    <th style="width: 30%;">اسم القطعة / الوصف</th>
                                    <th style="width: 15%;">المقاس</th>
                                    <th style="width: 20%;">الفرع الحالي</th>
                                    <th style="width: 15%;">الحالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in group.ProductItems)
                                {
                                    <tr>
                                        <td class="font-monospace text-muted">@item.Barcode</td>

                                        <td class="fw-bold">
                                            @(!string.IsNullOrEmpty(item.Name) ? item.Name : "نسخة قياسية")
                                        </td>

                                        <td><span class="badge bg-light text-dark border">@item.Size</span></td>

                                        <td>
                                            <i class="fa-solid fa-location-dot text-danger me-1 small no-print"></i>
                                            @(item.Branch?.Name ?? "المخزن الرئيسي")
                                        </td>

                                        <td>
                                            @switch (item.Status)
                                            {
                                                case ItemStatus.Available:
                                                    <span class="badge badge-avail">متاح</span>
                                                    break;
                                                case ItemStatus.Rented:
                                                    <span class="badge badge-rented">مؤجر</span>
                                                    break;
                                                case ItemStatus.Maintenance:
                                                    <span class="badge badge-maint">صيانة</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-other">@item.Status</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    }

    <button onclick="window.print()" class="fab-print no-print" title="طباعة التقرير">
        <i class="fa-solid fa-print"></i>
    </button>

</div>