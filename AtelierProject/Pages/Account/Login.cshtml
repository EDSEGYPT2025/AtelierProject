@page
@model AtelierProject.Pages.Account.LoginModel
@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = null; // نلغي اللايوت الافتراضي لأن هذه الصفحة لها تصميم خاص كامل الشاشة
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تسجيل الدخول - أتيليه برو</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-hover: #b08d4b;
            --dark-bg: #0f172a;
        }

        body {
            font-family: 'Cairo', sans-serif;
            margin: 0;
            height: 100vh;
            overflow: hidden;
            /* خلفية متدرجة فخمة */
            background: radial-gradient(circle at top right, #1e293b, #0f172a);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* دوائر خلفية للزينة (تعطي عمقاً للتصميم الزجاجي) */
        .decoration-circle {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            z-index: 0;
            opacity: 0.6;
        }

        .circle-1 {
            width: 300px;
            height: 300px;
            background: #c5a059;
            top: -50px;
            left: -50px;
            animation: float 6s infinite ease-in-out;
        }

        .circle-2 {
            width: 400px;
            height: 400px;
            background: #0d6efd;
            bottom: -100px;
            right: -100px;
            animation: float 8s infinite ease-in-out reverse;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(20px);
            }
        }

        /* كارت الزجاج */
        .glass-login-card {
            background: rgba(255, 255, 255, 0.05); /* شفافية عالية */
            backdrop-filter: blur(20px); /* تأثير الضباب */
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 3rem;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            z-index: 1;
            color: #fff;
            animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* الشعار والنص */
        .brand-logo {
            font-size: 2.5rem;
            color: var(--gold-primary);
            margin-bottom: 10px;
            display: inline-block;
            animation: pulse-glow 3s infinite ease-in-out;
        }

        .brand-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .brand-subtitle {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 2rem;
        }

        /* حقول الإدخال */
        .form-floating > .form-control {
            background: rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            border-radius: 12px;
        }

            .form-floating > .form-control:focus {
                background: rgba(0, 0, 0, 0.4);
                border-color: var(--gold-primary);
                box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
                color: #fff;
            }

        .form-floating > label {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: var(--gold-primary);
            opacity: 1;
        }

        /* زر الدخول */
        .btn-royal {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-hover));
            border: none;
            color: #fff;
            font-weight: bold;
            padding: 12px;
            border-radius: 12px;
            font-size: 1.1rem;
            transition: all 0.3s;
            margin-top: 10px;
        }

            .btn-royal:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(197, 160, 89, 0.3);
                color: #fff;
            }

        /* الشيك بوكس */
        .form-check-input {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
        }

            .form-check-input:checked {
                background-color: var(--gold-primary);
                border-color: var(--gold-primary);
            }

        .form-check-label {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            cursor: pointer;
        }

        /* حركة الشعار (نفس الموجودة في السايد بار) */
        @@keyframes pulse-glow {
            0% {
                transform: scale(1);
                text-shadow: 0 0 0 rgba(197, 160, 89, 0);
            }

            50% {
                transform: scale(1.05);
                text-shadow: 0 0 15px rgba(197, 160, 89, 0.5);
            }

            100% {
                transform: scale(1);
                text-shadow: 0 0 0 rgba(197, 160, 89, 0);
            }
        }
    </style>
</head>
<body>

    <div class="decoration-circle circle-1"></div>
    <div class="decoration-circle circle-2"></div>

    <div class="glass-login-card text-center">

        <div class="mb-2">
            <i class="fa-solid fa-gem brand-logo"></i>
        </div>
        <h3 class="brand-title">Atelier Pro</h3>
        <p class="brand-subtitle">مرحباً بك مجدداً، يرجى تسجيل الدخول</p>

        <form id="account" method="post" class="text-start">
            <div asp-validation-summary="ModelOnly" class="text-danger small text-center mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email"><i class="fa-solid fa-envelope me-2"></i> البريد الإلكتروني</label>
                <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password"><i class="fa-solid fa-lock me-2"></i> كلمة المرور</label>
                <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    تذكرني على هذا الجهاز
                </label>
            </div>

            <div class="d-grid">
                <button id="login-submit" type="submit" class="btn btn-royal shadow">
                    تسجيل الدخول <i class="fa-solid fa-arrow-left ms-2"></i>
                </button>
            </div>
        </form>

        <div class="mt-4 pt-3 border-top border-secondary opacity-50">
            <small class="text-white-50" style="font-size: 0.75rem;">جميع الحقوق محفوظة &copy; @DateTime.Now.Year Atelier Pro</small>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>