@page
@model AtelierProject.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

<style>
    /* 1. كارت الإعدادات الفخم */
    .settings-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08); /* ظل ناعم وكبير */
        overflow: hidden;
        background: #fff;
        transition: transform 0.3s ease;
    }

        .settings-card:hover {
            transform: translateY(-5px); /* حركة طفو بسيطة */
        }

    /* 2. الهيدر المتناسق مع السايد بار */
    .card-header-luxury {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%); /* نفس لون السايد بار */
        padding: 2.5rem 1rem;
        text-align: center;
        position: relative;
        border-bottom: 4px solid #c5a059; /* الخط الذهبي */
    }

    /* 3. الأيقونة المتحركة */
    .lock-icon-anim {
        font-size: 3rem;
        color: #c5a059;
        margin-bottom: 15px;
        display: inline-block;
        animation: pulse-gold 2s infinite;
    }

    @@keyframes pulse-gold {
        0% {
            transform: scale(1);
            text-shadow: 0 0 0 rgba(197, 160, 89, 0);
        }

        50% {
            transform: scale(1.1);
            text-shadow: 0 0 20px rgba(197, 160, 89, 0.6);
        }

        100% {
            transform: scale(1);
            text-shadow: 0 0 0 rgba(197, 160, 89, 0);
        }
    }

    .header-title {
        font-family: 'Playfair Display', serif;
        color: #fff;
        margin: 0;
        letter-spacing: 1px;
    }

    /* 4. حقول الإدخال العائمة */
    .form-floating > .form-control {
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        background-color: #f8fafc;
    }

        .form-floating > .form-control:focus {
            background-color: #fff;
            border-color: #c5a059;
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.1);
        }

    .form-floating > label {
        color: #64748b;
    }

    /* 5. زر الحفظ */
    .btn-save-luxury {
        background: linear-gradient(135deg, #c5a059, #b08d4b);
        color: #fff;
        border: none;
        padding: 12px;
        font-weight: bold;
        border-radius: 10px;
        width: 100%;
        font-size: 1.1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(197, 160, 89, 0.3);
    }

        .btn-save-luxury:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(197, 160, 89, 0.5);
            color: #fff;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success border-0 shadow-sm mb-4 text-center rounded-3 d-flex align-items-center justify-content-center gap-2">
                    <i class="fa-solid fa-circle-check fs-5"></i>
                    <span>@Model.StatusMessage</span>
                </div>
            }

            <div class="card settings-card">

                <div class="card-header-luxury">
                    <div class="lock-icon-anim">
                        <i class="fa-solid fa-user-lock"></i>
                    </div>
                    <h3 class="header-title">تحديث الأمان</h3>
                    <p class="text-white-50 mb-0 small">يرجى اختيار كلمة مرور قوية</p>
                </div>

                <div class="card-body p-4 pt-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4 small fw-bold text-center bg-light p-2 rounded"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" placeholder="Current Password" />
                            <label asp-for="Input.OldPassword"><i class="fa-solid fa-key me-2 text-muted"></i> كلمة المرور الحالية</label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="New Password" />
                            <label asp-for="Input.NewPassword"><i class="fa-solid fa-lock me-2 text-muted"></i> كلمة المرور الجديدة</label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword"><i class="fa-solid fa-check-double me-2 text-muted"></i> تأكيد كلمة المرور</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small ms-2"></span>
                        </div>

                        <button type="submit" class="btn btn-save-luxury">
                            تحديث وحفظ التغييرات
                        </button>
                    </form>
                </div>

                <div class="card-footer bg-white text-center py-3 border-0">
                    <a asp-page="/Index" class="btn btn-sm btn-light text-muted rounded-pill px-4">
                        <i class="fa fa-arrow-right me-1"></i> تخطي وعودة للرئيسية
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}