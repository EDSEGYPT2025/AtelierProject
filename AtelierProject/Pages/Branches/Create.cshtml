@page
@model AtelierProject.Pages.Branches.CreateModel

@{
    ViewData["Title"] = "إضافة فرع جديد";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fa fa-plus-circle"></i> بيانات الفرع الجديد</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Branch.Name" class="form-label fw-bold"></label>
                                <input asp-for="Branch.Name" class="form-control" placeholder="مثال: فرع مدينة نصر" />
                                <span asp-validation-for="Branch.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Branch.Phone" class="form-label fw-bold"></label>
                                <input asp-for="Branch.Phone" class="form-control" placeholder="01xxxxxxxxx" />
                                <span asp-validation-for="Branch.Phone" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Branch.Address" class="form-label fw-bold"></label>
                                <textarea asp-for="Branch.Address" class="form-control" rows="2" placeholder="العنوان بالتفصيل..."></textarea>
                                <span asp-validation-for="Branch.Address" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="Branch.IsMain" id="isMainCheck">
                                    <label class="form-check-label" for="isMainCheck">
                                        تعيين كفرع رئيسي (Main Branch)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 border-top pt-3 d-flex justify-content-end gap-2">
                            <a asp-page="Index" class="btn btn-secondary">إلغاء</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa fa-save"></i> حفظ البيانات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}