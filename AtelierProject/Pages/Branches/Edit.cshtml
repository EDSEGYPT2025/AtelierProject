@page
@model AtelierProject.Pages.Branches.EditModel

@{
    ViewData["Title"] = "تعديل بيانات الفرع";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fa fa-edit"></i> تعديل بيانات: @Model.Branch.Name</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Branch.Id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Branch.Name" class="form-label fw-bold"></label>
                                <input asp-for="Branch.Name" class="form-control" placeholder="مثال: فرع القاهرة" />
                                <span asp-validation-for="Branch.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Branch.CommercialName" class="form-label fw-bold"></label>
                                <input asp-for="Branch.CommercialName" class="form-control" placeholder="مثال: أتيليه مارينا - فرع المهندسين" />
                                <span asp-validation-for="Branch.CommercialName" class="text-danger"></span>
                                <div class="form-text small text-muted">سيظهر هذا الاسم في أعلى الفاتورة المطبوعة.</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Branch.Phone" class="form-label fw-bold"></label>
                                <input asp-for="Branch.Phone" class="form-control" />
                                <span asp-validation-for="Branch.Phone" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Branch.Address" class="form-label fw-bold"></label>
                                <textarea asp-for="Branch.Address" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Branch.Address" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="Branch.IsMain" id="isMainCheck">
                                    <label class="form-check-label" for="isMainCheck">
                                        هذا هو الفرع الرئيسي
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 border-top pt-3 d-flex justify-content-end gap-2">
                            <a asp-page="./Index" class="btn btn-secondary">رجوع</a>
                            <button type="submit" class="btn btn-warning px-4">
                                <i class="fa fa-check"></i> حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}