@page
@model IndexModel
@{
    Layout = null; // صفحة مستقلة بدون القائمة الجانبية
    ViewData["Title"] = "الرئيسية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>أتيليه برو - نظام الإدارة المتكامل</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;800&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">

    <style>
        :root {
            --royal-gold: #c5a059;
            --royal-gold-hover: #b08d4b;
            --royal-navy: #0f172a;
            --royal-dark: #020617;
            --text-light: #e2e8f0;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* --- Navbar --- */
        .navbar {
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 0;
            position: fixed;
            width: 100%;
            z-index: 1000;
            border-bottom: 1px solid rgba(197, 160, 89, 0.3);
        }
        .navbar-brand {
            font-family: 'Playfair Display', serif;
            color: var(--royal-gold) !important;
            font-size: 1.8rem;
            font-weight: bold;
            letter-spacing: 1px;
        }
        .nav-link {
            color: #fff !important;
            font-weight: 600;
            margin: 0 10px;
            transition: 0.3s;
        }
        .nav-link:hover { color: var(--royal-gold) !important; }

        .btn-royal {
            background: linear-gradient(135deg, var(--royal-gold), var(--royal-gold-hover));
            color: #fff;
            border: none;
            padding: 10px 30px;
            border-radius: 50px;
            font-weight: bold;
            box-shadow: 0 4px 15px rgba(197, 160, 89, 0.3);
            transition: all 0.3s ease;
        }
        .btn-royal:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(197, 160, 89, 0.5);
            color: #fff;
        }

        /* --- Hero Section --- */
        .hero-section {
            background: linear-gradient(135deg, var(--royal-navy) 0%, var(--royal-dark) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            color: white;
            padding-top: 80px;
            position: relative;
        }
        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: 800;
            line-height: 1.4;
            margin-bottom: 20px;
        }
        .hero-content span { color: var(--royal-gold); }
        .hero-content p {
            font-size: 1.2rem;
            color: var(--text-light);
            margin-bottom: 40px;
            font-weight: 300;
        }

        .floating-img {
            animation: float 6s ease-in-out infinite;
            filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
            border-radius: 20px;
            border: 2px solid rgba(197, 160, 89, 0.3);
        }

        @@keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
            100% { transform: translateY(0px); }
        }

        /* --- Features Cards --- */
        .feature-card {
            background: #fff;
            padding: 30px 25px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            transition: 0.3s;
            height: 100%;
            border-top: 4px solid transparent;
            position: relative;
            overflow: hidden;
        }
        .feature-card:hover {
            transform: translateY(-10px);
            border-top-color: var(--royal-gold);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }
        .icon-box {
            width: 60px;
            height: 60px;
            background: rgba(197, 160, 89, 0.1);
            color: var(--royal-gold);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }
        .feature-list {
            list-style: none;
            padding: 0;
            margin-top: 15px;
            font-size: 0.9rem;
            color: #666;
        }
        .feature-list li {
            margin-bottom: 8px;
            padding-right: 20px;
            position: relative;
        }
        .feature-list li::before {
            content: "✓";
            position: absolute;
            right: 0;
            color: var(--royal-gold);
            font-weight: bold;
        }

        /* --- Contact Section --- */
        .contact-section {
            background: #f1f5f9;
            padding: 80px 0;
        }
        .contact-link {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
        }
        .contact-item {
            background: white;
            padding: 20px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.03);
            transition: 0.3s;
            height: 100%;
        }
        .contact-link:hover .contact-item {
            transform: translateX(-5px);
            border-right: 4px solid var(--royal-gold);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .contact-icon {
            font-size: 1.5rem;
            color: var(--royal-gold);
            background: var(--royal-navy);
            width: 50px; height: 50px;
            border-radius: 12px;
            display: flex; align-items: center; justify-content: center;
            flex-shrink: 0;
        }

        /* --- Footer --- */
        footer {
            background: var(--royal-dark);
            color: #94a3b8;
            padding: 30px 0;
            border-top: 1px solid rgba(255,255,255,0.1);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#"><i class="fa-solid fa-gem me-2"></i> أتيليه برو</a>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" href="#home">الرئيسية</a></li>
                    <li class="nav-item"><a class="nav-link" href="#features">المكونات والمميزات</a></li>
