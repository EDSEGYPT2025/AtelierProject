@page
@model IndexModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="container-fluid py-4">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h3 class="fw-bold text-dark mb-0">لوحة القيادة</h3>
            <p class="text-muted small mb-0">نظرة عامة على نشاط اليوم</p>
        </div>
        <div class="text-end">
            <span class="badge bg-white text-dark shadow-sm border p-2">
                <i class="fa-regular fa-calendar me-2"></i> @DateTime.Now.ToString("dddd, dd MMMM yyyy")
            </span>
        </div>
    </div>

    <div class="row g-3 mb-5">

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small fw-bold">تسليمات اليوم</h6>
                            <h2 class="mb-0 fw-bold text-info">@Model.PickupsTodayCount</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                            <i class="fa-solid fa-shirt fa-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small fw-bold">مرتجعات اليوم</h6>
                            <h2 class="mb-0 fw-bold text-success">@Model.ReturnsTodayCount</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                            <i class="fa-solid fa-rotate-left fa-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small fw-bold">حجوزات نشطة (خارج)</h6>
                            <h2 class="mb-0 fw-bold text-warning">@Model.ActiveRentalsCount</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                            <i class="fa-solid fa-clock fa-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger bg-danger bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-danger text-uppercase small fw-bold">متأخرات (تنبيه!)</h6>
                            <h2 class="mb-0 fw-bold text-danger">@Model.OverdueCount</h2>
                        </div>
                        <div class="bg-white p-3 rounded-circle text-danger shadow-sm">
                            <i class="fa-solid fa-bell fa-shake fa-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-danger"><i class="fa-solid fa-triangle-exclamation me-2"></i> تنبيهات التأخير</h6>
                    <small class="text-muted">يجب الاتصال بهم</small>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light small">
                            <tr>
                                <th>رقم الحجز</th>
                                <th>العميل</th>
                                <th>كان المفروض يرجع</th>
                                <th>تأخير (أيام)</th>
                                <th>إجراء</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.OverdueBookings.Any())
                            {
                                @foreach (var item in Model.OverdueBookings)
                                {
                                    var delayDays = (DateTime.Today - item.ReturnDate.Date).Days;
                                    <tr>
                                        <td class="fw-bold">#@item.Id</td>
                                        <td>
                                            <div>@item.Client.Name</div>
                                            <a href="tel:@item.Client.Phone" class="small text-decoration-none">@item.Client.Phone</a>
                                        </td>
                                        <td class="text-danger">@item.ReturnDate.ToString("dd/MM")</td>
                                        <td><span class="badge bg-danger rounded-pill">@delayDays يوم</span></td>
                                        <td>
                                            <a asp-page="/Bookings/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">
                                                <i class="fa-solid fa-arrow-left"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted small">
                                        <i class="fa-solid fa-check-circle text-success mb-2 fs-4 d-block"></i>
                                        ممتاز! لا توجد متأخرات اليوم.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-clipboard-list me-2"></i> تجهيز تسليمات اليوم</h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light small">
                            <tr>
                                <th>رقم الحجز</th>
                                <th>العميل</th>
                                <th>القطع</th>
                                <th>إجراء</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TodaysPickups.Any())
                            {
                                @foreach (var item in Model.TodaysPickups)
                                {
                                    <tr>
                                        <td class="fw-bold">#@item.Id</td>
                                        <td>@item.Client.Name</td>
                                        <td>
                                            @foreach (var p in item.BookingItems)
                                            {
                                                <span class="badge bg-secondary me-1">@p.ProductItem?.ProductDefinition?.Name</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-page="/Bookings/Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                تسليم <i class="fa-solid fa-truck-fast ms-1"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted small">
                                        لا توجد تسليمات مقررة اليوم.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>